<Page x:Class="SGA_Desktop.Views.TraspasosStockView"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:helpers="clr-namespace:SGA_Desktop.Helpers"
      mc:Ignorable="d"
      Title="Traspasos de Stock">
    <Grid Background="{StaticResource BrushFondo}" Margin="20">
        <Grid.Resources>
            <helpers:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter" />
            <helpers:InverseBoolToVisibilityConverter x:Key="InverseBoolToVisibilityConverter" />
            <helpers:NullToBoolConverter x:Key="NullToBoolConverter" />
            <helpers:ZeroToCollapsedConverter x:Key="ZeroToCollapsedConverter" />
            <DataTemplate x:Key="ArticuloExpanderHeaderTemplate">
                <StackPanel Orientation="Horizontal" Margin="8,2">
                    <TextBlock Text="{Binding CodigoArticulo}" 
                               FontWeight="Bold" 
                               Foreground="{StaticResource BrushPrincipal}" 
                               FontSize="16"/>
                    <TextBlock Text=" - " FontSize="16"/>
                    <TextBlock Text="{Binding DescripcionArticulo}" 
                               Foreground="#444" 
                               FontSize="16"/>
                </StackPanel>
            </DataTemplate>
        </Grid.Resources>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/> <!-- Buscador -->
            <RowDefinition Height="Auto"/> <!-- Tabla de stock -->
            <RowDefinition Height="Auto"/> <!-- Formulario -->
            <RowDefinition Height="*"/>   <!-- Últimos traspasos -->
        </Grid.RowDefinitions>

        <!-- Buscador de artículo -->
        <StackPanel Orientation="Horizontal" Margin="0,0,0,16" Grid.Row="0">
            <TextBlock Text="Buscar artículo:" Style="{StaticResource LabelStyle}" VerticalAlignment="Center"/>
            <TextBox Width="200" Margin="8,0,0,0" Style="{StaticResource EstiloCajaTexto}"
                     Text="{Binding ArticuloBuscado, UpdateSourceTrigger=PropertyChanged}"/>
            <Button Content="🔍" Width="40" Height="40" Margin="8,0,0,0" Style="{StaticResource EstiloBotonPrincipal}"
                    Command="{Binding BuscarStockCommand}"/>
            <Button Content="Traspaso múltiple"
                    Width="140" Height="40" Margin="16,0,0,0"
                    HorizontalAlignment="Right"
                    Command="{Binding AbrirDialogoRegularizacionMultipleCommand}"
                    Style="{StaticResource EstiloBotonPrincipal}"/>
        </StackPanel>

        <!-- Stock disponible: agrupado o clásico -->
        <GroupBox Header="Stock disponible" Margin="0,0,0,16" Grid.Row="1">
            <ScrollViewer VerticalScrollBarVisibility="Auto" Height="300">
                <Grid>
                    <ItemsControl ItemsSource="{Binding ArticulosConUbicaciones}">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Expander HeaderTemplate="{StaticResource ArticuloExpanderHeaderTemplate}" Header="{Binding .}" Margin="0,0,0,8">
                                    <ItemsControl ItemsSource="{Binding Ubicaciones}">
                                        <ItemsControl.ItemTemplate>
                                            <DataTemplate>
                                                <Button Command="{Binding DataContext.SeleccionarStockCommand, RelativeSource={RelativeSource AncestorType=Page}}"
                                                        CommandParameter="{Binding}"
                                                        Background="Transparent"
                                                        BorderThickness="0"
                                                        Padding="0"
                                                        HorizontalContentAlignment="Stretch"
                                                        VerticalContentAlignment="Stretch">
                                                    <Button.Style>
                                                        <Style TargetType="Button" BasedOn="{StaticResource {x:Type Button}}">
                                                            <Setter Property="Template">
                                                                <Setter.Value>
                                                                    <ControlTemplate TargetType="Button">
                                                                        <Border x:Name="CardBorder"
                                                                                Style="{StaticResource EstiloTarjeta}"
                                                                                BorderBrush="{StaticResource BrushPrincipal}"
                                                                                BorderThickness="2"
                                                                                Background="White"
                                                                                Margin="0,0,0,10">
                                                                            <Grid Margin="8,4">
                                                                                <Grid.RowDefinitions>
                                                                                    <RowDefinition Height="Auto"/>
                                                                                    <RowDefinition Height="Auto"/>
                                                                                </Grid.RowDefinitions>
                                                                                <Grid.ColumnDefinitions>
                                                                                    <ColumnDefinition Width="*"/>
                                                                                    <ColumnDefinition Width="220"/>
                                                                                </Grid.ColumnDefinitions>

                                                                                <!-- Fila 1: Datos principales -->
                                                                                <StackPanel Grid.Row="0" Grid.Column="0" Orientation="Horizontal" Margin="0,0,0,0" >
                                                                                    <TextBlock Text="Almacén:" FontWeight="Bold" Foreground="{StaticResource BrushPrincipal}"/>
                                                                                    <TextBlock Text="{Binding CodigoAlmacen}" Margin="2,0,12,0"/>
                                                                                    <TextBlock Text="Ubicación:" FontWeight="Bold" Foreground="{StaticResource BrushPrincipal}"/>
                                                                                    <TextBlock Text="{Binding Ubicacion}" Margin="2,0,12,0"/>
                                                                                    <TextBlock Text="Lote:" FontWeight="Bold" Foreground="{StaticResource BrushPrincipal}"/>
                                                                                    <TextBlock Text="{Binding Partida}" Margin="2,0,12,0"/>
                                                                                    <TextBlock Text="Caducidad:" FontWeight="Bold" Foreground="{StaticResource BrushPrincipal}"/>
                                                                                    <TextBlock Text="{Binding FechaCaducidad, StringFormat=d}" Margin="2,0,0,0"/>
                                                                                </StackPanel>

                                                                                <!-- Fila 2: Total, Reservado -->
                                                                                <StackPanel Grid.Row="1" Grid.Column="0" Orientation="Horizontal" Margin="0,4,0,0">
                                                                                    <TextBlock Text="Total:" FontWeight="Bold" Foreground="{StaticResource BrushPrincipal}"/>
                                                                                    <TextBlock Text="{Binding UnidadSaldo, StringFormat=F4}" Margin="2,0,12,0"/>
                                                                                    <TextBlock Text="Reservado:" FontWeight="Bold" Foreground="{StaticResource BrushPrincipal}" Visibility="{Binding Reservado, Converter={StaticResource ZeroToCollapsedConverter}}"/>
                                                                                    <TextBlock Text="{Binding Reservado, StringFormat=F4}" Margin="2,0,0,0" Visibility="{Binding Reservado, Converter={StaticResource ZeroToCollapsedConverter}}"/>
                                                                                </StackPanel>

                                                                                <!-- Disponible destacado a la derecha -->
                                                                                <Border Grid.Row="0" Grid.RowSpan="2" Grid.Column="1" Background="#F0F6FF" CornerRadius="6" Padding="12,4" HorizontalAlignment="Right" VerticalAlignment="Center">
                                                                                    <StackPanel Orientation="Horizontal">
                                                                                        <TextBlock Text="Disponible:" FontWeight="Bold" Foreground="{StaticResource BrushPrincipal}" FontSize="15" Margin="0,0,4,0"/>
                                                                                        <TextBlock Text="{Binding Disponible, StringFormat=F4}"  FontWeight="Bold" FontSize="22"/>
                                                                                    </StackPanel>
                                                                                </Border>
                                                                            </Grid>
                                                                        </Border>
                                                                        <ControlTemplate.Triggers>
                                                                            <Trigger Property="IsMouseOver" Value="True">
                                                                                <Setter TargetName="CardBorder" Property="Background" Value="#E6F0FA"/>
                                                                            </Trigger>
                                                                            <Trigger Property="IsPressed" Value="True">
                                                                                <Setter TargetName="CardBorder" Property="BorderBrush" Value="#031ca5"/>
                                                                            </Trigger>
                                                                            <Trigger Property="IsKeyboardFocused" Value="True">
                                                                                <Setter TargetName="CardBorder" Property="BorderBrush" Value="#031ca5"/>
                                                                            </Trigger>
                                                                        </ControlTemplate.Triggers>
                                                                    </ControlTemplate>
                                                                </Setter.Value>
                                                            </Setter>
                                                        </Style>
                                                    </Button.Style>
                                                </Button>
                                            </DataTemplate>
                                        </ItemsControl.ItemTemplate>
                                    </ItemsControl>
                                </Expander>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </Grid>
            </ScrollViewer>
        </GroupBox>

        <!-- Formulario de traspaso -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,0,0,16">
            <Button Content="Traspasar" Width="140" Height="40" Style="{StaticResource EstiloBotonPrincipal}"
                    IsEnabled="{Binding StockSeleccionado, Converter={StaticResource NullToBoolConverter}}"
                    Command="{Binding AbrirDialogoTraspasoCommand}"/>
        </StackPanel>

        <!-- Feedback y últimos traspasos -->
        <StackPanel Grid.Row="3">
            <TextBlock Foreground="Red" FontWeight="Bold" Margin="0,0,0,8"
                       Text="{Binding Feedback}"/>
            <GroupBox Header="Últimos traspasos realizados">
                <DataGrid ItemsSource="{Binding UltimosTraspasos}"
                          AutoGenerateColumns="False"
                          Style="{StaticResource EstiloDataGrid}"
                          ColumnHeaderStyle="{StaticResource EstiloDataGridHeader}"
                          Height="120">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Fecha" Binding="{Binding Fecha}"/>
                        <DataGridTextColumn Header="Artículo" Binding="{Binding CodigoArticulo}"/>
                        <DataGridTextColumn Header="Origen" Binding="{Binding Origen}"/>
                        <DataGridTextColumn Header="Destino" Binding="{Binding Destino}"/>
                        <DataGridTextColumn Header="Cantidad" Binding="{Binding Cantidad}"/>
                        <DataGridTextColumn Header="Estado" Binding="{Binding Estado}"/>
                    </DataGrid.Columns>
                </DataGrid>
            </GroupBox>
        </StackPanel>
    </Grid>
</Page> 