<Page x:Class="SGA_Desktop.Views.GestionUbicacionesView"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      mc:Ignorable="d"
      d:DesignHeight="600" d:DesignWidth="900"
      Title="Gestión de Ubicaciones">

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Selector de almacén -->
        <StackPanel Orientation="Horizontal" Grid.Row="0" Margin="0,0,0,10">
            <TextBlock Text="Almacén:" 
                 VerticalAlignment="Center" 
                 Margin="0,0,5,0"/>
            <ComboBox Width="120"
                ItemsSource="{Binding Almacenes}"
                SelectedItem="{Binding SelectedAlmacen, Mode=TwoWay}"/>
        </StackPanel>

        <!-- ListView que se estira -->
        <ListView Grid.Row="1"
              ItemsSource="{Binding Ubicaciones}"
              SelectedItem="{Binding SelectedUbicacion}"
              BorderThickness="0"
              Margin="0"
              HorizontalContentAlignment="Stretch"
              VerticalContentAlignment="Top">

            <!-- Cada item también se estira -->
            <ListView.ItemContainerStyle>
                <Style TargetType="ListViewItem">
                    <Setter Property="Padding" Value="0"/>
                    <Setter Property="Margin" Value="0,0,0,10"/>
                    <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                    <Setter Property="VerticalContentAlignment" Value="Top"/>
                </Style>
            </ListView.ItemContainerStyle>

            <ListView.ItemTemplate>
                <DataTemplate>
                    <Border Padding="10"
                  BorderBrush="LightGray"
                  BorderThickness="1"
                  CornerRadius="5"
                  Background="White"
                  HorizontalAlignment="Stretch">
                        <Border.Effect>
                            <DropShadowEffect ShadowDepth="2"
                                BlurRadius="6"
                                Opacity="0.3"/>
                        </Border.Effect>

                        <Expander HorizontalAlignment="Stretch">
                            <!-- HEADER -->
                            <Expander.Header>
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="2*"/>
                                        <ColumnDefinition Width="1*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>

                                    <StackPanel Orientation="Vertical" Grid.Column="0">
                                        <TextBlock Text="{Binding Ubicacion}"
                               FontSize="14"
                               FontWeight="Bold"/>
                                        <TextBlock Text="{Binding DescripcionUbicacion}"
                               FontSize="12"
                               Foreground="Gray"
                               Margin="0,2,0,0"/>
                                    </StackPanel>

                                    <TextBlock Text="{Binding TipoUbicacion}"
                             Grid.Column="1"
                             VerticalAlignment="Center"
                             FontStyle="Italic"
                             Margin="10,0,0,0"/>

                                    <CheckBox IsChecked="{Binding Habilitada}"
                            Grid.Column="2"
                            VerticalAlignment="Center"
                            Content="Activo"
                            Margin="10,0,0,0"/>
                                </Grid>
                            </Expander.Header>

                            <!-- CONTENT -->
                            <Expander.Content>
                                <StackPanel>
                                    <WrapPanel Margin="0,5,0,0">
                                        <TextBlock Text="Pasillo:" FontWeight="Bold"/>
                                        <TextBlock Text="{Binding Pasillo}" Margin="5,0,0,0"/>
                                        <TextBlock Text="Estantería:" FontWeight="Bold" Margin="20,0,0,0"/>
                                        <TextBlock Text="{Binding Estanteria}" Margin="5,0,0,0"/>
                                        <TextBlock Text="Altura:" FontWeight="Bold" Margin="20,0,0,0"/>
                                        <TextBlock Text="{Binding Altura}" Margin="5,0,0,0"/>
                                        <TextBlock Text="Posición:" FontWeight="Bold" Margin="20,0,0,0"/>
                                        <TextBlock Text="{Binding Posicion}" Margin="5,0,0,0"/>
                                    </WrapPanel>

                                    <WrapPanel Margin="0,5,0,0">
                                        <TextBlock Text="Temp. Mín (°C):" FontWeight="Bold"/>
                                        <TextBlock Text="{Binding TemperaturaMin}" Margin="5,0,0,0"/>
                                        <TextBlock Text="Temp. Máx (°C):" FontWeight="Bold" Margin="20,0,0,0"/>
                                        <TextBlock Text="{Binding TemperaturaMax}" Margin="5,0,0,0"/>
                                        <TextBlock Text="Tipo Palet:" FontWeight="Bold" Margin="20,0,0,0"/>
                                        <TextBlock Text="{Binding TipoPaletPermitido}" Margin="5,0,0,0"/>
                                    </WrapPanel>

                                    <GroupBox Header="Alérgenos Presentes"
                            IsEnabled="False"
                            Margin="0,5,0,0">
                                        <TextBlock Text="{Binding AlergenosPresentes}"
                               TextWrapping="Wrap"/>
                                    </GroupBox>

                                    <GroupBox Header="Alérgenos Permitidos"
                            Margin="0,5,0,0">
                                        <TextBlock Text="{Binding AlergenosPermitidos}"
                               TextWrapping="Wrap"/>
                                    </GroupBox>

                                    <CheckBox Content="Riesgo de Contaminación"
                            IsChecked="{Binding RiesgoContaminacion}"
                            IsEnabled="False"
                            Margin="0,5,0,0"/>
                                </StackPanel>
                            </Expander.Content>
                        </Expander>
                    </Border>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </Grid>
</Page>
