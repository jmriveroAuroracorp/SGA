<Page x:Class="SGA_Desktop.Views.InventarioView"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:vm="clr-namespace:SGA_Desktop.ViewModels"
      xmlns:helpers="clr-namespace:SGA_Desktop.Helpers"
      mc:Ignorable="d"
      Background="{StaticResource BrushFondo}">

    <Page.DataContext>
        <vm:InventarioViewModel />
    </Page.DataContext>

    <Page.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVis" />
        <helpers:NullOrEmptyToVisibilityConverter x:Key="NullOrEmptyToVisibility"/>
        <helpers:BindingProxy x:Key="VmProxy" Data="{Binding}" />
    </Page.Resources>

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <!-- 0: Título y botón crear -->
            <RowDefinition Height="Auto" />
            <!-- 1: Filtros -->
            <RowDefinition Height="Auto" />
            <!-- 2: Lista de inventarios -->
            <RowDefinition Height="*" />
            <!-- 3: Botones de acción -->
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!-- TÍTULO Y BOTÓN CREAR -->
        <Grid Grid.Row="0" Margin="0,0,0,20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>

            <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                <TextBlock Text="📊 GESTIÓN DE INVENTARIOS"
                           FontFamily="{StaticResource FuentePrincipal}"
                           FontSize="24"
                           FontWeight="Bold"
                           Foreground="{StaticResource BrushPrincipal}"/>
            </StackPanel>

            <Button Grid.Column="1"
                    Content="➕ Crear Inventario"
                    Command="{Binding CrearInventarioCommand}"
                    Style="{StaticResource EstiloBotonPrincipal}"
                    Width="180"
                    Height="40"
                    FontSize="14"
                    FontWeight="Bold"
                    IsEnabled="{Binding CanEnableInputs}"/>
        </Grid>

        <!-- FILTROS -->
        <GroupBox Grid.Row="1" Header="🔍 Filtros de Búsqueda" Margin="0,0,0,20">
            <Grid Margin="15">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Almacén -->
                <StackPanel Grid.Column="0" Margin="0,0,15,0">
                    <TextBlock Text="Almacén" FontWeight="Bold" Margin="0,0,0,5" FontSize="12"/>
                    <ComboBox 
                              ItemsSource="{Binding AlmacenesCombo}"
                              DisplayMemberPath="DescripcionCombo"
                              SelectedItem="{Binding AlmacenSeleccionadoCombo}"
                              Style="{StaticResource EstiloComboBox}"
                              Height="30"/>
                </StackPanel>

                <!-- Fecha desde -->
                <StackPanel Grid.Column="1" Margin="0,0,15,0">
                    <TextBlock Text="Desde" FontWeight="Bold" Margin="0,0,0,5" FontSize="12"/>
                    <DatePicker 
                            SelectedDate="{Binding FechaDesde}" 
                            Style="{StaticResource EstiloDatePicker}"
                                Height="30"/>
                </StackPanel>

                <!-- Fecha hasta -->
                <StackPanel Grid.Column="2" Margin="0,0,15,0">
                    <TextBlock Text="Hasta" FontWeight="Bold" Margin="0,0,0,5" FontSize="12"/>
                    <DatePicker 
                            SelectedDate="{Binding FechaHasta}" 
                            Style="{StaticResource EstiloDatePicker}"
                                Height="30"/>
                </StackPanel>

                <!-- Estado -->
                <StackPanel Grid.Column="3" Margin="0,0,15,0">
                    <TextBlock Text="Estado" FontWeight="Bold" Margin="0,0,0,5" FontSize="12"/>
                    <ComboBox 
                          ItemsSource="{Binding Source={StaticResource EstadosInventario}}"
                          SelectedItem="{Binding EstadoFiltro}"
                          Style="{StaticResource EstiloComboBox}"
                              Height="30"/>
                </StackPanel>

                <!-- Botón cargar -->
                <StackPanel Grid.Column="4" VerticalAlignment="Center">
                    <Button 
                            Content="🔄 Cargar"
                        Command="{Binding CargarInventariosCommand}"
                        Style="{StaticResource EstiloBoton}"
                            Width="100"
                        Height="30"
                            IsEnabled="{Binding CanCargarInventarios}"/>
                </StackPanel>
            </Grid>
        </GroupBox>

                <!-- LISTA DE INVENTARIOS -->
        <GroupBox Grid.Row="2" Header="📋 Inventarios Registrados">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Estado de carga -->
                <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,10" 
                            Visibility="{Binding IsCargando, Converter={StaticResource BoolToVis}}">
                    <ProgressBar Width="20" Height="20" 
                                 IsIndeterminate="True" 
                                 Margin="0,0,10,0"/>
                    <TextBlock Text="{Binding MensajeEstado}" 
                               VerticalAlignment="Center"
                               Foreground="{StaticResource BrushSecundario}"
                               FontStyle="Italic"/>
                </StackPanel>

                <!-- Lista de cards de inventarios -->
                <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                    <ItemsControl ItemsSource="{Binding InventariosView}">
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <WrapPanel Orientation="Horizontal"/>
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border Style="{StaticResource EstiloTarjeta}" 
                                        Width="350" 
                                        Height="280" 
                                        Margin="6"
                                        Cursor="Hand">
                                    <Grid>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="*"/>
                                            <RowDefinition Height="Auto"/>
                                        </Grid.RowDefinitions>

                                        <!-- Header con ID y Estado -->
                                        <Grid Grid.Row="0" Margin="0,0,0,10">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>

                                            <!-- ID -->
                                            <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                                                <TextBlock Text="ID: " 
                                                           FontWeight="Bold" 
                                                           Foreground="{StaticResource BrushPrincipal}"
                                                           FontSize="14"
                                                           VerticalAlignment="Center"/>
                                                <TextBlock Text="{Binding IdInventarioCorto}" 
                                                           FontFamily="Consolas"
                                                           FontWeight="Bold"
                                                           Foreground="#2C3E50"
                                                           FontSize="14"
                                                           VerticalAlignment="Center"/>
                                            </StackPanel>

                                            <!-- Estado Badge -->
                                            <Border Grid.Column="1" 
                                                    Background="#F8F9FA" 
                                                    BorderBrush="#DEE2E6" 
                                                    BorderThickness="1" 
                                                    CornerRadius="3" 
                                                    Padding="6,3"
                                                    VerticalAlignment="Center">
                                                <TextBlock Text="{Binding EstadoFormateado}" 
                                                           FontWeight="SemiBold" 
                                                           FontSize="12"
                                                           HorizontalAlignment="Center">
                                                    <TextBlock.Style>
                            <Style TargetType="TextBlock">
                                <Style.Triggers>
                                                                <DataTrigger Binding="{Binding Estado}" Value="ABIERTO">
                                                                    <Setter Property="Foreground" Value="#198754"/>
                                                                </DataTrigger>
                                                                <DataTrigger Binding="{Binding Estado}" Value="PENDIENTE_CIERRE">
                                                                    <Setter Property="Foreground" Value="#FD7E14"/>
                                                                </DataTrigger>
                                                                <DataTrigger Binding="{Binding Estado}" Value="CERRADO">
                                                                    <Setter Property="Foreground" Value="#6C757D"/>
                                                                </DataTrigger>
                                                            </Style.Triggers>
                                                        </Style>
                                                    </TextBlock.Style>
                                                </TextBlock>
                                                <Border.Style>
                                                    <Style TargetType="Border">
                                                        <Style.Triggers>
                                                            <DataTrigger Binding="{Binding Estado}" Value="ABIERTO">
                                                                <Setter Property="Background" Value="#D1E7DD"/>
                                                                <Setter Property="BorderBrush" Value="#198754"/>
                                                            </DataTrigger>
                                                            <DataTrigger Binding="{Binding Estado}" Value="PENDIENTE_CIERRE">
                                                                <Setter Property="Background" Value="#FFF3CD"/>
                                                                <Setter Property="BorderBrush" Value="#FD7E14"/>
                                    </DataTrigger>
                                                            <DataTrigger Binding="{Binding Estado}" Value="CERRADO">
                                                                <Setter Property="Background" Value="#F8F9FA"/>
                                                                <Setter Property="BorderBrush" Value="#6C757D"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                                                </Border.Style>
                                            </Border>
                                        </Grid>

                                        <!-- Contenido principal -->
                                        <StackPanel Grid.Row="1" Margin="0,0,0,12">
                                            <!-- Almacén y Tipo -->
                                            <Grid Margin="0,0,0,8">
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="Auto"/>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="Auto"/>
                                                    <ColumnDefinition Width="Auto"/>
                                                </Grid.ColumnDefinitions>

                                                <TextBlock Grid.Column="0" Text="Almacén: " 
                                                           FontWeight="SemiBold" 
                                                           FontSize="12"
                                                           Foreground="#7F8C8D"/>
                                                <TextBlock Grid.Column="1" Text="{Binding CodigoAlmacen}" 
                                                           FontWeight="Bold" 
                                                           FontSize="12"
                                                           Foreground="#34495E"/>
                                                <TextBlock Grid.Column="2" Text="Tipo: " 
                                                           FontWeight="SemiBold" 
                                                           FontSize="12"
                                                           Foreground="#7F8C8D"
                                                           Margin="10,0,0,0"/>
                                                <TextBlock Grid.Column="3" Text="{Binding TipoInventarioFormateado}" 
                                                           FontWeight="Bold" 
                                                           FontSize="12"
                                                           Foreground="#34495E"/>
                                            </Grid>

                                            <!-- Creador -->
                                            <Grid Margin="0,0,0,8">
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="Auto"/>
                                                    <ColumnDefinition Width="*"/>
                                                </Grid.ColumnDefinitions>

                                                <TextBlock Grid.Column="0" Text="Creado por: " 
                                                           FontWeight="SemiBold" 
                                                           FontSize="12"
                                                           Foreground="#7F8C8D"/>
                                                <TextBlock Grid.Column="1" Text="{Binding UsuarioCreacionNombre}" 
                                                           FontWeight="Bold" 
                                                           FontSize="12"
                                                           Foreground="#34495E"
                                                           TextTrimming="CharacterEllipsis"/>
                                            </Grid>

                                            <!-- Rango Ubicaciones -->
                                            <Grid Margin="0,0,0,8">
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="Auto"/>
                                                    <ColumnDefinition Width="*"/>
                                                </Grid.ColumnDefinitions>

                                                <TextBlock Grid.Column="0" Text="Rango: " 
                                                           FontWeight="SemiBold" 
                                                           FontSize="12"
                                                           Foreground="#7F8C8D"/>
                                                <TextBlock Grid.Column="1" Text="{Binding RangoUbicaciones}" 
                                                           FontFamily="Consolas"
                                                           FontWeight="Bold" 
                                                           FontSize="12"
                                                           Foreground="#2C3E50"/>
                                            </Grid>

                                            <!-- Comentarios -->
                                            <Grid Margin="0,0,0,8">
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="Auto"/>
                                                    <ColumnDefinition Width="*"/>
                                                </Grid.ColumnDefinitions>

                                                <TextBlock Grid.Column="0" Text="Comentarios: " 
                                                           FontWeight="SemiBold" 
                                                           FontSize="12"
                                                           Foreground="#7F8C8D"/>
                                                <TextBlock Grid.Column="1" Text="{Binding Comentarios}" 
                                                           FontSize="12"
                                                           Foreground="#7F8C8D"
                                                           TextWrapping="Wrap"
                                                           TextTrimming="CharacterEllipsis"/>
                                            </Grid>

                                            <!-- Fechas -->
                                            <Grid Margin="0,0,0,8">
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="Auto"/>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="Auto"/>
                                                    <ColumnDefinition Width="*"/>
                                                </Grid.ColumnDefinitions>

                                                <TextBlock Grid.Column="0" Text="Creación: " 
                                                           FontWeight="SemiBold" 
                                                           FontSize="11"
                                                           Foreground="#7F8C8D"/>
                                                <TextBlock Grid.Column="1" Text="{Binding FechaCreacion, StringFormat=dd/MM/yyyy HH:mm}" 
                                                           FontFamily="Consolas"
                                                           FontSize="11"
                                                           Foreground="#7F8C8D"/>
                                                <TextBlock Grid.Column="2" Text="Cierre: " 
                                                           FontWeight="SemiBold" 
                                                           FontSize="11"
                                                           Foreground="#7F8C8D"
                                                           Margin="10,0,0,0"/>
                                                <TextBlock Grid.Column="3" Text="{Binding FechaCierre, StringFormat=dd/MM/yyyy HH:mm}" 
                                                           FontFamily="Consolas"
                                                           FontSize="11"
                                                           Foreground="#7F8C8D"/>
                                            </Grid>
                                        </StackPanel>

                                        <!-- Botones de acción -->
                                        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center">
                                            <!-- Botón Contar -->
                                            <Button Content="📝 Contar"
                                                    Command="{Binding DataContext.ContarInventarioCommand, RelativeSource={RelativeSource AncestorType=ItemsControl}}"
                                            CommandParameter="{Binding}"
                                            Style="{StaticResource EstiloBoton}"
                                            Width="70"
                                                    Height="30"
                                                    FontSize="11"
                                                    FontWeight="Medium"
                                                    Margin="0,0,4,0"
                                                    Visibility="{Binding PuedeContar, Converter={StaticResource BoolToVis}}"/>
                                            
                                            <!-- Botón Consolidar -->
                                            <Button Content="✅ Consolidar"
                                                    Command="{Binding DataContext.ConsolidarInventarioCommand, RelativeSource={RelativeSource AncestorType=ItemsControl}}"
                                                    CommandParameter="{Binding}"
                                                    Style="{StaticResource EstiloBotonSecundario}"
                                                    Width="75"
                                                    Height="30"
                                                    FontSize="11"
                                                    FontWeight="Medium"
                                                    Margin="0,0,4,0"
                                                    Visibility="{Binding PuedeConsolidar, Converter={StaticResource BoolToVis}}"/>
                                            
                                            <!-- Botón Cerrar -->
                                            <Button Content="🔒 Cerrar"
                                                    Command="{Binding DataContext.CerrarInventarioCommand, RelativeSource={RelativeSource AncestorType=ItemsControl}}"
                                            CommandParameter="{Binding}"
                                            Style="{StaticResource EstiloBotonSecundario}"
                                                    Width="60"
                                                    Height="30"
                                                    FontSize="11"
                                                    FontWeight="Medium"
                                                    Margin="0,0,4,0"
                                                    Visibility="{Binding PuedeCerrar, Converter={StaticResource BoolToVis}}"/>
                                            
                                            <!-- Botón Ver -->
                                            <Button Content="👁️ Ver"
                                                    Command="{Binding DataContext.VerInventarioCommand, RelativeSource={RelativeSource AncestorType=ItemsControl}}"
                                                    CommandParameter="{Binding}"
                                                    Style="{StaticResource EstiloBoton}"
                                                    Width="50"
                                                    Height="30"
                                                    FontSize="11"
                                                    FontWeight="Medium"/>
                                </StackPanel>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </ScrollViewer>
            </Grid>
        </GroupBox>

        <!-- BOTONES DE ACCIÓN -->
        <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,20,0,0">
            <TextBlock Text="{Binding TotalInventarios}" 
                       FontWeight="Bold" 
                       VerticalAlignment="Center"
                       Margin="0,0,20,0"/>

            <Button Content="📊 Exportar a Excel"
                    Command="{Binding ExportarInventariosCommand}"
                    Style="{StaticResource EstiloBoton}"
                    Width="150"
                    Height="35"
                    IsEnabled="{Binding CanEnableInputs}"/>
        </StackPanel>
    </Grid>
</Page>
