<Page x:Class="SGA_Desktop.Views.ConfiguracionOperariosView"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:vm="clr-namespace:SGA_Desktop.ViewModels"
      xmlns:helpers="clr-namespace:SGA_Desktop.Helpers"
      Title="ConfiguraciÃ³n de Operarios">

    <!-- DataContext -->
    <Page.DataContext>
        <vm:ConfiguracionOperariosViewModel />
    </Page.DataContext>

    <!-- Recursos -->
    <Page.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="pack://application:,,,/SGA_Desktop;component/Resources/Estilos.xaml"/>
            </ResourceDictionary.MergedDictionaries>

            <BooleanToVisibilityConverter x:Key="BoolToVisibilityConverter"/>
            <helpers:StringToVisibilityConverter x:Key="StringToVisibilityConverter"/>
            <helpers:BoolToColorConverter x:Key="BoolToColorConverter"/>
            <helpers:BoolToBorderColorConverter x:Key="BoolToBorderColorConverter"/>
            <helpers:BoolToStatusTextConverter x:Key="BoolToStatusTextConverter"/>
            <helpers:FiltroEstadoToComboBoxConverter x:Key="FiltroEstadoToComboBoxConverter"/>
        </ResourceDictionary>
    </Page.Resources>

     <Grid Background="{StaticResource BrushFondo}">
         <Grid.RowDefinitions>
             <RowDefinition Height="Auto"/>
             <RowDefinition Height="*"/>
             <RowDefinition Height="Auto"/>
         </Grid.RowDefinitions>

        <!-- BOTONES DE PESTAÃ‘AS -->
        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,10">
            <Button Content="ðŸ‘¤ Operarios"
                    Command="{Binding CambiarAOperariosCommand}"
                    Width="180"
                    Height="35"
                    Margin="0,0,5,0">
                <Button.Style>
                    <Style TargetType="Button" BasedOn="{StaticResource EstiloBoton}">
                        <Setter Property="Background" Value="White"/>
                        <Setter Property="BorderBrush" Value="{StaticResource BrushPrincipal}"/>
                        <Setter Property="Foreground" Value="{StaticResource BrushPrincipal}"/>
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding MostrandoOperarios}" Value="True">
                                <Setter Property="Background" Value="{StaticResource BrushPrincipal}"/>
                                <Setter Property="Foreground" Value="White"/>
                                <Setter Property="FontWeight" Value="Bold"/>
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </Button.Style>
            </Button>
            <Button Content="ðŸ“‹ Configuraciones Predefinidas"
                    Command="{Binding CambiarAConfiguracionesCommand}"
                    Width="250"
                    Height="35"
                    Margin="0,0,5,0">
                <Button.Style>
                    <Style TargetType="Button" BasedOn="{StaticResource EstiloBoton}">
                        <Setter Property="Background" Value="White"/>
                        <Setter Property="BorderBrush" Value="{StaticResource BrushPrincipal}"/>
                        <Setter Property="Foreground" Value="{StaticResource BrushPrincipal}"/>
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding MostrandoConfiguraciones}" Value="True">
                                <Setter Property="Background" Value="{StaticResource BrushPrincipal}"/>
                                <Setter Property="Foreground" Value="White"/>
                                <Setter Property="FontWeight" Value="Bold"/>
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </Button.Style>
            </Button>
            <Button Content="âž• Alta SGA"
                    Command="{Binding CambiarAAltaSgaCommand}"
                    Width="150"
                    Height="35">
                <Button.Style>
                    <Style TargetType="Button" BasedOn="{StaticResource EstiloBoton}">
                        <Setter Property="Background" Value="White"/>
                        <Setter Property="BorderBrush" Value="{StaticResource BrushPrincipal}"/>
                        <Setter Property="Foreground" Value="{StaticResource BrushPrincipal}"/>
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding MostrandoAltaSga}" Value="True">
                                <Setter Property="Background" Value="{StaticResource BrushPrincipal}"/>
                                <Setter Property="Foreground" Value="White"/>
                                <Setter Property="FontWeight" Value="Bold"/>
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </Button.Style>
            </Button>
        </StackPanel>

         <!-- CONTENIDO DE OPERARIOS -->
         <Grid Grid.Row="1"
               Visibility="{Binding MostrandoOperarios, Converter={StaticResource BoolToVisibilityConverter}}">
             <Grid.RowDefinitions>
                 <RowDefinition Height="Auto"/>
                 <RowDefinition Height="*"/>
             </Grid.RowDefinitions>

            <!-- Filtros y controles -->
            <Border Grid.Row="0"
                    Background="{StaticResource BrushPrincipal}"
                    Padding="20,15"
                    BorderBrush="{StaticResource BrushInputBorde}"
                    BorderThickness="0,0,0,1">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="300"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <!-- Filtro por nombre -->
                    <TextBlock Grid.Row="0" Grid.Column="0"
                               Text="Filtrar por nombre:"
                               VerticalAlignment="Center"
                               Margin="0,0,10,0"
                               Foreground="White"/>

                    <TextBox Grid.Row="0" Grid.Column="1"
                             Text="{Binding FiltroNombre, UpdateSourceTrigger=PropertyChanged}"
                             Height="30"
                             VerticalContentAlignment="Center"/>

                    <!-- Filtro por estado activo/inactivo -->
                    <ComboBox Grid.Row="0" Grid.Column="2"
                              SelectedIndex="{Binding FiltroEstado, Converter={StaticResource FiltroEstadoToComboBoxConverter}}"
                              VerticalAlignment="Center"
                              Margin="20,0,0,0"
                              Width="120"
                              Height="30">
                        <ComboBoxItem Content="Solo Activos"/>
                        <ComboBoxItem Content="Solo Inactivos"/>
                    </ComboBox>


                    <!-- Botones -->
                    <StackPanel Grid.Row="0" Grid.Column="5"
                                Orientation="Horizontal"
                                HorizontalAlignment="Right">
                        <Button Content="Recargar"
                                Command="{Binding CargarOperariosCommand}"
                                Width="80"
                                Height="35"
                                Margin="0,0,10,0">
                            <Button.Style>
                                <Style TargetType="Button" BasedOn="{StaticResource EstiloBotonSecundario}">
                                    <Setter Property="Background" Value="{StaticResource BrushPrincipal}"/>
                                    <Setter Property="Foreground" Value="White"/>
                                    <Setter Property="BorderBrush" Value="White"/>
                                    <Setter Property="BorderThickness" Value="1"/>
                                </Style>
                            </Button.Style>
                        </Button>
                        <Button Content="Limpiar Filtros"
                                Command="{Binding LimpiarFiltrosCommand}"
                                Width="100"
                                Height="35">
                            <Button.Style>
                                <Style TargetType="Button" BasedOn="{StaticResource EstiloBotonSecundario}">
                                    <Setter Property="Background" Value="{StaticResource BrushPrincipal}"/>
                                    <Setter Property="Foreground" Value="White"/>
                                    <Setter Property="BorderBrush" Value="White"/>
                                    <Setter Property="BorderThickness" Value="1"/>
                                </Style>
                            </Button.Style>
                        </Button>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- Lista de operarios en formato cards -->
            <GroupBox Grid.Row="1" Header="ðŸ‘¥ Operarios Configurados" Margin="20">
                <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <!-- Estado de carga -->
                        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,10"
                                    Visibility="{Binding Cargando, Converter={StaticResource BoolToVisibilityConverter}}">
                            <ProgressBar Width="20" Height="20"
                                         IsIndeterminate="True"
                                         Margin="0,0,10,0"/>
                            <TextBlock Text="{Binding Mensaje}"
                                       VerticalAlignment="Center"
                                       Foreground="{StaticResource BrushSecundario}"
                                       FontStyle="Italic"/>
                        </StackPanel>

                        <!-- Lista de cards de operarios -->
                        <ItemsControl Grid.Row="1" ItemsSource="{Binding Operarios}">
                            <ItemsControl.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <WrapPanel Orientation="Horizontal"/>
                                </ItemsPanelTemplate>
                            </ItemsControl.ItemsPanel>
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border Style="{StaticResource EstiloTarjeta}"
                                            Width="400"
                                            Height="280"
                                            Margin="6"
                                            Cursor="Hand">
                                        <Grid>
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="*"/>
                                                <RowDefinition Height="Auto"/>
                                            </Grid.RowDefinitions>

                                            <!-- Header con ID y Nombre -->
                                            <Grid Grid.Row="0" Margin="0,0,0,10">
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="Auto"/>
                                                    <ColumnDefinition Width="Auto"/>
                                                </Grid.ColumnDefinitions>

                                                <!-- ID y Nombre -->
                                                <StackPanel Grid.Column="0" Orientation="Vertical">
                                                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="0,0,0,4">
                                                        <TextBlock Text="ID: "
                                                                   FontWeight="Bold"
                                                                   Foreground="{StaticResource BrushPrincipal}"
                                                                   FontSize="14"
                                                                   VerticalAlignment="Center"/>
                                                        <TextBlock Text="{Binding Id}"
                                                                   FontFamily="Consolas"
                                                                   FontWeight="Bold"
                                                                   Foreground="#2C3E50"
                                                                   FontSize="14"
                                                                   VerticalAlignment="Center"/>
                                                    </StackPanel>
                                                    <TextBlock Text="{Binding Nombre}"
                                                               FontWeight="Bold"
                                                               FontSize="16"
                                                               Foreground="#2C3E50"
                                                               TextTrimming="CharacterEllipsis"/>
                                                </StackPanel>

                                                <!-- Plantilla aplicada -->
                                                <Border Grid.Column="1"
                                                        Background="#E67E22"
                                                        BorderBrush="#D35400"
                                                        BorderThickness="1"
                                                        CornerRadius="3"
                                                        Padding="6,3"
                                                        VerticalAlignment="Top"
                                                        HorizontalAlignment="Right"
                                                        Margin="0,0,5,0"
                                                        Visibility="{Binding PlantillaAplicada, Converter={StaticResource StringToVisibilityConverter}}">
                                                    <TextBlock Text="{Binding PlantillaAplicada}"
                                                               FontWeight="SemiBold"
                                                               FontSize="10"
                                                               Foreground="White"
                                                               HorizontalAlignment="Center"/>
                                                </Border>

                                                <!-- Indicador de estado -->
                                                <Border Grid.Column="2"
                                                        Background="{Binding Activo, Converter={StaticResource BoolToColorConverter}}"
                                                        BorderBrush="{Binding Activo, Converter={StaticResource BoolToBorderColorConverter}}"
                                                        BorderThickness="1"
                                                        CornerRadius="3"
                                                        Padding="6,3"
                                                        VerticalAlignment="Top"
                                                        HorizontalAlignment="Right">
                                                    <TextBlock Text="{Binding Activo, Converter={StaticResource BoolToStatusTextConverter}}"
                                                               FontWeight="SemiBold"
                                                               FontSize="10"
                                                               Foreground="White"
                                                               HorizontalAlignment="Center"/>
                                                </Border>

                                            </Grid>

                                            <!-- Contenido principal -->
                                            <StackPanel Grid.Row="1" Margin="0,0,0,12">
                                                <!-- Permisos -->
                                                <Grid Margin="0,0,0,8">
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="Auto"/>
                                                        <ColumnDefinition Width="*"/>
                                                    </Grid.ColumnDefinitions>

                                                    <TextBlock Grid.Column="0" Text="Permisos: "
                                                               FontWeight="SemiBold"
                                                               FontSize="12"
                                                               Foreground="#7F8C8D"/>
                                                    <TextBlock Grid.Column="1" Text="{Binding CantidadPermisos, StringFormat='{}{0} permisos'}"
                                                               FontWeight="Bold"
                                                               FontSize="12"
                                                               Foreground="#34495E"/>
                                                </Grid>

                                                <!-- Empresas -->
                                                <Grid Margin="0,0,0,8">
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="Auto"/>
                                                        <ColumnDefinition Width="*"/>
                                                    </Grid.ColumnDefinitions>

                                                    <TextBlock Grid.Column="0" Text="Empresas: "
                                                               FontWeight="SemiBold"
                                                               FontSize="12"
                                                               Foreground="#7F8C8D"/>
                                                    <TextBlock Grid.Column="1" Text="{Binding Empresas}"
                                                               FontWeight="Bold"
                                                               FontSize="12"
                                                               Foreground="#34495E"
                                                               TextWrapping="Wrap"
                                                               TextTrimming="CharacterEllipsis"/>
                                                </Grid>

                                                <!-- Almacenes -->
                                                <Grid Margin="0,0,0,8">
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="Auto"/>
                                                        <ColumnDefinition Width="*"/>
                                                    </Grid.ColumnDefinitions>

                                                    <TextBlock Grid.Column="0" Text="Almacenes: "
                                                               FontWeight="SemiBold"
                                                               FontSize="12"
                                                               Foreground="#7F8C8D"/>
                                                    <TextBlock Grid.Column="1" Text="{Binding CantidadAlmacenes, StringFormat='{}{0} almacenes'}"
                                                               FontWeight="Bold"
                                                               FontSize="12"
                                                               Foreground="#34495E"/>
                                                </Grid>

                                                <!-- Rol SGA -->
                                                <Grid Margin="0,0,0,8">
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="Auto"/>
                                                        <ColumnDefinition Width="*"/>
                                                    </Grid.ColumnDefinitions>

                                                    <TextBlock Grid.Column="0" Text="Rol Notif.: "
                                                               FontWeight="SemiBold"
                                                               FontSize="12"
                                                               Foreground="#7F8C8D"/>
                                                    <StackPanel Grid.Column="1" Orientation="Horizontal">
                                                        <TextBlock Text="{Binding RolNombre}"
                                                                   FontWeight="Bold"
                                                                   FontSize="12"
                                                                   Foreground="#3498DB"/>
                                                        <TextBlock Text="{Binding NivelJerarquico, StringFormat=' (Nivel {0})'}"
                                                                   FontWeight="Bold"
                                                                   FontSize="12"
                                                                   Foreground="#3498DB"/>
                                                    </StackPanel>
                                                </Grid>


                                                <!-- LÃ­mites -->
                                                <Grid Margin="0,8,0,0">
                                                    <Grid.Style>
                                                        <Style TargetType="Grid">
                                                            <Setter Property="Visibility" Value="Collapsed"/>
                                                            <Style.Triggers>
                                                                <DataTrigger Binding="{Binding LimitesResumen}" Value="">
                                                                    <Setter Property="Visibility" Value="Collapsed"/>
                                                                </DataTrigger>
                                                                <DataTrigger Binding="{Binding LimitesResumen}" Value="{x:Null}">
                                                                    <Setter Property="Visibility" Value="Collapsed"/>
                                                                </DataTrigger>
                                                            </Style.Triggers>
                                                        </Style>
                                                    </Grid.Style>
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="Auto"/>
                                                        <ColumnDefinition Width="*"/>
                                                    </Grid.ColumnDefinitions>
                                                    <TextBlock Grid.Column="0" Text="LÃ­mites: "
                                                           FontWeight="SemiBold"
                                                           FontSize="12"
                                                           Foreground="#7F8C8D"/>
                                                    <TextBlock Grid.Column="1" Text="{Binding LimitesResumen}"
                                                           FontWeight="Bold"
                                                           FontSize="12"
                                                           Foreground="#E74C3C"/>
                                                </Grid>
                                            </StackPanel>

                                            <!-- BotÃ³n de acciÃ³n -->
                                            <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center">
                                                <Button Content="âš™ï¸ Configurar"
                                                        Command="{Binding DataContext.ConfigurarOperarioCommand, RelativeSource={RelativeSource AncestorType=Page}}"
                                                        CommandParameter="{Binding}"
                                                        Style="{StaticResource EstiloBotonPrincipal}"
                                                        Width="120"
                                                        Height="35"
                                                        FontSize="12"
                                                        FontWeight="Medium"/>
                                            </StackPanel>
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </Grid>
                </ScrollViewer>
            </GroupBox>

        </Grid>

         <!-- CONTENIDO DE CONFIGURACIONES PREDEFINIDAS -->
         <Grid Grid.Row="1"
               Visibility="{Binding MostrandoConfiguraciones, Converter={StaticResource BoolToVisibilityConverter}}">
             <Grid.RowDefinitions>
                 <RowDefinition Height="Auto"/>
                 <RowDefinition Height="*"/>
             </Grid.RowDefinitions>

            <!-- Barra unificada de filtros y controles -->
            <Border Grid.Row="0"
                    Background="{StaticResource BrushPrincipal}"
                    Padding="20,15"
                    BorderBrush="{StaticResource BrushInputBorde}"
                    BorderThickness="0,0,0,1">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="300"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <!-- Filtro por nombre -->
                    <TextBlock Grid.Column="0"
                               Text="Filtrar por nombre:"
                               VerticalAlignment="Center"
                               Margin="0,0,10,0"
                               Foreground="White"/>
                    <TextBox Grid.Column="1"
                             Text="{Binding FiltroConfiguracion, UpdateSourceTrigger=PropertyChanged}"
                             Width="300"
                             Height="35"
                             VerticalAlignment="Center"
                             Margin="0,0,20,0"/>

                    <!-- Botones de acciÃ³n -->
                    <StackPanel Grid.Column="3"
                                Orientation="Horizontal"
                                HorizontalAlignment="Right">
                        <Button Content="âž• Nueva ConfiguraciÃ³n"
                                Command="{Binding CrearConfiguracionCommand}"
                                Width="180"
                                Height="35"
                                Margin="0,0,10,0">
                            <Button.Style>
                                <Style TargetType="Button" BasedOn="{StaticResource EstiloBotonSecundario}">
                                    <Setter Property="Background" Value="{StaticResource BrushPrincipal}"/>
                                    <Setter Property="Foreground" Value="White"/>
                                    <Setter Property="BorderBrush" Value="White"/>
                                    <Setter Property="BorderThickness" Value="1"/>
                                </Style>
                            </Button.Style>
                        </Button>
                        <Button Content="ðŸ”„ Recargar"
                                Command="{Binding RecargarConfiguracionesCommand}"
                                Width="100"
                                Height="35"
                                Margin="0,0,10,0">
                            <Button.Style>
                                <Style TargetType="Button" BasedOn="{StaticResource EstiloBotonSecundario}">
                                    <Setter Property="Background" Value="{StaticResource BrushPrincipal}"/>
                                    <Setter Property="Foreground" Value="White"/>
                                    <Setter Property="BorderBrush" Value="White"/>
                                    <Setter Property="BorderThickness" Value="1"/>
                                </Style>
                            </Button.Style>
                        </Button>
                        <Button Content="Limpiar Filtros"
                                Command="{Binding LimpiarFiltrosConfiguracionCommand}"
                                Width="120"
                                Height="35">
                            <Button.Style>
                                <Style TargetType="Button" BasedOn="{StaticResource EstiloBotonSecundario}">
                                    <Setter Property="Background" Value="{StaticResource BrushPrincipal}"/>
                                    <Setter Property="Foreground" Value="White"/>
                                    <Setter Property="BorderBrush" Value="White"/>
                                    <Setter Property="BorderThickness" Value="1"/>
                                </Style>
                            </Button.Style>
                        </Button>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- Lista de configuraciones predefinidas -->
            <GroupBox Grid.Row="1" Header="ðŸ“‹ Configuraciones Disponibles" Margin="20">
                <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <!-- Estado de carga -->
                        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,10"
                                    Visibility="{Binding CargandoConfiguraciones, Converter={StaticResource BoolToVisibilityConverter}}">
                            <ProgressBar Width="20" Height="20"
                                         IsIndeterminate="True"
                                         Margin="0,0,10,0"/>
                            <TextBlock Text="{Binding MensajeConfiguraciones}"
                                       VerticalAlignment="Center"
                                       Foreground="{StaticResource BrushSecundario}"
                                       FontStyle="Italic"/>
                        </StackPanel>

                        <!-- Lista de cards de configuraciones -->
                        <ItemsControl Grid.Row="1" ItemsSource="{Binding ConfiguracionesPredefinidas}">
                            <ItemsControl.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <WrapPanel Orientation="Horizontal"/>
                                </ItemsPanelTemplate>
                            </ItemsControl.ItemsPanel>
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border Style="{StaticResource EstiloTarjeta}"
                                            Width="400"
                                            Height="280"
                                            Margin="6"
                                            Cursor="Hand">
                                        <Grid>
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="*"/>
                                                <RowDefinition Height="Auto"/>
                                            </Grid.RowDefinitions>

                                            <!-- Header con nombre -->
                                            <Grid Grid.Row="0" Margin="0,0,0,10">
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="Auto"/>
                                                </Grid.ColumnDefinitions>

                                                <TextBlock Grid.Column="0" Text="{Binding Nombre}"
                                                           FontWeight="Bold"
                                                           FontSize="16"
                                                           Foreground="#2C3E50"/>

                                                <Border Grid.Column="1"
                                                        Background="#D1E7DD"
                                                        BorderBrush="#198754"
                                                        BorderThickness="1"
                                                        CornerRadius="3"
                                                        Padding="6,3"
                                                        VerticalAlignment="Center"
                                                        Visibility="{Binding Activa, Converter={StaticResource BoolToVisibilityConverter}}">
                                                    <TextBlock Text="ACTIVA"
                                                               FontWeight="SemiBold"
                                                               FontSize="10"
                                                               Foreground="#198754"
                                                               HorizontalAlignment="Center"/>
                                                </Border>
                                            </Grid>

                                            <!-- Contenido principal -->
                                            <StackPanel Grid.Row="1" Margin="0,0,0,12">
                                                <!-- DescripciÃ³n -->
                                                <TextBlock Text="{Binding Descripcion}"
                                                           FontSize="12"
                                                           Foreground="#7F8C8D"
                                                           TextWrapping="Wrap"
                                                           Margin="0,0,0,8"/>

                                                <!-- Permisos -->
                                                <Grid Margin="0,0,0,4">
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="Auto"/>
                                                        <ColumnDefinition Width="*"/>
                                                    </Grid.ColumnDefinitions>
                                                    <TextBlock Grid.Column="0" Text="Permisos: "
                                                               FontWeight="SemiBold"
                                                               FontSize="11"
                                                               Foreground="#7F8C8D"/>
                                                    <TextBlock Grid.Column="1" Text="{Binding PermisosResumen}"
                                                               FontWeight="Bold"
                                                               FontSize="11"
                                                               Foreground="#34495E"/>
                                                </Grid>

                                                <!-- Empresas -->
                                                <Grid Margin="0,0,0,4">
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="Auto"/>
                                                        <ColumnDefinition Width="*"/>
                                                    </Grid.ColumnDefinitions>
                                                    <TextBlock Grid.Column="0" Text="Empresas: "
                                                               FontWeight="SemiBold"
                                                               FontSize="11"
                                                               Foreground="#7F8C8D"/>
                                                    <TextBlock Grid.Column="1" Text="{Binding EmpresasResumen}"
                                                               FontWeight="Bold"
                                                               FontSize="11"
                                                               Foreground="#34495E"/>
                                                </Grid>

                                                <!-- Almacenes -->
                                                <Grid Margin="0,0,0,4">
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="Auto"/>
                                                        <ColumnDefinition Width="*"/>
                                                    </Grid.ColumnDefinitions>
                                                    <TextBlock Grid.Column="0" Text="Almacenes: "
                                                               FontWeight="SemiBold"
                                                               FontSize="11"
                                                               Foreground="#7F8C8D"/>
                                                    <TextBlock Grid.Column="1" Text="{Binding AlmacenesResumen}"
                                                               FontWeight="Bold"
                                                               FontSize="11"
                                                               Foreground="#34495E"/>
                                                </Grid>

                                                <!-- LÃ­mites -->
                                                <Grid Margin="0,0,0,4">
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="Auto"/>
                                                        <ColumnDefinition Width="*"/>
                                                    </Grid.ColumnDefinitions>
                                                    <TextBlock Grid.Column="0" Text="LÃ­mites: "
                                                               FontWeight="SemiBold"
                                                               FontSize="11"
                                                               Foreground="#7F8C8D"/>
                                                    <TextBlock Grid.Column="1" Text="{Binding LimitesResumen}"
                                                               FontWeight="Bold"
                                                               FontSize="11"
                                                               Foreground="#34495E"/>
                                                </Grid>

                                                <!-- Usado por -->
                                                <Grid>
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="Auto"/>
                                                        <ColumnDefinition Width="*"/>
                                                    </Grid.ColumnDefinitions>
                                                    <TextBlock Grid.Column="0" Text="Usado por: "
                                                               FontWeight="SemiBold"
                                                               FontSize="11"
                                                               Foreground="#7F8C8D"/>
                                                    <TextBlock Grid.Column="1" Text="{Binding OperariosUsando, StringFormat='{}{0} operarios'}"
                                                               FontWeight="Bold"
                                                               FontSize="11"
                                                               Foreground="#34495E"/>
                                                </Grid>
                                            </StackPanel>

                                            <!-- Botones de acciÃ³n -->
                                            <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center">
                                                <Button Content="âœï¸ Editar"
                                                        Command="{Binding DataContext.EditarConfiguracionCommand, RelativeSource={RelativeSource AncestorType=ItemsControl}}"
                                                        CommandParameter="{Binding}"
                                                        Width="80"
                                                        Height="30"
                                                        FontSize="11"
                                                        FontWeight="Medium"
                                                        Margin="0,0,4,0">
                                                    <Button.Style>
                                                        <Style TargetType="Button" BasedOn="{StaticResource EstiloBoton}">
                                                            <Setter Property="Background" Value="{StaticResource BrushPrincipal}"/>
                                                            <Setter Property="Foreground" Value="White"/>
                                                            <Setter Property="BorderBrush" Value="{StaticResource BrushPrincipal}"/>
                                                        </Style>
                                                    </Button.Style>
                                                </Button>
                                                <Button Content="ðŸ—‘ï¸"
                                                        Command="{Binding DataContext.EliminarConfiguracionCommand, RelativeSource={RelativeSource AncestorType=ItemsControl}}"
                                                        CommandParameter="{Binding}"
                                                        Style="{StaticResource EstiloBotonSecundario}"
                                                        Width="30"
                                                        Height="30"
                                                        FontSize="11"
                                                        FontWeight="Medium"/>
                                            </StackPanel>
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </Grid>
                </ScrollViewer>
            </GroupBox>

        </Grid>

         <!-- CONTENIDO DE ALTA SGA -->
         <Grid Grid.Row="1"
               Visibility="{Binding MostrandoAltaSga, Converter={StaticResource BoolToVisibilityConverter}}">
             <Grid.RowDefinitions>
                 <RowDefinition Height="Auto"/>
                 <RowDefinition Height="*"/>
             </Grid.RowDefinitions>

            <!-- Filtros y controles para Alta SGA -->
            <Border Grid.Row="0"
                    Background="{StaticResource BrushPrincipal}"
                    Padding="20,15"
                    BorderBrush="{StaticResource BrushInputBorde}"
                    BorderThickness="0,0,0,1">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="300"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <!-- Filtro por nombre -->
                    <TextBlock Grid.Column="0"
                               Text="Buscar empleado:"
                               VerticalAlignment="Center"
                               Margin="0,0,10,0"
                               Foreground="White"/>

                    <TextBox Grid.Column="1"
                             Text="{Binding FiltroEmpleado, UpdateSourceTrigger=PropertyChanged}"
                             Height="30"
                             VerticalContentAlignment="Center"/>

                    <!-- Botones -->
                    <StackPanel Grid.Column="3"
                                Orientation="Horizontal"
                                HorizontalAlignment="Right">
                        <Button Content="ðŸ”„ Recargar"
                                Command="{Binding CargarEmpleadosDisponiblesCommand}"
                                Width="100"
                                Height="35"
                                Margin="0,0,10,0">
                            <Button.Style>
                                <Style TargetType="Button" BasedOn="{StaticResource EstiloBotonSecundario}">
                                    <Setter Property="Background" Value="{StaticResource BrushPrincipal}"/>
                                    <Setter Property="Foreground" Value="White"/>
                                    <Setter Property="BorderBrush" Value="White"/>
                                    <Setter Property="BorderThickness" Value="1"/>
                                </Style>
                            </Button.Style>
                        </Button>
                        <Button Content="âž• Dar de Alta Seleccionados"
                                Command="{Binding DarAltaSeleccionadosCommand}"
                                Width="180"
                                Height="35">
                            <Button.Style>
                                <Style TargetType="Button" BasedOn="{StaticResource EstiloBotonSecundario}">
                                    <Setter Property="Background" Value="{StaticResource BrushPrincipal}"/>
                                    <Setter Property="Foreground" Value="White"/>
                                    <Setter Property="BorderBrush" Value="White"/>
                                    <Setter Property="BorderThickness" Value="1"/>
                                </Style>
                            </Button.Style>
                        </Button>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- Lista de empleados disponibles -->
            <GroupBox Grid.Row="1" Header="ðŸ‘¥ Empleados Disponibles para Alta en SGA" Margin="20">
                <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <!-- Estado de carga -->
                        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,10"
                                    Visibility="{Binding CargandoEmpleados, Converter={StaticResource BoolToVisibilityConverter}}">
                            <ProgressBar Width="20" Height="20"
                                         IsIndeterminate="True"
                                         Margin="0,0,10,0"/>
                            <TextBlock Text="{Binding MensajeEmpleados}"
                                       VerticalAlignment="Center"
                                       Foreground="{StaticResource BrushSecundario}"
                                       FontStyle="Italic"/>
                        </StackPanel>

                        <!-- Lista de cards de empleados -->
                        <ItemsControl Grid.Row="1" ItemsSource="{Binding EmpleadosDisponibles}">
                            <ItemsControl.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <WrapPanel Orientation="Horizontal"/>
                                </ItemsPanelTemplate>
                            </ItemsControl.ItemsPanel>
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border Style="{StaticResource EstiloTarjeta}"
                                            Width="280"
                                            Height="120"
                                            Margin="6"
                                            Cursor="Hand">
                                        <Grid>
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="*"/>
                                                <RowDefinition Height="Auto"/>
                                            </Grid.RowDefinitions>

                                            <!-- Header con ID y Nombre -->
                                            <Grid Grid.Row="0" Margin="0,0,0,8">
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="Auto"/>
                                                </Grid.ColumnDefinitions>

                                                <!-- ID y Nombre -->
                                                <StackPanel Grid.Column="0" Orientation="Vertical">
                                                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="0,0,0,4">
                                                        <TextBlock Text="CÃ³digo: "
                                                                   FontWeight="Bold"
                                                                   Foreground="{StaticResource BrushPrincipal}"
                                                                   FontSize="12"
                                                                   VerticalAlignment="Center"/>
                                                        <TextBlock Text="{Binding CodigoEmpleado}"
                                                                   FontFamily="Consolas"
                                                                   FontWeight="Bold"
                                                                   Foreground="#2C3E50"
                                                                   FontSize="12"
                                                                   VerticalAlignment="Center"/>
                                                    </StackPanel>
                                                    <TextBlock Text="{Binding Nombre}"
                                                               FontWeight="Bold"
                                                               FontSize="14"
                                                               Foreground="#2C3E50"
                                                               TextTrimming="CharacterEllipsis"/>
                                                </StackPanel>

                                                <!-- Checkbox para selecciÃ³n -->
                                                <CheckBox Grid.Column="1"
                                                          IsChecked="{Binding IsSelected}"
                                                          VerticalAlignment="Top"
                                                          HorizontalAlignment="Right"/>
                                            </Grid>

                                            <!-- BotÃ³n de acciÃ³n -->
                                            <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center">
                                                <Button Content="âž• Dar de Alta"
                                                        Command="{Binding DataContext.DarAltaEmpleadoCommand, RelativeSource={RelativeSource AncestorType=Page}}"
                                                        CommandParameter="{Binding}"
                                                        Style="{StaticResource EstiloBotonPrincipal}"
                                                        Width="100"
                                                        Height="30"
                                                        FontSize="11"
                                                        FontWeight="Medium"/>
                                            </StackPanel>
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </Grid>
                </ScrollViewer>
            </GroupBox>

        </Grid>

         <!-- Barra de estado general -->
         <Border Grid.Row="2"
                Background="{StaticResource BrushPrincipal}"
                Padding="20,10"
                BorderBrush="{StaticResource BrushInputBorde}"
                BorderThickness="0,1,0,0">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Column="0"
                           Text="{Binding Mensaje}"
                           VerticalAlignment="Center"
                           Foreground="White"/>

                <StackPanel Grid.Column="1"
                            Orientation="Horizontal"
                            Visibility="{Binding Cargando, Converter={StaticResource BoolToVisibilityConverter}}">
                    <ProgressBar Width="100"
                                 Height="15"
                                 IsIndeterminate="True"
                                 VerticalAlignment="Center"
                                 Margin="0,0,10,0"/>
                    <TextBlock Text="Cargando..."
                               VerticalAlignment="Center"
                               Foreground="White"/>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Page>
