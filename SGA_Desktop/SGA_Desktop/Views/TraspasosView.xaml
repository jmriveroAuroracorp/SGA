<Page x:Class="SGA_Desktop.Views.TraspasosView"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Background="Transparent">

    <Grid Margin="10">
        <!-- Pestañas internas sin borde -->
        <TabControl x:Name="Tabs"
                SelectionChanged="TabControl_SelectionChanged"
                Style="{StaticResource EstiloTabControl}"
                ItemContainerStyle="{StaticResource EstiloTabItem}">
            <TabItem Header="Paletización" Tag="Paletizacion" Margin="0,0,-10,0" />
            <TabItem Header="Traspasos"     Tag="Clasico"   Margin="0,0,-10,0"  IsEnabled="False"/>
        </TabControl>

        <!-- Border solo alrededor del Frame -->
        <Border BorderBrush="{StaticResource BrushPrincipal}"
            BorderThickness="2"
            CornerRadius="4,4,4,4"
            Margin="0,33,0,0"     
            Padding="8">
            <Frame x:Name="InnerFrame"
             NavigationUIVisibility="Hidden" />
        </Border>
    </Grid>
</Page>
