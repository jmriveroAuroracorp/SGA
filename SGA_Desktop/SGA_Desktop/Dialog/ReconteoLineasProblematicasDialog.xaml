<Window x:Class="SGA_Desktop.Dialog.ReconteoLineasProblematicasDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="clr-namespace:SGA_Desktop.ViewModels"
        xmlns:helpers="clr-namespace:SGA_Desktop.Helpers"
        Title="RECONTEO DE LÃNEAS CON STOCK CAMBIADO"
        Width="1400"
        Height="900"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent">

    <!-- 1) DataContext -->
    <Window.DataContext>
        <vm:ReconteoLineasProblematicasDialogViewModel />
    </Window.DataContext>

    <!-- 2) Recursos y Estilos -->
    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="pack://application:,,,/SGA_Desktop;component/Resources/Estilos.xaml"/>
            </ResourceDictionary.MergedDictionaries>

            <!-- Converters -->
            <BooleanToVisibilityConverter x:Key="BoolToVisibilityConverter"/>
            <helpers:BoolToBrushConverter x:Key="BoolToBrushConverter"/>
            <helpers:DecimalInputConverter x:Key="DecimalInputConverter"/>
            <helpers:NegativeValueColorConverter x:Key="NegativeValueColorConverter"/>
            
            <!-- Proxy para acceder al ViewModel desde los DataTemplates -->
            <helpers:BindingProxy x:Key="VmProxy" Data="{Binding}" />
        </ResourceDictionary>
    </Window.Resources>

    <!-- 3) Marco redondeado con fondo y bordes -->
    <Border CornerRadius="8"
            Background="{StaticResource BrushFondo}"
            BorderBrush="{StaticResource BrushPrincipal}"
            BorderThickness="2">

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="60"/>
                <RowDefinition/>
                <RowDefinition Height="140"/>
            </Grid.RowDefinitions>

            <!-- Header -->
            <Border Grid.Row="0" 
                    Background="{StaticResource BrushPrincipal}" 
                    CornerRadius="6,6,0,0">
                <TextBlock Text="âš ï¸ RECONTEO DE LÃNEAS CON STOCK CAMBIADO" 
                           FontSize="16" 
                           FontWeight="Bold" 
                           Foreground="White"
                           HorizontalAlignment="Center"
                           VerticalAlignment="Center"/>
            </Border>

            <!-- Contenido principal -->
            <Grid Grid.Row="1" Margin="25,25,25,25">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Panel izquierdo: InformaciÃ³n del inventario -->
                <Border Grid.Row="0" 
                        BorderBrush="{StaticResource BrushSecundario}" 
                        BorderThickness="1" 
                        CornerRadius="4"
                        Margin="0,0,0,15">
                    <Grid Margin="15">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <!-- ID Inventario -->
                        <StackPanel Grid.Column="0" Margin="0,0,15,0">
                            <TextBlock Text="ID Inventario:" 
                                       FontWeight="Bold" 
                                       Foreground="{StaticResource BrushPrincipal}"
                                       Margin="0,0,0,5"/>
                            <TextBlock Text="{Binding Inventario.IdInventarioCorto}" 
                                       FontFamily="Consolas" 
                                       FontWeight="Bold" 
                                       FontSize="14" 
                                       Foreground="{StaticResource BrushPrincipal}"/>
                        </StackPanel>

                        <!-- AlmacÃ©n -->
                        <StackPanel Grid.Column="1" Margin="0,0,15,0">
                            <TextBlock Text="AlmacÃ©n:" 
                                       FontWeight="Bold" 
                                       Foreground="{StaticResource BrushPrincipal}"
                                       Margin="0,0,0,5"/>
                            <TextBlock Text="{Binding Inventario.CodigoAlmacen}" 
                                       FontWeight="Bold" 
                                       FontSize="14" 
                                       Foreground="{StaticResource BrushPrincipal}"/>
                        </StackPanel>

                        <!-- LÃ­neas problemÃ¡ticas -->
                        <StackPanel Grid.Column="2" Margin="0,0,15,0">
                            <TextBlock Text="LÃ­neas ProblemÃ¡ticas:" 
                                       FontWeight="Bold" 
                                       Foreground="{StaticResource BrushPrincipal}"
                                       Margin="0,0,0,5"/>
                            <TextBlock Text="{Binding TotalLineasProblematicas}" 
                                       FontWeight="Bold" 
                                       FontSize="14" 
                                       Foreground="{StaticResource BrushPrincipal}"/>
                        </StackPanel>

                        <!-- Estado -->
                        <StackPanel Grid.Column="3">
                            <TextBlock Text="Estado:" 
                                       FontWeight="Bold" 
                                       Foreground="{StaticResource BrushPrincipal}"
                                       Margin="0,0,0,5"/>
                            <Border Background="{StaticResource BrushFondo}" 
                                    BorderBrush="{StaticResource BrushPrincipal}" 
                                    BorderThickness="1" 
                                    CornerRadius="3" 
                                    Padding="6,3">
                                <TextBlock Text="PENDIENTE DE RECONTEO" 
                                           FontWeight="SemiBold" 
                                           FontSize="12" 
                                           Foreground="{StaticResource BrushPrincipal}"
                                           HorizontalAlignment="Center"/>
                            </Border>
                        </StackPanel>
                    </Grid>
                </Border>

                <!-- Advertencia -->
                <Border Grid.Row="1" 
                        Background="{StaticResource BrushFondo}" 
                        BorderBrush="{StaticResource BrushSecundario}" 
                        BorderThickness="1" 
                        CornerRadius="4"
                        Margin="0,0,0,15">
                    <Grid Margin="15">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <!-- Icono de advertencia -->
                        <TextBlock Grid.Column="0" 
                                   Text="âš ï¸" 
                                   FontSize="24" 
                                   VerticalAlignment="Top"
                                   Margin="0,0,15,0"/>

                        <!-- Mensaje de advertencia -->
                        <StackPanel Grid.Column="1">
                            <TextBlock Text="Se detectaron lÃ­neas donde el stock real ha cambiado desde que se creÃ³ el inventario." 
                                       FontWeight="Bold" 
                                       Foreground="{StaticResource BrushPrincipal}"
                                       Margin="0,0,0,8"/>
                            <TextBlock Text="Esto puede indicar que se han realizado movimientos de stock durante el conteo o que otros usuarios han trabajado en el mismo almacÃ©n." 
                                       Foreground="{StaticResource BrushPrincipal}"
                                       TextWrapping="Wrap"/>
                            <TextBlock Text="Por favor, reconte estas lÃ­neas para asegurar la precisiÃ³n del inventario." 
                                       FontWeight="Bold" 
                                       Foreground="{StaticResource BrushPrincipal}"
                                       Margin="0,8,0,0"/>
                        </StackPanel>
                    </Grid>
                </Border>

                <!-- Lista de lÃ­neas problemÃ¡ticas -->
                <Border Grid.Row="2" 
                        BorderBrush="{StaticResource BrushSecundario}" 
                        BorderThickness="1" 
                        CornerRadius="4">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <!-- TÃ­tulo y estado de carga -->
                        <Grid Grid.Row="0" Margin="20,20,20,15">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <TextBlock Grid.Column="0"
                                       Text="ðŸ” LÃ­neas que requieren reconteo" 
                                       FontWeight="Bold" 
                                       Foreground="{StaticResource BrushPrincipal}"/>

                            <!-- Estado de carga -->
                            <StackPanel Grid.Column="1" 
                                        Orientation="Horizontal" 
                                        Visibility="{Binding IsCargando, Converter={StaticResource BoolToVisibilityConverter}}">
                                <ProgressBar Width="20" Height="20" 
                                             IsIndeterminate="True" 
                                             Margin="0,0,10,0"/>
                                <TextBlock Text="{Binding MensajeEstado}" 
                                           VerticalAlignment="Center"
                                           Foreground="{StaticResource BrushPrincipal}"
                                           FontStyle="Italic"/>
                            </StackPanel>
                        </Grid>

                        <!-- Cards de lÃ­neas problemÃ¡ticas -->
                        <ScrollViewer Grid.Row="1" 
                                      VerticalScrollBarVisibility="Auto" 
                                      HorizontalScrollBarVisibility="Disabled"
                                      Margin="20,0,20,20">
                            <StackPanel>
                                <!-- Header de columnas -->
                                <Border Background="{StaticResource BrushPrincipal}" 
                                        BorderBrush="{StaticResource BrushPrincipal}" 
                                        BorderThickness="0,0,0,1"
                                        Padding="12,8"
                                        Margin="0,0,0,8">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="80"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="120"/>
                                            <ColumnDefinition Width="100"/>
                                            <ColumnDefinition Width="100"/>
                                            <ColumnDefinition Width="100"/>
                                            <ColumnDefinition Width="100"/>
                                            <ColumnDefinition Width="100"/>
                                            <ColumnDefinition Width="100"/>
                                        </Grid.ColumnDefinitions>
                                        
                                        <TextBlock Grid.Column="0" Text="CÃ³digo" FontWeight="Bold" FontSize="11" Foreground="White"/>
                                        <TextBlock Grid.Column="1" Text="ArtÃ­culo" FontWeight="Bold" FontSize="11" Foreground="White" Margin="8,0"/>
                                        <TextBlock Grid.Column="2" Text="AlmacÃ©n" FontWeight="Bold" FontSize="11" Foreground="White" HorizontalAlignment="Center"/>
                                        <TextBlock Grid.Column="3" Text="UbicaciÃ³n" FontWeight="Bold" FontSize="11" Foreground="White" HorizontalAlignment="Center"/>
                                        <TextBlock Grid.Column="4" Text="Partida" FontWeight="Bold" FontSize="11" Foreground="White" HorizontalAlignment="Center"/>
                                        <TextBlock Grid.Column="5" Text="Caducidad" FontWeight="Bold" FontSize="11" Foreground="White" HorizontalAlignment="Center"/>
                                        <TextBlock Grid.Column="6" Text="Stock al crear" FontWeight="Bold" FontSize="11" Foreground="White" HorizontalAlignment="Center"/>
                                        <TextBlock Grid.Column="7" Text="Stock actual" FontWeight="Bold" FontSize="11" Foreground="White" HorizontalAlignment="Center"/>
                                        <TextBlock Grid.Column="8" Text="Reconteo" FontWeight="Bold" FontSize="11" Foreground="White" HorizontalAlignment="Center"/>
                                    </Grid>
                                </Border>

                                <!-- Lista de lÃ­neas problemÃ¡ticas -->
                                <ItemsControl ItemsSource="{Binding LineasProblematicas}">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Border Background="{Binding IsSelected, Converter={StaticResource BoolToBrushConverter}, ConverterParameter='#FFF3E0|White'}"
                                                CornerRadius="6" 
                                                Padding="12" 
                                                Margin="0,0,0,8" 
                                                BorderThickness="1" 
                                                BorderBrush="{StaticResource BrushSecundario}"
                                                Cursor="Hand">
                                    <Border.InputBindings>
                                        <MouseBinding MouseAction="LeftClick" 
                                                      Command="{Binding DataContext.SeleccionarLineaCommand, RelativeSource={RelativeSource AncestorType=Window}}" 
                                                      CommandParameter="{Binding}"/>
                                    </Border.InputBindings>
                                            <Border.Effect>
                                                <DropShadowEffect BlurRadius="4" ShadowDepth="1" Opacity="0.1"/>
                                            </Border.Effect>
                                            
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="80"/>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="120"/>
                                                    <ColumnDefinition Width="100"/>
                                                    <ColumnDefinition Width="100"/>
                                                    <ColumnDefinition Width="100"/>
                                                    <ColumnDefinition Width="100"/>
                                                    <ColumnDefinition Width="100"/>
                                                    <ColumnDefinition Width="100"/>
                                                </Grid.ColumnDefinitions>
                                                
                                                <!-- CÃ³digo -->
                                                <TextBlock Grid.Column="0" 
                                                           Text="{Binding CodigoArticulo}" 
                                                           FontWeight="Bold" 
                                                           FontSize="13" 
                                                           Foreground="{StaticResource BrushPrincipal}"
                                                           VerticalAlignment="Center"/>
                                                
                                                <!-- DescripciÃ³n -->
                                                <TextBlock Grid.Column="1" 
                                                           Text="{Binding DescripcionArticulo}" 
                                                           FontSize="12" 
                                                           Foreground="Black"
                                                           TextWrapping="Wrap"
                                                           VerticalAlignment="Center"
                                                           Margin="8,0"/>
                                                
                                                <!-- AlmacÃ©n -->
                                                <TextBlock Grid.Column="2" 
                                                           Text="{Binding CodigoAlmacen}" 
                                                           FontSize="12" 
                                                           Foreground="Black"
                                                           VerticalAlignment="Center"
                                                           HorizontalAlignment="Center"/>
                                                
                                                <!-- UbicaciÃ³n -->
                                                <TextBlock Grid.Column="3" 
                                                           Text="{Binding CodigoUbicacion}" 
                                                           FontSize="12" 
                                                           Foreground="Black"
                                                           VerticalAlignment="Center"
                                                           HorizontalAlignment="Center"/>
                                                
                                                <!-- Partida -->
                                                <TextBlock Grid.Column="4" 
                                                           Text="{Binding Partida}" 
                                                           FontSize="12" 
                                                           Foreground="Black"
                                                           VerticalAlignment="Center"
                                                           HorizontalAlignment="Center"/>
                                                
                                                <!-- Caducidad -->
                                                <TextBlock Grid.Column="5" 
                                                           Text="{Binding FechaCaducidad, StringFormat=dd/MM/yyyy}" 
                                                           FontSize="12" 
                                                           Foreground="Black"
                                                           VerticalAlignment="Center"
                                                           HorizontalAlignment="Center"/>
                                                
                                                <!-- Stock al crear -->
                                                <TextBlock Grid.Column="6" 
                                                           Text="{Binding StockAlCrearInventario, StringFormat=F4}" 
                                                           FontSize="12" 
                                                           FontWeight="Bold"
                                                           Foreground="Blue"
                                                           VerticalAlignment="Center"
                                                           HorizontalAlignment="Center"/>
                                                
                                                <!-- Stock actual -->
                                                <TextBlock Grid.Column="7" 
                                                           Text="{Binding StockActual, StringFormat=F4}" 
                                                           FontSize="12" 
                                                           FontWeight="Bold"
                                                           Foreground="Red"
                                                           VerticalAlignment="Center"
                                                           HorizontalAlignment="Center"/>
                                                
                                                <!-- Reconteo (editable) -->
                                                <TextBox Grid.Column="8" 
                                                         Text="{Binding CantidadReconteoTexto, UpdateSourceTrigger=PropertyChanged}" 
                                                         Width="80" 
                                                         Height="24"
                                                         FontSize="12"
                                                         FontWeight="Bold"
                                                         VerticalAlignment="Center"
                                                         HorizontalAlignment="Center"
                                                         Padding="4,2"
                                                         BorderThickness="1"
                                                         BorderBrush="{StaticResource BrushSecundario}"
                                                         PreviewTextInput="TextBox_PreviewTextInput"/>
                                            </Grid>
                                        </Border>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                            </StackPanel>
                        </ScrollViewer>
                    </Grid>
                </Border>
            </Grid>

            <!-- Footer con botones -->
            <Border Grid.Row="2" 
                    Background="{StaticResource BrushFondo}" 
                    CornerRadius="0,0,6,6">
                <Grid Margin="25">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Primera fila: InformaciÃ³n -->
                    <Grid Grid.Row="0" Margin="0,0,0,10">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <!-- InformaciÃ³n -->
                        <StackPanel Grid.Column="0" 
                                    Orientation="Horizontal" 
                                    VerticalAlignment="Center">
                            <TextBlock Text="{Binding TotalLineasProblematicas}" 
                                       FontWeight="Bold" 
                                       VerticalAlignment="Center"
                                       Foreground="{StaticResource BrushPrincipal}"
                                       Margin="0,0,20,0"/>
                            <TextBlock Text="{Binding LineasRecontadas}" 
                                       FontWeight="Bold" 
                                       VerticalAlignment="Center"
                                       Foreground="Green"/>
                        </StackPanel>

                        <!-- Campo unidades globales -->
                        <StackPanel Grid.Column="1" 
                                    Orientation="Horizontal" 
                                    VerticalAlignment="Center">
                            <TextBlock Text="Unidades:" 
                                       VerticalAlignment="Center" 
                                       Margin="0,0,5,0"
                                       Foreground="{StaticResource BrushPrincipal}"/>
                            <TextBox Text="{Binding UnidadesGlobales}" 
                                     Width="80" Height="36" 
                                     Style="{StaticResource EstiloCajaTexto}"/>
                        </StackPanel>
                    </Grid>

                    <!-- Segunda fila: Botones -->
                    <Grid Grid.Row="1">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <!-- Espacio vacÃ­o a la izquierda -->
                        <StackPanel Grid.Column="0"/>

                        <!-- BotÃ³n Actualizar Stock -->
                        <Button Grid.Column="1"
                                Content="ðŸ”„ ACTUALIZAR STOCK"
                                Command="{Binding ActualizarStockCommand}"
                                Style="{StaticResource EstiloBotonSecundario}"
                                Width="160" Height="35" 
                                Margin="0,0,10,0"/>

                        <!-- BotÃ³n Guardar Reconteo -->
                        <Button Grid.Column="2"
                                Content="ðŸ’¾ GUARDAR RECONTEO"
                                Command="{Binding GuardarReconteoCommand}"
                                Style="{StaticResource EstiloBotonPrincipal}"
                                Width="160" Height="35"
                                Margin="0,0,10,0"/>

                        <!-- BotÃ³n Cancelar -->
                        <Button Grid.Column="3"
                                Content="âŒ CANCELAR"
                                Command="{Binding CancelarCommand}"
                                Style="{StaticResource EstiloBotonSecundario}"
                                Width="120" Height="35"/>
                    </Grid>
                </Grid>
            </Border>
        </Grid>
    </Border>
</Window> 