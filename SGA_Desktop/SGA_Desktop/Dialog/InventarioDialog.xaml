<Window x:Class="SGA_Desktop.Dialog.InventarioDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="clr-namespace:SGA_Desktop.ViewModels"
        Title="Inventario Físico" 
        Height="500" 
        Width="600"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        Background="{StaticResource BrushFondo}">

    <Window.DataContext>
        <vm:InventarioDialogViewModel />
    </Window.DataContext>

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Título -->
        <TextBlock Grid.Row="0" 
                   Text="Registro de Inventario Físico" 
                   FontSize="18" 
                   FontWeight="Bold" 
                   Foreground="{StaticResource BrushPrincipal}"
                   HorizontalAlignment="Center"
                   Margin="0,0,0,20"/>

        <!-- Contenido -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <StackPanel>
                <!-- Información del artículo -->
                <GroupBox Header="Información del Artículo" Margin="0,0,0,15">
                    <Grid Margin="10">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <TextBlock Grid.Row="0" Grid.Column="0" Text="Código:" FontWeight="Bold" Margin="0,0,10,5"/>
                        <TextBlock Grid.Row="0" Grid.Column="1" Text="{Binding CodigoArticulo}" Margin="0,0,20,5"/>
                        <TextBlock Grid.Row="0" Grid.Column="2" Text="Almacén:" FontWeight="Bold" Margin="0,0,10,5"/>
                        <TextBlock Grid.Row="0" Grid.Column="3" Text="{Binding Almacen}" Margin="0,0,0,5"/>

                        <TextBlock Grid.Row="1" Grid.Column="0" Text="Descripción:" FontWeight="Bold" Margin="0,0,10,5"/>
                        <TextBlock Grid.Row="1" Grid.Column="1" Grid.ColumnSpan="3" Text="{Binding DescripcionArticulo}" 
                                   TextWrapping="Wrap" Margin="0,0,0,5"/>

                        <TextBlock Grid.Row="2" Grid.Column="0" Text="Ubicación:" FontWeight="Bold" Margin="0,0,10,5"/>
                        <TextBlock Grid.Row="2" Grid.Column="1" Text="{Binding Ubicacion}" Margin="0,0,20,5"/>
                        <TextBlock Grid.Row="2" Grid.Column="2" Text="Partida:" FontWeight="Bold" Margin="0,0,10,5"/>
                        <TextBlock Grid.Row="2" Grid.Column="3" Text="{Binding Partida}" Margin="0,0,0,5"/>

                        <TextBlock Grid.Row="3" Grid.Column="0" Text="Stock Sistema:" FontWeight="Bold" Margin="0,0,10,5"/>
                        <TextBlock Grid.Row="3" Grid.Column="1" Text="{Binding StockSistemaFormateado}" 
                                   Foreground="Blue" FontWeight="Bold" Margin="0,0,20,5"/>
                        <TextBlock Grid.Row="3" Grid.Column="2" Text="Fecha Caducidad:" FontWeight="Bold" Margin="0,0,10,5"/>
                        <TextBlock Grid.Row="3" Grid.Column="3" Text="{Binding FechaCaducidadFormateada}" Margin="0,0,0,5"/>
                    </Grid>
                </GroupBox>

                <!-- Datos del inventario -->
                <GroupBox Header="Datos del Inventario" Margin="0,0,0,15">
                    <Grid Margin="10">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <TextBlock Grid.Row="0" Grid.Column="0" Text="Stock Físico:" FontWeight="Bold" 
                                   VerticalAlignment="Center" Margin="0,0,10,5"/>
                        <TextBox Grid.Row="0" Grid.Column="1" 
                                 Text="{Binding StockFisicoTexto, UpdateSourceTrigger=PropertyChanged}"
                                 Style="{StaticResource EstiloCajaTexto}"
                                 Margin="0,0,20,5"
                                 FontSize="14"
                                 FontWeight="Bold"/>

                        <TextBlock Grid.Row="0" Grid.Column="2" Text="Diferencia:" FontWeight="Bold" 
                                   VerticalAlignment="Center" Margin="0,0,10,5"/>
                        <TextBlock Grid.Row="0" Grid.Column="3" Text="{Binding DiferenciaFormateada}" 
                                   Foreground="{Binding ColorDiferencia}" FontWeight="Bold" 
                                   VerticalAlignment="Center" Margin="0,0,0,5"/>

                        <TextBlock Grid.Row="1" Grid.Column="0" Text="Observaciones:" FontWeight="Bold" 
                                   VerticalAlignment="Top" Margin="0,10,10,0"/>
                        <TextBox Grid.Row="1" Grid.Column="1" Grid.ColumnSpan="3"
                                 Text="{Binding Observaciones, UpdateSourceTrigger=PropertyChanged}"
                                 Style="{StaticResource EstiloCajaTexto}"
                                 Height="60"
                                 TextWrapping="Wrap"
                                 AcceptsReturn="True"
                                 VerticalScrollBarVisibility="Auto"
                                 Margin="0,10,0,0"/>
                    </Grid>
                </GroupBox>

                <!-- Información adicional -->
                <GroupBox Header="Información Adicional" Margin="0,0,0,15">
                    <Grid Margin="10">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <TextBlock Grid.Row="0" Grid.Column="0" Text="Usuario:" FontWeight="Bold" Margin="0,0,10,5"/>
                        <TextBlock Grid.Row="0" Grid.Column="1" Text="{Binding UsuarioInventario}" Margin="0,0,20,5"/>
                        <TextBlock Grid.Row="0" Grid.Column="2" Text="Fecha:" FontWeight="Bold" Margin="0,0,10,5"/>
                        <TextBlock Grid.Row="0" Grid.Column="3" Text="{Binding FechaInventarioFormateada}" Margin="0,0,0,5"/>

                        <TextBlock Grid.Row="1" Grid.Column="0" Text="Código Palet:" FontWeight="Bold" Margin="0,0,10,5"/>
                        <TextBlock Grid.Row="1" Grid.Column="1" Text="{Binding CodigoPalet}" Margin="0,0,20,5"/>
                        <TextBlock Grid.Row="1" Grid.Column="2" Text="Estado Palet:" FontWeight="Bold" Margin="0,0,10,5"/>
                        <TextBlock Grid.Row="1" Grid.Column="3" Text="{Binding EstadoPalet}" Margin="0,0,0,5"/>
                    </Grid>
                </GroupBox>
            </StackPanel>
        </ScrollViewer>

        <!-- Botones -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,20,0,0">
            <Button Content="Guardar" 
                    Command="{Binding GuardarCommand}"
                    Style="{StaticResource EstiloBoton}"
                    Width="100"
                    Height="35"
                    Margin="0,0,10,0"/>
            <Button Content="Cancelar" 
                    Command="{Binding CancelarCommand}"
                    Style="{StaticResource EstiloBotonSecundario}"
                    Width="100"
                    Height="35"/>
        </StackPanel>
    </Grid>
</Window> 