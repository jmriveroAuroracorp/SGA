<Window x:Class="SGA_Desktop.Dialog.GestionEmpresasOperarioDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="GESTIÓN DE EMPRESAS DEL OPERARIO"
        Width="700"
        Height="500"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent">

    <!-- Recursos -->
    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="pack://application:,,,/SGA_Desktop;component/Resources/Estilos.xaml"/>
            </ResourceDictionary.MergedDictionaries>
            
            <!-- Converters -->
            <BooleanToVisibilityConverter x:Key="BoolToVisibilityConverter"/>
        </ResourceDictionary>
    </Window.Resources>

    <!-- Marco principal -->
    <Border CornerRadius="8"
            Background="{StaticResource BrushFondo}"
            BorderBrush="{StaticResource BrushPrincipal}"
            BorderThickness="2">

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="50"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="60"/>
            </Grid.RowDefinitions>

            <!-- Header -->
            <Border Grid.Row="0" 
                    Background="{StaticResource BrushPrincipal}"
                    CornerRadius="6,6,0,0">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="40"/>
                    </Grid.ColumnDefinitions>
                    
                    <TextBlock Grid.Column="0"
                               x:Name="TitleText"
                               Text="GESTIÓN DE EMPRESAS DEL OPERARIO"
                               Foreground="White"
                               FontSize="16"
                               FontWeight="Bold"
                               HorizontalAlignment="Center"
                               VerticalAlignment="Center"/>
                    
                    <Button Grid.Column="1"
                            Content="✕"
                            Background="Transparent"
                            Foreground="White"
                            BorderThickness="0"
                            FontSize="16"
                            FontWeight="Bold"
                            Click="CloseButton_Click"
                            Cursor="Hand"/>
                </Grid>
            </Border>

            <!-- Contenido principal -->
            <Grid Grid.Row="1" Margin="20">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="100"/>
                </Grid.RowDefinitions>

                <!-- Información del operario -->
                <TextBlock Grid.Row="0" 
                           x:Name="TxtOperarioInfo"
                           Text="Operario: [Nombre del operario]"
                           FontSize="14"
                           FontWeight="Bold"
                           Margin="0,0,0,15"/>

                <!-- Lista de empresas asignadas -->
                <GroupBox Grid.Row="1" Header="Empresas Asignadas" Margin="0,0,0,15">
                    <ScrollViewer VerticalScrollBarVisibility="Auto" MaxHeight="200">
                        <StackPanel x:Name="SpEmpresasAsignadas">
                            <!-- Las empresas se cargarán dinámicamente aquí -->
                        </StackPanel>
                    </ScrollViewer>
                </GroupBox>

                <!-- Separador -->
                <Separator Grid.Row="2" Margin="0,10"/>

                <!-- Asignar nueva empresa -->
                <GroupBox Grid.Row="3" Header="Asignar Nueva Empresa">
                    <Grid Margin="10">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="100"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="100"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="100"/>
                        </Grid.ColumnDefinitions>

                        <!-- Empresa -->
                        <TextBlock Grid.Row="0" Grid.Column="0" Text="Empresa:" VerticalAlignment="Center"/>
                        <ComboBox Grid.Row="0" Grid.Column="1" Grid.ColumnSpan="2" 
                                  x:Name="CmbEmpresas" 
                                  DisplayMemberPath="Nombre"
                                  SelectedValuePath="CodigoEmpresa"
                                  Margin="5,0,10,0"/>

                        <!-- Empresa Origen -->
                        <TextBlock Grid.Row="0" Grid.Column="3" Text="Origen:" VerticalAlignment="Center"/>
                        <TextBox Grid.Row="0" Grid.Column="4" x:Name="TxtEmpresaOrigen" Margin="5,0"/>

                        <!-- Botón Asignar -->
                        <Button Grid.Row="1" Grid.Column="4" 
                                Content="Asignar"
                                Click="AsignarEmpresa_Click"
                                Width="80"
                                Height="30"
                                Margin="5,10,0,0"
                                Style="{StaticResource EstiloBotonPrincipal}"/>
                    </Grid>
                </GroupBox>
            </Grid>

            <!-- Footer con botones -->
            <Border Grid.Row="2" 
                    Background="{StaticResource BrushSecundario1}"
                    CornerRadius="0,0,6,6"
                    Padding="20,10">
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                    <Button Content="Recargar"
                            Width="100"
                            Height="35"
                            Margin="0,0,10,0"
                            Click="Recargar_Click"
                            Style="{StaticResource EstiloBotonSecundario}"/>
                    
                    <Button Content="Cerrar"
                            Width="100"
                            Height="35"
                            Click="CloseButton_Click"
                            Style="{StaticResource EstiloBotonSecundario}"/>
                </StackPanel>
            </Border>
        </Grid>
    </Border>
</Window>
