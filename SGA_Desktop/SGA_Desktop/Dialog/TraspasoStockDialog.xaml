<Window x:Class="SGA_Desktop.Dialog.TraspasoStockDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Traspaso de Stock"
        SizeToContent="WidthAndHeight"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent">

    <!-- Carga de estilos globales -->
    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="pack://application:,,,/SGA_Desktop;component/Resources/Estilos.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Window.Resources>

    <Border CornerRadius="8"
            Background="{StaticResource BrushFondo}"
            BorderBrush="{StaticResource BrushPrincipal}"
            BorderThickness="2"
            Padding="20">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="2*"/>
            </Grid.ColumnDefinitions>

            <!-- Columna izquierda: Origen -->
            <StackPanel Grid.Row="0" Grid.Column="0" Grid.RowSpan="6" Margin="0,0,20,0">
                <TextBlock Text="Código artículo:" Style="{StaticResource LabelStyle}" Margin="0,0,0,8"/>
                <TextBlock Text="{Binding CodigoArticulo}" Margin="0,0,0,12"/>

                <TextBlock Text="Artículo:" Style="{StaticResource LabelStyle}" Margin="0,0,0,8"/>
                <TextBlock Text="{Binding ArticuloDescripcion}" Margin="0,0,0,12"/>

                <TextBlock Text="Almacén Origen:" Style="{StaticResource LabelStyle}" Margin="0,0,0,8"/>
                <TextBlock Text="{Binding AlmacenOrigenNombre}" Margin="0,0,0,12"/>

                <TextBlock Text="Ubicación Origen:" Style="{StaticResource LabelStyle}" Margin="0,0,0,8"/>
                <TextBlock Text="{Binding UbicacionOrigen}" Margin="0,0,0,12"/>

                <TextBlock Text="Cantidad disponible:" Style="{StaticResource LabelStyle}" Margin="0,0,0,8"/>
                <TextBlock Text="{Binding CantidadDisponible}" Margin="0,0,0,0"/>
            </StackPanel>

            <!-- Columna derecha: Destino -->
            <StackPanel Grid.Row="0" Grid.Column="1" Grid.RowSpan="6">
                <TextBlock Text="Almacén Destino:" Style="{StaticResource LabelStyle}" Margin="0,0,0,8"/>
                <ComboBox ItemsSource="{Binding AlmacenesDestino}"
                          SelectedItem="{Binding AlmacenDestinoSeleccionado, Mode=TwoWay}"
                          DisplayMemberPath="DescripcionCombo"
                          Style="{StaticResource EstiloComboBox}" Margin="0,0,0,12"/>

                <TextBlock Text="Ubicación destino:" Style="{StaticResource LabelStyle}" Margin="0,0,0,8"/>
                <ComboBox ItemsSource="{Binding UbicacionesDestino}"
                          SelectedItem="{Binding UbicacionDestinoSeleccionada, Mode=TwoWay}"
                          DisplayMemberPath="Ubicacion"
                          Style="{StaticResource EstiloComboBox}" Margin="0,0,0,12"/>

                <TextBlock Text="Cantidad a traspasar:" Style="{StaticResource LabelStyle}" Margin="0,0,0,8"/>
                <TextBox Text="{Binding CantidadATraspasarTexto, UpdateSourceTrigger=PropertyChanged}"
                         Style="{StaticResource EstiloCajaTexto}" Margin="0,0,0,0"/>
                <!-- Aquí puedes añadir más campos de destino en el futuro -->
            </StackPanel>

            <!-- Botones -->
            <StackPanel Grid.Row="6" Grid.ColumnSpan="2" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,20,0,0">
                <Button Content="Cancelar" Width="90" Margin="0,0,10,0" IsCancel="True" Command="{Binding CancelarCommand}" Style="{StaticResource EstiloBotonPrincipal}"/>
                <Button Content="Traspasar"
                        Command="{Binding ConfirmarCommand}"
                        Style="{StaticResource EstiloBotonPrincipal}" Width="120" Height="40" Margin="10,0,0,0"/>
            </StackPanel>
        </Grid>
    </Border>
</Window> 