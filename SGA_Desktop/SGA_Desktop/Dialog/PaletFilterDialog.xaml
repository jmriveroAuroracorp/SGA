<Window x:Class="SGA_Desktop.Dialog.PaletFilterDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Filtros de Palet"
        SizeToContent="WidthAndHeight"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent">

    <!-- 1) Carga de Estilos generales -->
    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <!-- Ajusta la URI si tu Estilos.xaml está en otra carpeta -->
                <ResourceDictionary Source="pack://application:,,,/SGA_Desktop;component/Resources/Estilos.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Window.Resources>

    <!-- 2) Marco redondeado con fondo y bordes -->
    <Border CornerRadius="8"
            Background="{StaticResource BrushFondo}"
            BorderBrush="{StaticResource BrushPrincipal}"
            BorderThickness="2"
            Padding="20">

        <!-- 3) Aquí dentro pones tu Grid de filtros -->
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <!-- Código -->
            <TextBlock Grid.Row="0" Grid.Column="0" Text="Código:" Style="{StaticResource LabelStyle}" VerticalAlignment="Center"/>
            <TextBox   Grid.Row="0" Grid.Column="1" Text="{Binding Codigo, UpdateSourceTrigger=PropertyChanged}" Style="{StaticResource EstiloCajaTexto}" Width="200"/>

            <!-- Estado -->
            <TextBlock Grid.Row="1" Grid.Column="0" Text="Estado:" Style="{StaticResource LabelStyle}" VerticalAlignment="Center"/>
            <ComboBox Grid.Row="1" Grid.Column="1" ItemsSource="{Binding EstadosDisponibles}" SelectedItem="{Binding EstadoSeleccionado}" Style="{StaticResource EstiloComboBox}" Width="200"/>

            <!-- Tipo de palet -->
            <TextBlock Grid.Row="2" Grid.Column="0" Text="Tipo de palet:" Style="{StaticResource LabelStyle}" VerticalAlignment="Center"/>
            <ComboBox Grid.Row="2" Grid.Column="1" ItemsSource="{Binding TiposPaletDisponibles}" SelectedItem="{Binding TipoPaletSeleccionado}" Style="{StaticResource EstiloComboBox}" DisplayMemberPath="Descripcion" Width="200"/>

            <!-- Fecha Apertura exacta -->
            <TextBlock Grid.Row="3" Grid.Column="0" Text="Fecha Apertura:" Style="{StaticResource LabelStyle}" VerticalAlignment="Center"/>
            <DatePicker Grid.Row="3" Grid.Column="1" SelectedDate="{Binding FechaApertura}" Style="{StaticResource EstiloDatePicker}" Width="200"/>

            <!-- Fecha Cierre exacta -->
            <TextBlock Grid.Row="4" Grid.Column="0" Text="Fecha Cierre:" Style="{StaticResource LabelStyle}" VerticalAlignment="Center"/>
            <DatePicker Grid.Row="4" Grid.Column="1" SelectedDate="{Binding FechaCierre}" Style="{StaticResource EstiloDatePicker}" Width="200"/>

            <!-- Rango Apertura–Cierre -->
            <TextBlock Grid.Row="5" Grid.Column="0" Text="Rango Apertura–Cierre:" FontWeight="Bold" Grid.ColumnSpan="2" Margin="0,10,0,0"/>
            <TextBlock Grid.Row="6" Grid.Column="0" Text="Desde:" Style="{StaticResource LabelStyle}" VerticalAlignment="Center"/>
            <DatePicker Grid.Row="6" Grid.Column="1" SelectedDate="{Binding FechaDesde}" Style="{StaticResource EstiloDatePicker}" Width="200"/>
            <TextBlock Grid.Row="7" Grid.Column="0" Text="Hasta:" Style="{StaticResource LabelStyle}" VerticalAlignment="Center"/>
            <DatePicker Grid.Row="7" Grid.Column="1" SelectedDate="{Binding FechaHasta}" Style="{StaticResource EstiloDatePicker}" Width="200"/>

            <!-- Usuario Apertura -->
            <TextBlock Grid.Row="8" Grid.Column="0" Text="Usuario Apertura:" Style="{StaticResource LabelStyle}" VerticalAlignment="Center"/>
            <TextBox   Grid.Row="8" Grid.Column="1" Text="{Binding UsuarioApertura}" Style="{StaticResource EstiloCajaTexto}" Width="200"/>

            <!-- Usuario Cierre -->
            <TextBlock Grid.Row="9" Grid.Column="0" Text="Usuario Cierre:" Style="{StaticResource LabelStyle}" VerticalAlignment="Center"/>
            <TextBox   Grid.Row="9" Grid.Column="1" Text="{Binding UsuarioCierre}" Style="{StaticResource EstiloCajaTexto}" Width="200"/>

            <!-- Botones -->
            <StackPanel Grid.Row="10" Grid.Column="0" Grid.ColumnSpan="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,20,0,0">
                <Button Content="Cancelar" Width="90" Margin="0,0,10,0" IsCancel="True" Style="{StaticResource EstiloBotonPrincipal}"/>
                <Button Content="Aplicar"   Width="90" IsDefault="True"      Command="{Binding AplicarFiltrosCommand}" Style="{StaticResource EstiloBotonPrincipal}"/>
            </StackPanel>
        </Grid>
    </Border>
</Window>
