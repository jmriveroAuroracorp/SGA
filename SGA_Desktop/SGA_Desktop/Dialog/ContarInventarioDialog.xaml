<Window x:Class="SGA_Desktop.Dialog.ContarInventarioDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="clr-namespace:SGA_Desktop.ViewModels"
        xmlns:helpers="clr-namespace:SGA_Desktop.Helpers"
        Title="CONTEO DE INVENTARIO"
        Width="1400"
        Height="900"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent">

    <!-- 1) DataContext -->
    <Window.DataContext>
        <vm:ContarInventarioDialogViewModel />
    </Window.DataContext>

    <!-- 2) Carga de Estilos generales -->
    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="pack://application:,,,/SGA_Desktop;component/Resources/Estilos.xaml"/>
            </ResourceDictionary.MergedDictionaries>

            <!-- Converters -->
            <BooleanToVisibilityConverter x:Key="BoolToVisibilityConverter"/>
        </ResourceDictionary>
    </Window.Resources>

    <!-- 3) Marco redondeado con fondo y bordes -->
    <Border CornerRadius="8"
            Background="{StaticResource BrushFondo}"
            BorderBrush="{StaticResource BrushPrincipal}"
            BorderThickness="2">

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="60"/>
                <RowDefinition/>
                <RowDefinition Height="140"/>
            </Grid.RowDefinitions>

            <!-- Header -->
            <Border Grid.Row="0" 
                    Background="{StaticResource BrushPrincipal}" 
                    CornerRadius="6,6,0,0">
                <TextBlock Text="CONTEO DE INVENTARIO" 
                           FontSize="16" 
                           FontWeight="Bold" 
                           Foreground="White"
                           HorizontalAlignment="Center"
                           VerticalAlignment="Center"/>
            </Border>

            <!-- Contenido principal -->
            <Grid Grid.Row="1" Margin="25,25,25,25">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Panel izquierdo: InformaciÃ³n del inventario -->
                <Border Grid.Row="0" 
                        BorderBrush="{StaticResource BrushSecundario}" 
                        BorderThickness="1" 
                        CornerRadius="4"
                        Margin="0,0,0,15">
                    <Grid Margin="15">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <!-- ID Inventario -->
                        <StackPanel Grid.Column="0" Margin="0,0,15,0">
                            <TextBlock Text="ID Inventario:" 
                                       FontWeight="Bold" 
                                       Foreground="{StaticResource BrushPrincipal}"
                                       Margin="0,0,0,5"/>
                            <TextBlock Text="{Binding Inventario.IdInventarioCorto}" 
                                       FontFamily="Consolas" 
                                       FontWeight="Bold" 
                                       FontSize="14" 
                                       Foreground="{StaticResource BrushPrincipal}"/>
                        </StackPanel>

                        <!-- AlmacÃ©n -->
                        <StackPanel Grid.Column="1" Margin="0,0,15,0">
                            <TextBlock Text="AlmacÃ©n:" 
                                       FontWeight="Bold" 
                                       Foreground="{StaticResource BrushPrincipal}"
                                       Margin="0,0,0,5"/>
                            <TextBlock Text="{Binding Inventario.CodigoAlmacen}" 
                                       FontWeight="Bold" 
                                       FontSize="14" 
                                       Foreground="{StaticResource BrushPrincipal}"/>
                        </StackPanel>

                        <!-- Tipo -->
                        <StackPanel Grid.Column="2" Margin="0,0,15,0">
                            <TextBlock Text="Tipo:" 
                                       FontWeight="Bold" 
                                       Foreground="{StaticResource BrushPrincipal}"
                                       Margin="0,0,0,5"/>
                            <TextBlock Text="{Binding Inventario.TipoInventarioFormateado}" 
                                       FontWeight="Bold" 
                                       FontSize="14" 
                                       Foreground="{StaticResource BrushPrincipal}"/>
                        </StackPanel>

                        <!-- Estado -->
                        <StackPanel Grid.Column="3">
                            <TextBlock Text="Estado:" 
                                       FontWeight="Bold" 
                                       Foreground="{StaticResource BrushPrincipal}"
                                       Margin="0,0,0,5"/>
                            <Border Background="#F8F9FA" 
                                    BorderBrush="#DEE2E6" 
                                    BorderThickness="1" 
                                    CornerRadius="3" 
                                    Padding="6,3">
                                <TextBlock Text="{Binding Inventario.EstadoFormateado}" 
                                           FontWeight="SemiBold" 
                                           FontSize="12" 
                                           HorizontalAlignment="Center">
                                    <TextBlock.Style>
                                        <Style TargetType="TextBlock">
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding Inventario.Estado}" Value="ABIERTO">
                                                    <Setter Property="Foreground" Value="#198754"/>
                                                </DataTrigger>
                                                <DataTrigger Binding="{Binding Inventario.Estado}" Value="PENDIENTE_CIERRE">
                                                    <Setter Property="Foreground" Value="#FD7E14"/>
                                                </DataTrigger>
                                                <DataTrigger Binding="{Binding Inventario.Estado}" Value="CERRADO">
                                                    <Setter Property="Foreground" Value="#6C757D"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </TextBlock.Style>
                                </TextBlock>
                            </Border>
                        </StackPanel>
                    </Grid>
                </Border>

                <!-- Filtros -->
                <Border Grid.Row="1" 
                        BorderBrush="{StaticResource BrushSecundario}" 
                        BorderThickness="1" 
                        CornerRadius="4"
                        Margin="0,0,0,15">
                    <Grid Margin="15">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <!-- TÃ­tulo filtros -->
                        <TextBlock Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="3"
                                   Text="ðŸ” Filtros de BÃºsqueda" 
                                   FontWeight="Bold" 
                                   Foreground="{StaticResource BrushPrincipal}"
                                   Margin="0,0,0,10"/>

                        <!-- UbicaciÃ³n -->
                        <StackPanel Grid.Row="1" Grid.Column="0" Margin="0,0,15,0">
                            <TextBlock Text="UbicaciÃ³n" 
                                       FontWeight="Bold" 
                                       Foreground="{StaticResource BrushPrincipal}"
                                       Margin="0,0,0,5"/>
                            <TextBox Text="{Binding FiltroUbicacion}" 
                                     Style="{StaticResource EstiloCajaTexto}" 
                                     Height="40"/>
                        </StackPanel>

                        <!-- ArtÃ­culo -->
                        <StackPanel Grid.Row="1" Grid.Column="1" Margin="0,0,15,0">
                            <TextBlock Text="ArtÃ­culo" 
                                       FontWeight="Bold" 
                                       Foreground="{StaticResource BrushPrincipal}"
                                       Margin="0,0,0,5"/>
                            <TextBox Text="{Binding FiltroArticulo}" 
                                     Style="{StaticResource EstiloCajaTexto}" 
                                     Height="40"/>
                        </StackPanel>

                        <!-- BotÃ³n limpiar filtros -->
                        <StackPanel Grid.Row="1" Grid.Column="2" 
                                    VerticalAlignment="Center">
                            <Button Content="ðŸ§¹ Limpiar"
                                    Command="{Binding LimpiarFiltrosCommand}"
                                    Style="{StaticResource EstiloBotonSecundario}"
                                    Width="80" Height="30"/>
                        </StackPanel>
                    </Grid>
                </Border>

                <!-- Lista de artÃ­culos -->
                <Border Grid.Row="2" 
                        BorderBrush="{StaticResource BrushSecundario}" 
                        BorderThickness="1" 
                        CornerRadius="4">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <!-- TÃ­tulo y estado de carga -->
                        <Grid Grid.Row="0" Margin="20,20,20,15">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <TextBlock Grid.Column="0"
                                       Text="ðŸ“‹ ArtÃ­culos para Conteo" 
                                       FontWeight="Bold" 
                                       Foreground="{StaticResource BrushPrincipal}"/>

                            <!-- Estado de carga -->
                            <StackPanel Grid.Column="1" 
                                        Orientation="Horizontal" 
                                        Visibility="{Binding IsCargando, Converter={StaticResource BoolToVisibilityConverter}}">
                                <ProgressBar Width="20" Height="20" 
                                             IsIndeterminate="True" 
                                             Margin="0,0,10,0"/>
                                <TextBlock Text="{Binding MensajeEstado}" 
                                           VerticalAlignment="Center"
                                           Foreground="{StaticResource BrushSecundario}"
                                           FontStyle="Italic"/>
                            </StackPanel>
                        </Grid>

                        <!-- DataGrid de artÃ­culos -->
                        <DataGrid Grid.Row="1" 
                                  ItemsSource="{Binding ArticulosInventario}"
                                  SelectedItem="{Binding ArticuloSeleccionado}"
                                  AutoGenerateColumns="False"
                                  CanUserAddRows="False"
                                  CanUserDeleteRows="False"
                                  CanUserReorderColumns="True"
                                  CanUserResizeColumns="True"
                                  CanUserSortColumns="True"
                                  GridLinesVisibility="Horizontal"
                                  HeadersVisibility="Column"
                                  SelectionMode="Single"
                                  Style="{StaticResource EstiloDataGrid}"
                                  Margin="20,0,20,20">

                            <DataGrid.Columns>
                                <!-- Icono -->
                                <DataGridTemplateColumn Header="" Width="30">
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <TextBlock Text="ðŸ“¦" FontSize="16" HorizontalAlignment="Center"/>
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>

                                <!-- ArtÃ­culo -->
                                <DataGridTextColumn Header="ArtÃ­culo" 
                                                    Binding="{Binding DescripcionArticulo}" 
                                                    Width="*" MinWidth="200"
                                                    IsReadOnly="True"/>

                                <!-- AlmacÃ©n -->
                                <DataGridTextColumn Header="AlmacÃ©n" 
                                                    Binding="{Binding CodigoAlmacen}" 
                                                    Width="100" IsReadOnly="True"/>

                                <!-- UbicaciÃ³n -->
                                <DataGridTextColumn Header="UbicaciÃ³n" 
                                                    Binding="{Binding CodigoUbicacion}" 
                                                    Width="120" IsReadOnly="True"/>

                                <!-- Partida -->
                                <DataGridTextColumn Header="Partida" 
                                                    Binding="{Binding Partida}" 
                                                    Width="100" IsReadOnly="True"/>

                                <!-- Caducidad -->
                                <DataGridTextColumn Header="Caducidad" 
                                                    Binding="{Binding FechaCaducidad, StringFormat=dd/MM/yyyy}" 
                                                    Width="100" IsReadOnly="True"/>

                                <!-- Color -->
                                <DataGridTextColumn Header="Color" 
                                                    Binding="{Binding Color}" 
                                                    Width="80" IsReadOnly="True"/>

                                <!-- Talla -->
                                <DataGridTextColumn Header="Talla" 
                                                    Binding="{Binding Talla}" 
                                                    Width="80" IsReadOnly="True"/>

                                <!-- Stock -->
                                <DataGridTextColumn Header="Stock" 
                                                    Binding="{Binding StockActual}" 
                                                    Width="80" IsReadOnly="True">
                                    <DataGridTextColumn.ElementStyle>
                                        <Style TargetType="TextBlock">
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding StockActual}" Value="0">
                                                    <Setter Property="Foreground" Value="Red"/>
                                                </DataTrigger>
                                                <DataTrigger Binding="{Binding StockActual}" Value="{x:Null}">
                                                    <Setter Property="Foreground" Value="Red"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </DataGridTextColumn.ElementStyle>
                                </DataGridTextColumn>

                                <!-- Inventario (editable) -->
                                <DataGridTextColumn Header="Inventario" 
                                                    Binding="{Binding CantidadInventario}" 
                                                    Width="100">
                                    <DataGridTextColumn.ElementStyle>
                                        <Style TargetType="TextBlock">
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding CantidadInventario}" Value="0">
                                                    <Setter Property="Foreground" Value="Red"/>
                                                </DataTrigger>
                                                <DataTrigger Binding="{Binding CantidadInventario}" Value="{x:Null}">
                                                    <Setter Property="Foreground" Value="Red"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </DataGridTextColumn.ElementStyle>
                                </DataGridTextColumn>
                            </DataGrid.Columns>
                        </DataGrid>
                    </Grid>
                </Border>
            </Grid>

            <!-- Footer con botones -->
            <Border Grid.Row="2" 
                    Background="{StaticResource BrushSecundario}" 
                    CornerRadius="0,0,6,6">
                <Grid Margin="25">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Primera fila: InformaciÃ³n y controles -->
                    <Grid Grid.Row="0" Margin="0,0,0,10">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <!-- InformaciÃ³n -->
                        <StackPanel Grid.Column="0" 
                                    Orientation="Horizontal" 
                                    VerticalAlignment="Center">
                            <TextBlock Text="{Binding TotalArticulos}" 
                                       FontWeight="Bold" 
                                       VerticalAlignment="Center"
                                       Foreground="{StaticResource BrushPrincipal}"
                                       Margin="0,0,20,0"/>
                            <TextBlock Text="{Binding ArticulosContados}" 
                                       FontWeight="Bold" 
                                       VerticalAlignment="Center"
                                       Foreground="Green"/>
                        </StackPanel>

                        <!-- Checkbox Sumar unidades -->
                        <CheckBox Grid.Column="1" 
                                  Content="Sumar unidades" 
                                  IsChecked="{Binding SumarUnidades}"
                                  VerticalAlignment="Center" 
                                  Margin="0,0,20,0"
                                  Foreground="{StaticResource BrushPrincipal}"/>

                        <!-- Campo unidades -->
                        <StackPanel Grid.Column="2" 
                                    Orientation="Horizontal" 
                                    VerticalAlignment="Center">
                            <TextBlock Text="Unidades:" 
                                       VerticalAlignment="Center" 
                                       Margin="0,0,5,0"
                                       Foreground="{StaticResource BrushPrincipal}"/>
                            <TextBox Text="{Binding UnidadesGlobales}" 
                                     Width="80" Height="36" 
                                     Style="{StaticResource EstiloCajaTexto}"/>
                        </StackPanel>
                    </Grid>

                    <!-- Segunda fila: Botones -->
                    <Grid Grid.Row="1">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <!-- Espacio vacÃ­o a la izquierda -->
                        <StackPanel Grid.Column="0"/>

                        <!-- BotÃ³n Cambiar UbicaciÃ³n -->
                        <Button Grid.Column="1"
                                Content="ðŸ“ CAMBIAR UBICACIÃ“N"
                                Command="{Binding CambiarUbicacionCommand}"
                                Style="{StaticResource EstiloBotonSecundario}"
                                Width="180" Height="35" 
                                Margin="0,0,10,0"
                                IsEnabled="{Binding ArticuloSeleccionado, Converter={StaticResource BoolToVisibilityConverter}}"/>

                        <!-- BotÃ³n AÃ±adir ArtÃ­culo -->
                        <Button Grid.Column="2"
                                Content="âž• AÃ‘ADIR ARTÃCULO"
                                Command="{Binding AnadirArticuloCommand}"
                                Style="{StaticResource EstiloBoton}"
                                Width="160" Height="35" 
                                Margin="0,0,10,0"/>

                        <!-- BotÃ³n Guardar -->
                        <Button Grid.Column="3"
                                Content="ðŸ’¾ GUARDAR"
                                Command="{Binding GuardarConteoCommand}"
                                Style="{StaticResource EstiloBotonPrincipal}"
                                Width="120" Height="35"
                                Margin="0,0,10,0"/>

                        <!-- BotÃ³n Cancelar -->
                        <Button Grid.Column="4"
                                Content="âŒ CANCELAR"
                                Command="{Binding CancelarCommand}"
                                Style="{StaticResource EstiloBotonSecundario}"
                                Width="120" Height="35"/>
                    </Grid>
                </Grid>
            </Border>
        </Grid>
    </Border>
</Window> 