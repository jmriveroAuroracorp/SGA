<Window x:Class="SGA_Desktop.Dialog.ContarInventarioDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="clr-namespace:SGA_Desktop.ViewModels"
        xmlns:helpers="clr-namespace:SGA_Desktop.Helpers"
        Title="CONTEO DE INVENTARIO"
        Width="1400"
        Height="900"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent">

    <!-- 1) DataContext -->
    <Window.DataContext>
        <vm:ContarInventarioDialogViewModel />
    </Window.DataContext>

    <!-- 2) Recursos y Estilos -->
    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="pack://application:,,,/SGA_Desktop;component/Resources/Estilos.xaml"/>
            </ResourceDictionary.MergedDictionaries>

            <!-- Converters -->
            <BooleanToVisibilityConverter x:Key="BoolToVisibilityConverter"/>
            <helpers:BoolToBrushConverter x:Key="BoolToBrushConverter"/>
            <helpers:DecimalInputConverter x:Key="DecimalInputConverter"/>
            <helpers:NegativeValueColorConverter x:Key="NegativeValueColorConverter"/>
            
            <!-- Template para el header del expander -->
            <DataTemplate x:Key="ExpanderHeaderTemplate">
                <TextBlock Text="{Binding}" 
                           FontSize="9" 
                           FontWeight="Bold" 
                           Foreground="Orange"
                           HorizontalAlignment="Center"/>
            </DataTemplate>
            

            
            <!-- Proxy para acceder al ViewModel desde los DataTemplates -->
            <helpers:BindingProxy x:Key="VmProxy" Data="{Binding}" />
        </ResourceDictionary>
    </Window.Resources>

    <!-- 3) Marco redondeado con fondo y bordes -->
    <Border CornerRadius="8"
            Background="{StaticResource BrushFondo}"
            BorderBrush="{StaticResource BrushPrincipal}"
            BorderThickness="2">

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="60"/>
                <RowDefinition/>
                <RowDefinition Height="60"/>
            </Grid.RowDefinitions>

            <!-- Header -->
            <Border Grid.Row="0" 
                    Background="{StaticResource BrushPrincipal}" 
                    CornerRadius="6,6,0,0">
                <TextBlock Text="CONTEO DE INVENTARIO" 
                           FontSize="16" 
                           FontWeight="Bold" 
                           Foreground="White"
                           HorizontalAlignment="Center"
                           VerticalAlignment="Center"/>
            </Border>

            <!-- Contenido principal -->
            <Grid Grid.Row="1" Margin="25,25,25,25">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Panel izquierdo: Información del inventario -->
                <Border Grid.Row="0" 
                        BorderBrush="{StaticResource BrushSecundario}" 
                        BorderThickness="1" 
                        CornerRadius="4"
                        Margin="0,0,0,15">
                    <Grid Margin="15">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <!-- ID Inventario -->
                        <StackPanel Grid.Column="0" Margin="0,0,15,0">
                            <TextBlock Text="ID Inventario:" 
                                       FontWeight="Bold" 
                                       Foreground="{StaticResource BrushPrincipal}"
                                       Margin="0,0,0,5"/>
                            <TextBlock Text="{Binding Inventario.IdInventarioCorto}" 
                                       FontFamily="Consolas" 
                                       FontWeight="Bold" 
                                       FontSize="14" 
                                       Foreground="{StaticResource BrushPrincipal}"/>
                        </StackPanel>

                        <!-- Almacén -->
                        <StackPanel Grid.Column="1" Margin="0,0,15,0">
                            <TextBlock Text="Almacén:" 
                                       FontWeight="Bold" 
                                       Foreground="{StaticResource BrushPrincipal}"
                                       Margin="0,0,0,5"/>
                            <TextBlock Text="{Binding Inventario.CodigoAlmacen}" 
                                       FontWeight="Bold" 
                                       FontSize="14" 
                                       Foreground="{StaticResource BrushPrincipal}"/>
                        </StackPanel>

                        <!-- Tipo -->
                        <StackPanel Grid.Column="2" Margin="0,0,15,0">
                            <TextBlock Text="Tipo:" 
                                       FontWeight="Bold" 
                                       Foreground="{StaticResource BrushPrincipal}"
                                       Margin="0,0,0,5"/>
                            <TextBlock Text="{Binding Inventario.TipoInventarioFormateado}" 
                                       FontWeight="Bold" 
                                       FontSize="14" 
                                       Foreground="{StaticResource BrushPrincipal}"/>
                        </StackPanel>

                        <!-- Estado -->
                        <StackPanel Grid.Column="3">
                            <TextBlock Text="Estado:" 
                                       FontWeight="Bold" 
                                       Foreground="{StaticResource BrushPrincipal}"
                                       Margin="0,0,0,5"/>
                            <Border Background="#F8F9FA" 
                                    BorderBrush="#DEE2E6" 
                                    BorderThickness="1" 
                                    CornerRadius="3" 
                                    Padding="6,3">
                                <TextBlock Text="{Binding Inventario.EstadoFormateado}" 
                                           FontWeight="SemiBold" 
                                           FontSize="12" 
                                           HorizontalAlignment="Center">
                                    <TextBlock.Style>
                                        <Style TargetType="TextBlock">
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding Inventario.Estado}" Value="ABIERTO">
                                                    <Setter Property="Foreground" Value="#198754"/>
                                                </DataTrigger>
                                                <DataTrigger Binding="{Binding Inventario.Estado}" Value="PENDIENTE_CIERRE">
                                                    <Setter Property="Foreground" Value="#FD7E14"/>
                                                </DataTrigger>
                                                <DataTrigger Binding="{Binding Inventario.Estado}" Value="CERRADO">
                                                    <Setter Property="Foreground" Value="#6C757D"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </TextBlock.Style>
                                </TextBlock>
                            </Border>
                        </StackPanel>
                    </Grid>
                </Border>

                <!-- Filtros -->
                <Border Grid.Row="1" 
                        BorderBrush="{StaticResource BrushSecundario}" 
                        BorderThickness="1" 
                        CornerRadius="4"
                        Margin="0,0,0,15">
                    <Grid Margin="15">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <!-- Título filtros -->
                        <TextBlock Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="3"
                                   Text="🔍 Filtros de Búsqueda" 
                                   FontWeight="Bold" 
                                   Foreground="{StaticResource BrushPrincipal}"
                                   Margin="0,0,0,10"/>

                        <!-- Ubicación -->
                        <StackPanel Grid.Row="1" Grid.Column="0" Margin="0,0,15,0">
                            <TextBlock Text="Ubicación" 
                                       FontWeight="Bold" 
                                       Foreground="{StaticResource BrushPrincipal}"
                                       Margin="0,0,0,5"/>
                            <TextBox Name="FiltroUbicacionTextBox"
                                     Text="{Binding FiltroUbicacion, UpdateSourceTrigger=PropertyChanged}" 
                                     Style="{StaticResource EstiloCajaTexto}" 
                                     Height="40"/>
                        </StackPanel>

                        <!-- Artículo -->
                        <StackPanel Grid.Row="1" Grid.Column="1" Margin="0,0,15,0">
                            <TextBlock Text="Artículo" 
                                       FontWeight="Bold" 
                                       Foreground="{StaticResource BrushPrincipal}"
                                       Margin="0,0,0,5"/>
                            <TextBox Name="FiltroArticuloTextBox"
                                     Text="{Binding FiltroArticulo, UpdateSourceTrigger=PropertyChanged}" 
                                     Style="{StaticResource EstiloCajaTexto}" 
                                     Height="40"/>
                        </StackPanel>

                        <!-- Botón limpiar filtros -->
                        <StackPanel Grid.Row="1" Grid.Column="2" 
                                    VerticalAlignment="Center">
                            <Button Content="🧹 Limpiar"
                                    Command="{Binding LimpiarFiltrosCommand}"
                                    Style="{StaticResource EstiloBotonSecundario}"
                                    Width="80" Height="30"/>
                        </StackPanel>
                    </Grid>
                </Border>

                <!-- Lista de artículos -->
                <Border Grid.Row="2" 
                        BorderBrush="{StaticResource BrushSecundario}" 
                        BorderThickness="1" 
                        CornerRadius="4">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <!-- Título y estado de carga -->
                        <Grid Grid.Row="0" Margin="20,20,20,15">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <TextBlock Grid.Column="0"
                                       Text="📋 Artículos para Conteo" 
                                       FontWeight="Bold" 
                                       Foreground="{StaticResource BrushPrincipal}"/>

                            <!-- Estado de carga -->
                            <StackPanel Grid.Column="1" 
                                        Orientation="Horizontal" 
                                        Visibility="{Binding IsCargando, Converter={StaticResource BoolToVisibilityConverter}}">
                                <ProgressBar Width="20" Height="20" 
                                             IsIndeterminate="True" 
                                             Margin="0,0,10,0"/>
                                <TextBlock Text="{Binding MensajeEstado}" 
                                           VerticalAlignment="Center"
                                           Foreground="{StaticResource BrushSecundario}"
                                           FontStyle="Italic"/>
                            </StackPanel>
                        </Grid>

                        <!-- Cards de artículos -->
                        <ScrollViewer Grid.Row="1" 
                                      VerticalScrollBarVisibility="Auto" 
                                      HorizontalScrollBarVisibility="Disabled"
                                      Margin="20,0,20,20">
                            <StackPanel>
                                <!-- Header de columnas -->
                                <Border Background="{StaticResource BrushSecundario}" 
                                        BorderBrush="{StaticResource BrushIntermedio}" 
                                        BorderThickness="0,0,0,1"
                                        Padding="12,8"
                                        Margin="0,0,0,8">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="80"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="120"/>
                                            <ColumnDefinition Width="100"/>
                                            <ColumnDefinition Width="100"/>
                                            <ColumnDefinition Width="100"/>
                                            <ColumnDefinition Width="80"/>
                                            <ColumnDefinition Width="120"/>
                                            <ColumnDefinition Width="100"/>
                                        </Grid.ColumnDefinitions>
                                        
                                        <TextBlock Grid.Column="0" Text="Código" FontWeight="Bold" FontSize="11" Foreground="{StaticResource BrushPrincipal}"/>
                                        <TextBlock Grid.Column="1" Text="Artículo" FontWeight="Bold" FontSize="11" Foreground="{StaticResource BrushPrincipal}" Margin="8,0"/>
                                        <TextBlock Grid.Column="2" Text="Almacén" FontWeight="Bold" FontSize="11" Foreground="{StaticResource BrushPrincipal}" HorizontalAlignment="Center"/>
                                        <TextBlock Grid.Column="3" Text="Ubicación" FontWeight="Bold" FontSize="11" Foreground="{StaticResource BrushPrincipal}" HorizontalAlignment="Center"/>
                                        <TextBlock Grid.Column="4" Text="Partida" FontWeight="Bold" FontSize="11" Foreground="{StaticResource BrushPrincipal}" HorizontalAlignment="Center"/>
                                        <TextBlock Grid.Column="5" Text="Caducidad" FontWeight="Bold" FontSize="11" Foreground="{StaticResource BrushPrincipal}" HorizontalAlignment="Center"/>
                                        <TextBlock Grid.Column="6" Text="Stock" FontWeight="Bold" FontSize="11" Foreground="{StaticResource BrushPrincipal}" HorizontalAlignment="Center"/>
                                        <TextBlock Grid.Column="7" Text="Palets" FontWeight="Bold" FontSize="11" Foreground="{StaticResource BrushPrincipal}" HorizontalAlignment="Center"/>
                                        <TextBlock Grid.Column="8" Text="Inventario" FontWeight="Bold" FontSize="11" Foreground="{StaticResource BrushPrincipal}" HorizontalAlignment="Center"/>
                                    </Grid>
                                </Border>

                                <!-- Lista de artículos -->
                                <ItemsControl ItemsSource="{Binding ArticulosInventario}">
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate>
                                            <Border Background="{Binding IsSelected, Converter={StaticResource BoolToBrushConverter}, ConverterParameter='LightBlue|White'}"
                                                    CornerRadius="6" 
                                                    Padding="12" 
                                                    Margin="0,0,0,8" 
                                                    BorderThickness="1" 
                                                    BorderBrush="{StaticResource BrushIntermedio}"
                                                    Cursor="Hand">
                                                <Border.InputBindings>
                                                    <MouseBinding MouseAction="LeftClick" 
                                                                  Command="{Binding DataContext.SeleccionarArticuloCommand, RelativeSource={RelativeSource AncestorType=Window}}" 
                                                                  CommandParameter="{Binding}"/>
                                                </Border.InputBindings>
                                                <Border.ContextMenu>
                                                    <ContextMenu>
                                                        <MenuItem Header="📋 Copiar código"
                                                                  Command="{Binding Data.CopiarCodigoCommand, Source={StaticResource VmProxy}}"
                                                                  CommandParameter="{Binding CodigoArticulo}" />
                                                        <MenuItem Header="📝 Copiar descripción"
                                                                  Command="{Binding Data.CopiarDescripcionCommand, Source={StaticResource VmProxy}}"
                                                                  CommandParameter="{Binding DescripcionArticulo}" />
                                                        <MenuItem Header="📍 Copiar ubicación"
                                                                  Command="{Binding Data.CopiarUbicacionCommand, Source={StaticResource VmProxy}}"
                                                                  CommandParameter="{Binding CodigoUbicacion}" />
                                                    </ContextMenu>
                                                </Border.ContextMenu>
                                                <Border.Effect>
                                                    <DropShadowEffect BlurRadius="4" ShadowDepth="1" Opacity="0.1"/>
                                                </Border.Effect>
                                                
                                                <StackPanel>
                                                    <Grid>
                                                        <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="80"/>
                                                        <ColumnDefinition Width="*"/>
                                                        <ColumnDefinition Width="120"/>
                                                        <ColumnDefinition Width="100"/>
                                                        <ColumnDefinition Width="100"/>
                                                        <ColumnDefinition Width="100"/>
                                                        <ColumnDefinition Width="80"/>
                                                        <ColumnDefinition Width="120"/>
                                                        <ColumnDefinition Width="100"/>
                                                    </Grid.ColumnDefinitions>
                                                    
                                                    <!-- Código -->
                                                    <TextBlock Grid.Column="0" 
                                                               Text="{Binding CodigoArticulo}" 
                                                               FontWeight="Bold" 
                                                               FontSize="13" 
                                                               Foreground="{StaticResource BrushPrincipal}"
                                                               VerticalAlignment="Center"/>
                                                    
                                                    <!-- Descripción -->
                                                    <TextBlock Grid.Column="1" 
                                                               Text="{Binding DescripcionArticulo}" 
                                                               FontSize="12" 
                                                               Foreground="Black"
                                                               TextWrapping="Wrap"
                                                               VerticalAlignment="Center"
                                                               Margin="8,0"/>
                                                    
                                                    <!-- Almacén -->
                                                    <TextBlock Grid.Column="2" 
                                                               Text="{Binding CodigoAlmacen}" 
                                                               FontSize="12" 
                                                               Foreground="Black"
                                                               VerticalAlignment="Center"
                                                               HorizontalAlignment="Center"/>
                                                    
                                                    <!-- Ubicación -->
                                                    <TextBlock Grid.Column="3" 
                                                               Text="{Binding CodigoUbicacion}" 
                                                               FontSize="12" 
                                                               Foreground="Black"
                                                               VerticalAlignment="Center"
                                                               HorizontalAlignment="Center"/>
                                                    
                                                    <!-- Partida -->
                                                    <TextBlock Grid.Column="4" 
                                                               Text="{Binding Partida}" 
                                                               FontSize="12" 
                                                               Foreground="Black"
                                                               VerticalAlignment="Center"
                                                               HorizontalAlignment="Center"/>
                                                    
                                                    <!-- Caducidad -->
                                                    <TextBlock Grid.Column="5" 
                                                               Text="{Binding FechaCaducidad, StringFormat=dd/MM/yyyy}" 
                                                               FontSize="12" 
                                                               Foreground="Black"
                                                               VerticalAlignment="Center"
                                                               HorizontalAlignment="Center"/>
                                                    
                                                    <!-- Stock -->
                                                    <TextBlock Grid.Column="6" 
                                                               Text="{Binding StockActual, StringFormat=F4}" 
                                                               FontSize="12" 
                                                               FontWeight="Bold"
                                                               Foreground="{Binding StockActual, Converter={StaticResource NegativeValueColorConverter}}"
                                                               VerticalAlignment="Center"
                                                               HorizontalAlignment="Center"/>
                                                    
                                                    <!-- Palets -->
                                                    <TextBlock Grid.Column="7" 
                                                               Text="{Binding PaletsResumen}" 
                                                               FontSize="10" 
                                                               Foreground="{Binding TienePalets, Converter={StaticResource BoolToBrushConverter}, ConverterParameter='DarkBlue|Gray'}"
                                                               TextWrapping="Wrap"
                                                               HorizontalAlignment="Center"
                                                               VerticalAlignment="Center"
                                                               MaxWidth="110"/>
                                                    
                                                    <!-- Inventario (editable) -->
                                                    <TextBox Grid.Column="8" 
                                                             Text="{Binding CantidadContadaTexto, UpdateSourceTrigger=LostFocus}" 
                                                             Width="80" 
                                                             Height="24"
                                                             FontSize="12"
                                                             FontWeight="Bold"
                                                             VerticalAlignment="Center"
                                                             HorizontalAlignment="Center"
                                                             GotFocus="TextBox_GotFocus"
                                                             MouseUp="TextBox_MouseUp"
                                                             Padding="4,2"
                                                             BorderThickness="1"
                                                             BorderBrush="Gray"
                                                             PreviewTextInput="TextBox_PreviewTextInput"/>
                                                </Grid>


                                            </StackPanel>
                                        </Border>
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>
                            </StackPanel>
                        </ScrollViewer>
                    </Grid>
                </Border>
            </Grid>

            <!-- Footer con botones -->
            <Border Grid.Row="2" 
                    Background="{StaticResource BrushSecundario}" 
                    CornerRadius="0,0,6,6"
                    BorderThickness="0,1,0,0"
                    BorderBrush="{StaticResource BrushIntermedio}">
                <Grid Margin="15,8">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <!-- Información -->
                    <StackPanel Grid.Column="0" 
                                Orientation="Horizontal" 
                                VerticalAlignment="Center">
                        <TextBlock Text="{Binding TotalArticulos}" 
                                   FontWeight="Bold" 
                                   VerticalAlignment="Center"
                                   Foreground="{StaticResource BrushPrincipal}"
                                   Margin="0,0,20,0"/>
                        <TextBlock Text="{Binding ArticulosContados}" 
                                   FontWeight="Bold" 
                                   VerticalAlignment="Center"
                                   Foreground="Green"/>
                    </StackPanel>

                    <!-- Botón Guardar -->
                    <Button Grid.Column="1"
                            Content="💾 GUARDAR"
                            Command="{Binding GuardarConteoCommand}"
                            IsEnabled="{Binding PuedeGuardar}"
                            Style="{StaticResource EstiloBotonPrincipal}"
                            Width="120" Height="35"
                            Margin="0,0,10,0"/>

                    <!-- Botón Cancelar -->
                    <Button Grid.Column="2"
                            Content="❌ CANCELAR"
                            Command="{Binding CancelarCommand}"
                            Style="{StaticResource EstiloBotonSecundario}"
                            Width="120" Height="35"/>
                </Grid>
            </Border>
        </Grid>
    </Border>
</Window> 