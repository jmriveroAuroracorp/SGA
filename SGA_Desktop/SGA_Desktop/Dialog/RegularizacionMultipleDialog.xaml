<Window x:Class="SGA_Desktop.Dialog.RegularizacionMultipleDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:Helpers="clr-namespace:SGA_Desktop.Helpers"
        Title="Regularización múltiple de stock"
        Width="1300"
        Height="850"
        MinWidth="900"
        MinHeight="600"
        MaxWidth="1300"
        MaxHeight="850"
        WindowStartupLocation="CenterOwner"
        ResizeMode="CanResize"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent">

    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="pack://application:,,,/SGA_Desktop;component/Resources/Estilos.xaml"/>
            </ResourceDictionary.MergedDictionaries>
            <Helpers:ZeroToCollapsedConverter x:Key="ZeroToCollapsedConverter"/>
            <!-- Header atractivo para Expander de artículos -->
            <DataTemplate x:Key="ArticuloExpanderHeaderTemplate">
                <StackPanel Orientation="Horizontal" Margin="8,2">
                    <TextBlock Text="{Binding CodigoArticulo}" 
                               FontWeight="Bold" 
                               Foreground="{StaticResource BrushPrincipal}" 
                               FontSize="16"/>
                    <TextBlock Text=" - " FontSize="16"/>
                    <TextBlock Text="{Binding DescripcionArticulo}" 
                               Foreground="#444" 
                               FontSize="16"/>
                </StackPanel>
            </DataTemplate>
            <!-- Estilo local para ComboBox sin selector -->
            <Style x:Key="ComboBoxSinSelector" TargetType="ComboBox" BasedOn="{StaticResource EstiloComboBox}">
                <Setter Property="ItemTemplate">
                    <Setter.Value>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal" MinHeight="16">
                                <ContentPresenter/>
                            </StackPanel>
                        </DataTemplate>
                    </Setter.Value>
                </Setter>
            </Style>
        </ResourceDictionary>
    </Window.Resources>

    <Border CornerRadius="8"
            Background="{StaticResource BrushFondo}"
            BorderBrush="{StaticResource BrushPrincipal}"
            BorderThickness="2"
            Padding="20">

        <DockPanel LastChildFill="True">

            <!-- CABECERA -->
            <StackPanel DockPanel.Dock="Top" Orientation="Horizontal" Margin="0,0,0,10">
                <TextBlock Text="Traspaso múltiple de stock" Style="{StaticResource LabelStyle}" FontWeight="Bold" FontSize="18"/>
            </StackPanel>

            <!-- BUSCADOR DE ARTÍCULO -->
            <StackPanel Orientation="Horizontal" DockPanel.Dock="Top" Margin="0,0,0,10">
                <TextBlock Text="Artículo:" Style="{StaticResource LabelStyle}" VerticalAlignment="Center"/>
                <TextBox Width="150"
             Text="{Binding ArticuloBuscado, UpdateSourceTrigger=PropertyChanged}"
             Style="{StaticResource EstiloCajaTexto}"
             Margin="5,0">
                    <TextBox.InputBindings>
                        <KeyBinding Key="Return" Command="{Binding BuscarStockCommand}"/>
                    </TextBox.InputBindings>
                </TextBox>
                <TextBlock Text="Nombre:" Style="{StaticResource LabelStyle}" VerticalAlignment="Center" Margin="10,0,0,0"/>
                <TextBox Width="150"
             Text="{Binding ArticuloDescripcion, UpdateSourceTrigger=PropertyChanged}"
             Style="{StaticResource EstiloCajaTexto}"
             Margin="5,0">
                    <TextBox.InputBindings>
                        <KeyBinding Key="Return" Command="{Binding BuscarStockCommand}"/>
                    </TextBox.InputBindings>
                </TextBox>
                <Button Content="Buscar stock"
            Command="{Binding BuscarStockCommand}"
            Style="{StaticResource EstiloBotonPrincipal}"
            Margin="10,0"/>
            </StackPanel>

            <!-- CUERPO: cards + carrito -->
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>

                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="3*" />
                    <ColumnDefinition Width="3*" />
                </Grid.ColumnDefinitions>

                <!-- CARDS -->
                <ScrollViewer Grid.Row="0" Grid.Column="0" VerticalScrollBarVisibility="Auto">
                    <ItemsControl ItemsSource="{Binding ArticulosConStock}">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Expander HeaderTemplate="{StaticResource ArticuloExpanderHeaderTemplate}" Header="{Binding .}" IsExpanded="False" Margin="0,0,0,10">
                                    <StackPanel Margin="10">
                                        <ItemsControl ItemsSource="{Binding Ubicaciones}">
                                            <ItemsControl.ItemTemplate>
                                                <DataTemplate>
                                                    <Border Style="{StaticResource EstiloTarjeta}"
                                                            BorderBrush="{StaticResource BrushPrincipal}"
                                                            BorderThickness="2"
                                                            Background="White"
                                                            CornerRadius="8"
                                                            Padding="10"
                                                            Margin="0,0,0,10">
                                                        <Grid>
                                                            <Grid.RowDefinitions>
                                                                <RowDefinition/>
                                                                <RowDefinition/>
                                                            </Grid.RowDefinitions>
                                                            <StackPanel Orientation="Horizontal" Grid.Row="0" Margin="0,0,0,5">
                                                                <TextBlock Text="Almacén:" FontWeight="Bold" Foreground="{StaticResource BrushPrincipal}"/>
                                                                <TextBlock Text="{Binding CodigoAlmacen}" Margin="5,0" Foreground="{StaticResource BrushGrisOscuro}" FontSize="13"/>
                                                                <TextBlock Text=" | " FontWeight="Bold" Margin="5,0"/>
                                                                <TextBlock Text="Ubicación:" FontWeight="Bold" Foreground="{StaticResource BrushPrincipal}"/>
                                                                <TextBlock Text="{Binding Ubicacion}" Margin="5,0" Foreground="{StaticResource BrushGrisOscuro}" FontSize="13"/>
                                                            </StackPanel>
                                                            <Grid Grid.Row="1">
                                                                <Grid.ColumnDefinitions>
                                                                    <ColumnDefinition Width="*" /> <!-- Lote -->
                                                                    <ColumnDefinition Width="*" /> <!-- Caducidad -->
                                                                    <ColumnDefinition Width="*" /> <!-- Total -->
                                                                    <ColumnDefinition Width="Auto" /> <!-- Reservado/Disponible -->
                                                                    <ColumnDefinition Width="Auto" /> <!-- Cantidad/Botón -->
                                                                </Grid.ColumnDefinitions>
                                                                <StackPanel Grid.Column="0">
                                                                    <TextBlock Text="Lote:" FontWeight="Bold" Foreground="{StaticResource BrushPrincipal}"/>
                                                                    <TextBlock Text="{Binding Partida}" Foreground="{StaticResource BrushGrisOscuro}" FontSize="13"/>
                                                                </StackPanel>
                                                                <StackPanel Grid.Column="1">
                                                                    <TextBlock Text="Caducidad:" FontWeight="Bold" Foreground="{StaticResource BrushPrincipal}"/>
                                                                    <TextBlock Text="{Binding FechaCaducidad, StringFormat=d}" Foreground="{StaticResource BrushGrisOscuro}" FontSize="13"/>
                                                                </StackPanel>
                                                                <StackPanel Grid.Column="2">
                                                                    <TextBlock Text="Total:" FontWeight="Bold" Foreground="{StaticResource BrushPrincipal}"/>
                                                                    <TextBlock Text="{Binding UnidadSaldo, StringFormat=F4}" Foreground="{StaticResource BrushGrisOscuro}" FontSize="13"/>
                                                                    <StackPanel Visibility="{Binding Reservado, Converter={StaticResource ZeroToCollapsedConverter}}">
                                                                        <TextBlock Text="Reservado:" FontWeight="Bold" Foreground="{StaticResource BrushPrincipal}"/>
                                                                        <TextBlock Text="{Binding Reservado, StringFormat=F4}" Margin="4,0,0,0" Foreground="{StaticResource BrushGrisOscuro}" FontSize="13"/>
                                                                    </StackPanel>
                                                                    <TextBlock Text="Disponible:" FontWeight="Bold" Foreground="{StaticResource BrushPrincipal}" Margin="0,2,0,0"/>
                                                                    <TextBlock Text="{Binding Disponible, StringFormat=F4}" FontWeight="Bold" Foreground="Black" FontSize="18" Margin="4,0,0,0" VerticalAlignment="Center"/>
                                                                </StackPanel>
                                                                <StackPanel Grid.Column="4" Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Right">
                                                                    <TextBlock Text="Cantidad:" FontWeight="Bold" Foreground="{StaticResource BrushPrincipal}" Margin="0,0,6,0"/>
                                                                    <TextBox Width="48"
                                                                             Margin="0,0,6,0"
                                                                             FontSize="13"
                                                                             Text="{Binding CantidadAMoverTexto, UpdateSourceTrigger=PropertyChanged}">
                                                                        <TextBox.InputBindings>
                                                                            <KeyBinding Key="Return" Command="{Binding DataContext.AnhadirLineaCommand, RelativeSource={RelativeSource AncestorType=Window}}" CommandParameter="{Binding}"/>
                                                                        </TextBox.InputBindings>
                                                                    </TextBox>
                                                                    <Button Content="Añadir"
                                                                        Command="{Binding DataContext.AnhadirLineaCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                                                        CommandParameter="{Binding}"
                                                                        Style="{StaticResource EstiloBotonPrincipal}"
                                                                        FontSize="13"
                                                                        Padding="8,2"
                                                                        Width="60"
                                                                        Height="28"/>
                                                                </StackPanel>
                                                            </Grid>
                                                        </Grid>
                                                    </Border>
                                                </DataTemplate>
                                            </ItemsControl.ItemTemplate>
                                        </ItemsControl>
                                    </StackPanel>
                                </Expander>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </ScrollViewer>

                <!-- CARRITO -->
                <StackPanel Grid.Row="0" Grid.Column="1" Margin="10">
                    <TextBlock Text="Líneas a regularizar:" FontSize="16" FontWeight="Bold" Margin="0,0,0,10" Foreground="{StaticResource BrushPrincipal}"/>
                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="0,0,0,10">
                        <TextBlock Text="Destino común:" 
               VerticalAlignment="Top" 
               FontWeight="Bold" 
               Foreground="{StaticResource BrushPrincipal}" 
               Margin="0,0,8,0"/>

                        <!-- ComboBox Almacén -->
                        <ComboBox ItemsSource="{Binding AlmacenesDestino}"
              SelectedItem="{Binding DestinoComunAlmacen, Mode=TwoWay}"
              MinWidth="180"
              MaxWidth="360"
              FontSize="14"
              Height="28"
              Padding="6,2"
              HorizontalAlignment="Stretch"
              Style="{StaticResource EstiloComboBox}">
                            <ComboBox.ItemTemplate>
                                <DataTemplate>
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="{Binding CodigoAlmacen}" />
                                        <TextBlock Text=" - " />
                                        <TextBlock Text="{Binding NombreAlmacen}" />
                                    </StackPanel>
                                </DataTemplate>
                            </ComboBox.ItemTemplate>
                        </ComboBox>

                        <!-- ComboBox Ubicación -->
                        <ComboBox ItemsSource="{Binding UbicacionesDestinoComun}"
              SelectedItem="{Binding DestinoComunUbicacion, Mode=TwoWay}"
              MinWidth="180"
              MaxWidth="360"
              FontSize="14"
              Height="28"
              Padding="6,2"
              HorizontalAlignment="Stretch"
              Margin="10,-10,8,0"
              Style="{StaticResource EstiloComboBox}">
                            <ComboBox.ItemTemplate>
                                <DataTemplate>
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="{Binding Ubicacion}" />
                                    </StackPanel>
                                </DataTemplate>
                            </ComboBox.ItemTemplate>
                        </ComboBox>

                        <Button Content="Aplicar a todas"
            Command="{Binding AplicarDestinoComunCommand}"
            Style="{StaticResource EstiloBotonPrincipal}"
            Padding="10,2"/>
                    </StackPanel>

                    <!-- Campo de comentarios -->
                    <StackPanel Orientation="Vertical" Margin="0,10,0,10">
                        <TextBlock Text="Comentarios:" Style="{StaticResource LabelStyle}" Margin="0,0,0,8"/>
                        <TextBox Text="{Binding ComentariosTexto, UpdateSourceTrigger=PropertyChanged}"
                                 Style="{StaticResource EstiloCajaTexto}" 
                                 Height="60" 
                                 MaxHeight="60"
                                 TextWrapping="Wrap" 
                                 AcceptsReturn="True"
                                 ScrollViewer.VerticalScrollBarVisibility="Auto"
                                 ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                                 Margin="0,0,0,12"/>
                    </StackPanel>

                    <ScrollViewer VerticalScrollBarVisibility="Auto" MaxHeight="450">
                    <ItemsControl ItemsSource="{Binding LineasPendientes}">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border Style="{StaticResource EstiloTarjeta}" BorderBrush="{StaticResource BrushPrincipal}" BorderThickness="2" Background="White" Margin="0,0,0,10">
                                    <Grid Margin="8">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto"/>
                                        </Grid.RowDefinitions>
                                        <!-- Columna 1: info principal -->
                                        <StackPanel Grid.Column="0" VerticalAlignment="Center">
                                            <!-- Código y descripción -->
                                            <StackPanel Orientation="Horizontal">
                                                <TextBlock Text="{Binding CodigoArticulo}" FontWeight="Bold" Foreground="{StaticResource BrushPrincipal}" FontSize="14"/>
                                                <TextBlock Text=" - " FontSize="14"/>
                                                <TextBlock Text="{Binding DescripcionArticulo}" FontWeight="Bold" Foreground="#444" FontSize="14"/>
                                            </StackPanel>
                                            <!-- Origen -->
                                            <StackPanel Orientation="Horizontal" Margin="0,2,0,0">
                                                <TextBlock Text="Almacén origen: " FontWeight="Bold" Foreground="{StaticResource BrushPrincipal}" FontSize="13"/>
                                                <TextBlock Text="{Binding CodigoAlmacen}" Foreground="{StaticResource BrushGrisOscuro}" FontSize="13"/>
                                                <TextBlock Text="   |   " FontSize="13"/>
                                                <TextBlock Text="Ubicación origen: " FontWeight="Bold" Foreground="{StaticResource BrushPrincipal}" FontSize="13"/>
                                                <TextBlock Text="{Binding Ubicacion}" Foreground="{StaticResource BrushGrisOscuro}" FontSize="13"/>
                                            </StackPanel>
                                            <!-- Combos destino -->
                                            <StackPanel Orientation="Vertical" Margin="0,6,0,0" HorizontalAlignment="Stretch">
                                                <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="0,0,0,4">
                                                    <TextBlock Text="Almacén destino:" FontSize="13" FontWeight="Bold" Foreground="{StaticResource BrushPrincipal}" Margin="0,0,8,0" VerticalAlignment="Top"/>
                                                    <ComboBox
                                                        ItemsSource="{Binding DataContext.AlmacenesDestino, RelativeSource={RelativeSource AncestorType=Window}}"
                                                        SelectedValue="{Binding AlmacenDestino, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                                        SelectedValuePath="CodigoAlmacen"
                                                        DisplayMemberPath="NombreAlmacen"
                                                        MinWidth="220"
                                                        MaxWidth="400"
                                                        FontSize="14"
                                                        Height="28"
                                                        Padding="6,2"
                                                        HorizontalAlignment="Stretch"
                                                        Style="{StaticResource ComboBoxSinSelector}">
                                                        <ComboBox.ItemTemplate>
                                                            <DataTemplate>
                                                                <StackPanel Orientation="Horizontal" MinHeight="16">
                                                                    <TextBlock Text="🏬" Margin="0,0,4,0"/>
                                                                    <TextBlock>
                                                                        <Run Text="{Binding CodigoAlmacen}" />
                                                                        <Run Text=" - " />
                                                                        <Run Text="{Binding NombreAlmacen}" />
                                                                    </TextBlock>
                                                                </StackPanel>
                                                            </DataTemplate>
                                                        </ComboBox.ItemTemplate>
                                                    </ComboBox>
                                                </StackPanel>
                                                <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                                                        <TextBlock Text="Ubicación destino:" FontSize="13" FontWeight="Bold" Foreground="{StaticResource BrushPrincipal}" Margin="0,0,8,0" VerticalAlignment="Top"/>
                                                    <ComboBox
                                                        ItemsSource="{Binding UbicacionesDestino}"
                                                        SelectedValue="{Binding UbicacionDestino, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                                        SelectedValuePath="Ubicacion"
                                                        DisplayMemberPath="Ubicacion"
                                                        MinWidth="220"
                                                        MaxWidth="400"
                                                        FontSize="14"
                                                        Height="28"
                                                        Padding="6,2"
                                                        HorizontalAlignment="Stretch"
                                                        Style="{StaticResource ComboBoxSinSelector}">
                                                        <ComboBox.ItemTemplate>
                                                            <DataTemplate>
                                                                <StackPanel Orientation="Horizontal" MinHeight="16">
                                                                    <TextBlock Text="📦" Margin="0,0,4,0"/>
                                                                    <TextBlock>
                                                                        <Run Text="{Binding Ubicacion}" />
                                                                    </TextBlock>
                                                                </StackPanel>
                                                            </DataTemplate>
                                                        </ComboBox.ItemTemplate>
                                                    </ComboBox>
                                                </StackPanel>
                                            </StackPanel>
                                        </StackPanel>
                                        <!-- Columna 2: cantidad y botón quitar -->
                                        <StackPanel Grid.Column="1" VerticalAlignment="Center" HorizontalAlignment="Center">
                                            <TextBlock Text="Cantidad:" FontWeight="Bold" Foreground="{StaticResource BrushPrincipal}" FontSize="13" HorizontalAlignment="Center"/>
                                            <TextBlock Text="{Binding CantidadAMover}" FontWeight="Bold" Foreground="Black" FontSize="22" HorizontalAlignment="Center"/>
                                            <Button Content="Quitar"
                                                    Command="{Binding DataContext.EliminarLineaCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                                    CommandParameter="{Binding}"
                                                    Style="{StaticResource EstiloBotonPrincipal}"
                                                    Width="70"
                                                    Height="28"
                                                    FontSize="13"
                                                    Margin="0,12,0,0"/>
                                        </StackPanel>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                    </ScrollViewer>

                </StackPanel>
                
                <!-- BOTONES ABAJO -->
                <StackPanel Grid.Row="1" Grid.ColumnSpan="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
                    <Button Content="Confirmar"
            Width="90"
            Margin="0,0,10,0"
            Command="{Binding ConfirmarCommand}"
            Style="{StaticResource EstiloBotonPrincipal}"/>
                    <Button Content="Cerrar"
                            Width="90"
                            IsCancel="True"
                            Style="{StaticResource EstiloBotonPrincipal}"/>
                </StackPanel>
            </Grid>

        </DockPanel>

    </Border>
</Window> 