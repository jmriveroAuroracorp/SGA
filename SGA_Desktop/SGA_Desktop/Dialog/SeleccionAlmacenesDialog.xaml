<Window x:Class="SGA_Desktop.Dialog.SeleccionAlmacenesDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Seleccionar Almacenes"
        Width="800"
        Height="600"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent">

    <!-- Recursos -->
    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="pack://application:,,,/SGA_Desktop;component/Resources/Estilos.xaml"/>
            </ResourceDictionary.MergedDictionaries>
            
            <!-- Converters -->
            <BooleanToVisibilityConverter x:Key="BoolToVisibilityConverter"/>
        </ResourceDictionary>
    </Window.Resources>

    <!-- Marco principal -->
    <Border CornerRadius="8"
            Background="{StaticResource BrushFondo}"
            BorderBrush="{StaticResource BrushPrincipal}"
            BorderThickness="2">

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="50"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="60"/>
            </Grid.RowDefinitions>

            <!-- Header -->
            <Border Grid.Row="0" 
                    Background="{StaticResource BrushPrincipal}"
                    CornerRadius="6,6,0,0">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="40"/>
                    </Grid.ColumnDefinitions>
                    
                    <TextBlock Grid.Column="0"
                               Text="SELECCIONAR ALMACENES"
                               Foreground="White"
                               FontSize="16"
                               FontWeight="Bold"
                               HorizontalAlignment="Center"
                               VerticalAlignment="Center"/>
                    
                    <Button Grid.Column="1"
                            Content="✕"
                            Background="Transparent"
                            Foreground="White"
                            BorderThickness="0"
                            FontSize="16"
                            FontWeight="Bold"
                            Click="CloseButton_Click"
                            Cursor="Hand"/>
                </Grid>
            </Border>

            <!-- Contenido principal -->
            <Grid Grid.Row="1" Margin="20">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Filtros -->
                <Border Grid.Row="0" 
                        Background="{StaticResource BrushSecundario1}" 
                        Padding="15"
                        BorderBrush="{StaticResource BrushInputBorde}"
                        BorderThickness="0,0,0,1"
                        Margin="0,0,0,10">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="200"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="150"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <!-- Filtro por texto -->
                        <TextBlock Grid.Column="0" 
                                   Text="Buscar:" 
                                   VerticalAlignment="Center" 
                                   Margin="0,0,10,0"/>
                        
                        <TextBox Grid.Column="1" 
                                 x:Name="TxtFiltro"
                                 Height="30"
                                 VerticalContentAlignment="Center"
                                 TextChanged="TxtFiltro_TextChanged"/>
                        
                        <!-- Filtro por empresa -->
                        <TextBlock Grid.Column="2" 
                                   Text="Empresa:" 
                                   VerticalAlignment="Center" 
                                   Margin="20,0,10,0"/>
                        
                        <ComboBox Grid.Column="3" 
                                  x:Name="CmbEmpresaFiltro"
                                  Height="30"
                                  DisplayMemberPath="Nombre"
                                  SelectedValuePath="CodigoEmpresa"
                                  SelectionChanged="CmbEmpresaFiltro_SelectionChanged"/>
                        
                        <!-- Botones de filtro -->
                        <StackPanel Grid.Column="5" 
                                    Orientation="Horizontal" 
                                    HorizontalAlignment="Right">
                            <Button Content="Limpiar"
                                    Click="LimpiarFiltros_Click"
                                    Style="{StaticResource EstiloBotonSecundario}"
                                    Width="80"
                                    Height="30"
                                    Margin="0,0,10,0"/>
                            <Button Content="Seleccionar Todos"
                                    Click="SeleccionarTodos_Click"
                                    Style="{StaticResource EstiloBoton}"
                                    Width="120"
                                    Height="30"/>
                        </StackPanel>
                    </Grid>
                </Border>

                <!-- Lista de almacenes -->
                <Border Grid.Row="1" 
                        Background="White"
                        BorderBrush="{StaticResource BrushInputBorde}"
                        BorderThickness="1"
                        CornerRadius="4">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <!-- Header de la lista -->
                        <Border Grid.Row="0" 
                                Background="{StaticResource BrushSecundario1}"
                                Padding="10,8"
                                BorderBrush="{StaticResource BrushInputBorde}"
                                BorderThickness="0,0,0,1">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="30"/>
                                    <ColumnDefinition Width="80"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="200"/>
                                </Grid.ColumnDefinitions>

                                <CheckBox Grid.Column="0" 
                                          x:Name="ChkSeleccionarTodos"
                                          VerticalAlignment="Center"
                                          Checked="ChkSeleccionarTodos_Checked"
                                          Unchecked="ChkSeleccionarTodos_Unchecked">
                                    <CheckBox.Style>
                                        <Style TargetType="CheckBox">
                                            <Setter Property="IsThreeState" Value="True"/>
                                        </Style>
                                    </CheckBox.Style>
                                </CheckBox>

                                <TextBlock Grid.Column="1" 
                                           Text="Código" 
                                           FontWeight="Bold" 
                                           VerticalAlignment="Center"/>

                                <TextBlock Grid.Column="2" 
                                           Text="Descripción" 
                                           FontWeight="Bold" 
                                           VerticalAlignment="Center"/>

                                <TextBlock Grid.Column="3" 
                                           Text="Empresa" 
                                           FontWeight="Bold" 
                                           VerticalAlignment="Center"/>
                            </Grid>
                        </Border>

                        <!-- Lista scrollable -->
                        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                            <ItemsControl x:Name="ItemsControlAlmacenes">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Border Background="White" 
                                                BorderBrush="{StaticResource BrushInputBorde}"
                                                BorderThickness="0,0,0,1"
                                                Padding="10,8">
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="30"/>
                                                    <ColumnDefinition Width="80"/>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="200"/>
                                                </Grid.ColumnDefinitions>

                                                <CheckBox Grid.Column="0" 
                                                          IsChecked="{Binding IsSelected}"
                                                          VerticalAlignment="Center"/>

                                                <TextBlock Grid.Column="1" 
                                                           Text="{Binding CodigoAlmacen}" 
                                                           FontFamily="Consolas"
                                                           VerticalAlignment="Center"/>

                                                <TextBlock Grid.Column="2" 
                                                           Text="{Binding Descripcion}" 
                                                           VerticalAlignment="Center"
                                                           TextTrimming="CharacterEllipsis"/>

                                                <TextBlock Grid.Column="3" 
                                                           Text="{Binding NombreEmpresa}" 
                                                           VerticalAlignment="Center"
                                                           TextTrimming="CharacterEllipsis"
                                                           Foreground="{StaticResource BrushSecundario}"/>
                                            </Grid>
                                        </Border>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </ScrollViewer>
                    </Grid>
                </Border>

                <!-- Resumen de selección -->
                <Border Grid.Row="2" 
                        Background="{StaticResource BrushSecundario1}" 
                        Padding="15,10"
                        BorderBrush="{StaticResource BrushInputBorde}"
                        BorderThickness="0,1,0,0"
                        Margin="0,10,0,0">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <TextBlock Grid.Column="0" 
                                   x:Name="TxtResumenSeleccion"
                                   VerticalAlignment="Center"
                                   FontWeight="SemiBold"
                                   Foreground="{StaticResource BrushGrisOscuro}"/>

                        <StackPanel Grid.Column="1" 
                                    Orientation="Horizontal">
                            <Button Content="Deseleccionar Todos"
                                    Click="DeseleccionarTodos_Click"
                                    Style="{StaticResource EstiloBotonSecundario}"
                                    Width="120"
                                    Height="30"
                                    Margin="0,0,10,0"/>
                        </StackPanel>
                    </Grid>
                </Border>
            </Grid>

            <!-- Footer con botones -->
            <Border Grid.Row="2" 
                    Background="{StaticResource BrushSecundario1}"
                    CornerRadius="0,0,6,6"
                    Padding="20,10">
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                    <Button Content="Aplicar Selección"
                            Width="140"
                            Height="35"
                            Margin="0,0,10,0"
                            Click="AplicarSeleccion_Click"
                            Style="{StaticResource EstiloBotonPrincipal}"/>
                    
                    <Button Content="Cancelar"
                            Width="100"
                            Height="35"
                            Click="Cancelar_Click"
                            Style="{StaticResource EstiloBotonSecundario}"/>
                </StackPanel>
            </Border>
        </Grid>
    </Border>
</Window>
