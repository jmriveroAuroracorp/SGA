<Window x:Class="SGA_Desktop.Dialog.CrearOrdenTraspasoDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Crear Orden de Traspaso"
        WindowStartupLocation="CenterOwner"
        Height="400" Width="600"
        ResizeMode="CanResize">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Título -->
        <TextBlock Grid.Row="0" Text="Nueva Orden de Traspaso" 
                   FontSize="20" FontWeight="Bold" 
                   Foreground="{StaticResource BrushPrincipal}"
                   Margin="0,0,0,20"/>

        <!-- Contenido básico -->
        <StackPanel Grid.Row="1">
            <TextBlock Text="Funcionalidad en desarrollo..." 
                       HorizontalAlignment="Center" 
                       VerticalAlignment="Center"
                       FontSize="16"/>
        </StackPanel>

        <!-- Botones -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" 
                    HorizontalAlignment="Right" Margin="0,20,0,0">
            <Button Content="Crear" Style="{StaticResource EstiloBotonPrincipal}" 
                    Margin="0,0,10,0" Click="Crear_Click"/>
            <Button Content="Cancelar" Style="{StaticResource EstiloBotonSecundario}" 
                    Click="Cancelar_Click"/>
        </StackPanel>
    </Grid>
</Window>
