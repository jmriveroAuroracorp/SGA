<Window x:Class="SGA_Desktop.Dialog.EditarOrdenConteoDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="clr-namespace:SGA_Desktop.ViewModels"
        xmlns:helpers="clr-namespace:SGA_Desktop.Helpers"
        Title="EDITAR ORDEN DE CONTEO"
        Width="800"
        Height="650"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent">

    <!-- DataContext -->
    <Window.DataContext>
        <vm:EditarOrdenConteoDialogViewModel />
    </Window.DataContext>

    <!-- Recursos -->
    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="pack://application:,,,/SGA_Desktop;component/Resources/Estilos.xaml"/>
            </ResourceDictionary.MergedDictionaries>
            
            <!-- Converters -->
            <helpers:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter"/>
            <BooleanToVisibilityConverter x:Key="BoolToVis"/>
        </ResourceDictionary>
    </Window.Resources>

    <!-- Marco principal -->
    <Border CornerRadius="8"
            Background="{StaticResource BrushFondo}"
            BorderBrush="{StaticResource BrushPrincipal}"
            BorderThickness="2">

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="50"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="60"/>
            </Grid.RowDefinitions>

            <!-- Header -->
            <Border Grid.Row="0" 
                    Background="{StaticResource BrushPrincipal}" 
                    CornerRadius="6,6,0,0">
                <Grid>
                    <TextBlock Text="✏️ EDITAR ORDEN DE CONTEO" 
                               FontSize="16" 
                               FontWeight="Bold" 
                               Foreground="White"
                               HorizontalAlignment="Center"
                               VerticalAlignment="Center"/>
                    <!-- Botón cerrar -->
                    <Button Content="✕" 
                            Width="30" 
                            Height="30"
                            HorizontalAlignment="Right"
                            VerticalAlignment="Center"
                            Margin="0,0,10,0"
                            Style="{StaticResource EstiloBotonPrincipal}"
                            Command="{Binding CancelarCommand}"
                            FontSize="14"/>
                </Grid>
            </Border>

            <!-- Contenido principal -->
            <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" Margin="20">
                <StackPanel>
                    <!-- Información básica -->
                    <GroupBox Header="📝 Información Básica" Margin="0,0,0,15">
                        <Grid Margin="15">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <!-- Título -->
                            <StackPanel Grid.Row="0" Grid.ColumnSpan="2" Margin="0,0,0,10">
                                <TextBlock Text="Título *" FontWeight="Bold" Margin="0,0,0,5"/>
                                <TextBox Text="{Binding Titulo, UpdateSourceTrigger=PropertyChanged}"
                                         Height="35"
                                         FontSize="14"
                                         Padding="8"
                                         BorderThickness="1"
                                         BorderBrush="{StaticResource BrushInputBorde}"/>
                            </StackPanel>

                           <!-- Tipo de Conteo -->
                            <StackPanel Grid.Row="1" Grid.Column="0" Margin="0,0,10,10">
                                <TextBlock Text="Tipo de Conteo *" FontWeight="Bold" Margin="0,0,0,5"/>
                                <StackPanel Orientation="Horizontal">
                                    <RadioButton Content="Por Ubicación" 
                                               IsChecked="{Binding EsConteoUbicacion}"
                                               GroupName="TipoConteo"
                                               Margin="0,0,15,0"
                                               VerticalAlignment="Center"/>
                                    <RadioButton Content="Por Artículo" 
                                               
                                               GroupName="TipoConteo"
                                               VerticalAlignment="Center"/>
                                </StackPanel>
                            </StackPanel>

                            <!-- Prioridad -->
                            <StackPanel Grid.Row="1" Grid.Column="1" Margin="10,0,0,10">
                                <TextBlock Text="Prioridad" FontWeight="Bold" Margin="0,0,0,5"/>
                                <ComboBox ItemsSource="{Binding PrioridadesDisponibles}"
                                          DisplayMemberPath="Texto"
                                          SelectedItem="{Binding PrioridadSeleccionada}"
                                          Height="35"
                                          FontSize="14"
                                          Padding="8"/>
                            </StackPanel>

                            <!-- Almacén -->
                            <StackPanel Grid.Row="2" Grid.Column="0" Margin="0,0,10,10"
                                       Visibility="{Binding MostrarConteoUbicacion, Converter={StaticResource BoolToVis}}">
                                <TextBlock Text="Almacén" FontWeight="Bold" Margin="0,0,0,5"/>
                                <ComboBox ItemsSource="{Binding AlmacenesDisponibles}"
                                          DisplayMemberPath="DescripcionCombo"
                                          SelectedItem="{Binding AlmacenSeleccionado}"
                                          Height="35"
                                          FontSize="14"
                                          Padding="8"/>
                            </StackPanel>

                            <!-- Operario -->
                            <StackPanel Grid.Row="2" Grid.Column="1" Margin="10,0,0,10">
                                <TextBlock Text="Operario Asignado *" FontWeight="Bold" Margin="0,0,0,5"/>
                                <ComboBox ItemsSource="{Binding OperariosDisponibles}"
                                          DisplayMemberPath="NombreCompleto"
                                          SelectedItem="{Binding OperarioSeleccionado}"
                                          Height="35"
                                          FontSize="14"
                                          Padding="8"/>
                            </StackPanel>

                            <!-- Fecha -->
                            <StackPanel Grid.Row="4" Grid.ColumnSpan="2" Margin="0,0,0,0">
                                <TextBlock Text="Fecha Planificada" FontWeight="Bold" Margin="0,0,0,5"/>
                                <DatePicker SelectedDate="{Binding FechaPlan}"
                                           Height="35"
                                           FontSize="14"/>
                            </StackPanel>

                        </Grid>
                    </GroupBox>

                    <!-- Filtros específicos -->
                    <GroupBox Header="🎯 Filtros de Conteo" Margin="0,0,0,15">
                        <Grid Margin="15">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <!-- Información sobre filtros opcionales -->
                            <TextBlock Grid.Row="0" Grid.ColumnSpan="4" 
                                       Text="ℹ️ Los filtros son opcionales. Selecciona solo los que necesites. Si no seleccionas nada, se hará conteo de todo el almacén."
                                       FontSize="11" 
                                       Foreground="#6C757D" 
                                       FontStyle="Italic" 
                                       Margin="0,0,0,10"
                                       TextWrapping="Wrap"
                                       Visibility="{Binding MostrarConteoUbicacion, Converter={StaticResource BoolToVis}}"/>

                            <!-- CheckBox para elegir modo -->
                            <Border Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="4"
                                    Background="#F8F9FA"
                                    BorderBrush="#E9ECEF"
                                    BorderThickness="1"
                                    CornerRadius="6"
                                    Padding="12"
                                    Margin="0,0,0,10"
                                    Visibility="{Binding MostrarConteoUbicacion, Converter={StaticResource BoolToVis}}">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="🎯" FontSize="16" VerticalAlignment="Center" Margin="0,0,8,0"/>
                                    <CheckBox Content="Usar ubicación directa (en lugar de filtros secuenciales)"
                                              IsChecked="{Binding UsarUbicacionDirecta}"
                                              FontWeight="SemiBold"
                                              Foreground="#495057"
                                              VerticalAlignment="Center"/>
                                </StackPanel>
                            </Border>

                            <!-- Filtros por ubicación secuencial -->
                            <Border Grid.Row="2" Grid.Column="0" 
                                    Background="#FFFFFF"
                                    BorderBrush="#E9ECEF"
                                    BorderThickness="1"
                                    CornerRadius="6"
                                    Padding="10"
                                    Margin="0,0,5,10"
                                    Visibility="{Binding MostrarFiltrosSecuenciales, Converter={StaticResource BoolToVis}}">
                                <StackPanel>
                                    <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                                        <TextBlock Text="🏢" FontSize="14" VerticalAlignment="Center" Margin="0,0,6,0"/>
                                        <TextBlock Text="Pasillo" FontWeight="SemiBold" Foreground="#495057"/>
                                        <TextBlock Text=" (opcional)" FontSize="11" Foreground="#6C757D" FontStyle="Italic"/>
                                    </StackPanel>
                                    <ComboBox ItemsSource="{Binding PasillosDisponibles}"
                                              SelectedItem="{Binding Pasillo}"
                                              Height="32"
                                              FontSize="13"
                                              Padding="8"
                                              IsEditable="False"
                                              BorderBrush="#CED4DA"
                                              Background="White"/>
                                </StackPanel>
                            </Border>

                            <Border Grid.Row="2" Grid.Column="1" 
                                    Background="#FFFFFF"
                                    BorderBrush="#E9ECEF"
                                    BorderThickness="1"
                                    CornerRadius="6"
                                    Padding="10"
                                    Margin="5,0,5,10"
                                    Visibility="{Binding MostrarFiltrosSecuenciales, Converter={StaticResource BoolToVis}}">
                                <StackPanel>
                                    <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                                        <TextBlock Text="📚" FontSize="14" VerticalAlignment="Center" Margin="0,0,6,0"/>
                                        <TextBlock Text="Estantería" FontWeight="SemiBold" Foreground="#495057"/>
                                        <TextBlock Text=" (opcional)" FontSize="11" Foreground="#6C757D" FontStyle="Italic"/>
                                    </StackPanel>
                                    <ComboBox ItemsSource="{Binding EstanteriasDisponibles}"
                                              SelectedItem="{Binding Estanteria}"
                                              Height="32"
                                              FontSize="13"
                                              Padding="8"
                                              IsEditable="False"
                                              BorderBrush="#CED4DA"
                                              Background="White"
                                              IsEnabled="{Binding EstanteriaHabilitada}"/>
                                </StackPanel>
                            </Border>

                            <Border Grid.Row="2" Grid.Column="2" 
                                    Background="#FFFFFF"
                                    BorderBrush="#E9ECEF"
                                    BorderThickness="1"
                                    CornerRadius="6"
                                    Padding="10"
                                    Margin="5,0,5,10"
                                    Visibility="{Binding MostrarFiltrosSecuenciales, Converter={StaticResource BoolToVis}}">
                                <StackPanel>
                                    <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                                        <TextBlock Text="📏" FontSize="14" VerticalAlignment="Center" Margin="0,0,6,0"/>
                                        <TextBlock Text="Altura" FontWeight="SemiBold" Foreground="#495057"/>
                                        <TextBlock Text=" (opcional)" FontSize="11" Foreground="#6C757D" FontStyle="Italic"/>
                                    </StackPanel>
                                    <ComboBox ItemsSource="{Binding AlturasDisponibles}"
                                              SelectedItem="{Binding Altura}"
                                              Height="32"
                                              FontSize="13"
                                              Padding="8"
                                              IsEditable="False"
                                              BorderBrush="#CED4DA"
                                              Background="White"
                                              IsEnabled="{Binding AlturaHabilitada}"/>
                                </StackPanel>
                            </Border>

                            <Border Grid.Row="2" Grid.Column="3" 
                                    Background="#FFFFFF"
                                    BorderBrush="#E9ECEF"
                                    BorderThickness="1"
                                    CornerRadius="6"
                                    Padding="10"
                                    Margin="5,0,0,10"
                                    Visibility="{Binding MostrarFiltrosSecuenciales, Converter={StaticResource BoolToVis}}">
                                <StackPanel>
                                    <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                                        <TextBlock Text="📍" FontSize="14" VerticalAlignment="Center" Margin="0,0,6,0"/>
                                        <TextBlock Text="Posición" FontWeight="SemiBold" Foreground="#495057"/>
                                        <TextBlock Text=" (opcional)" FontSize="11" Foreground="#6C757D" FontStyle="Italic"/>
                                    </StackPanel>
                                    <ComboBox ItemsSource="{Binding PosicionesDisponibles}"
                                              SelectedItem="{Binding Posicion}"
                                              Height="32"
                                              FontSize="13"
                                              Padding="8"
                                              IsEditable="False"
                                              BorderBrush="#CED4DA"
                                              Background="White"
                                              IsEnabled="{Binding PosicionHabilitada}"/>
                                </StackPanel>
                            </Border>

                            <!-- Ubicación Directa -->
                            <Border Grid.Row="3" Grid.Column="0" Grid.ColumnSpan="4"
                                    Background="#E3F2FD"
                                    BorderBrush="#2196F3"
                                    BorderThickness="1"
                                    CornerRadius="6"
                                    Padding="12"
                                    Margin="0,0,0,10"
                                    Visibility="{Binding UsarUbicacionDirecta, Converter={StaticResource BoolToVis}}">
                                <StackPanel>
                                    <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                                        <TextBlock Text="🎯" FontSize="16" VerticalAlignment="Center" Margin="0,0,8,0"/>
                                        <TextBlock Text="Ubicación Directa" FontWeight="SemiBold" Foreground="#1976D2"/>
                                        <TextBlock Text=" (opcional)" FontSize="11" Foreground="#1976D2" FontStyle="Italic"/>
                                    </StackPanel>
                                    <ComboBox ItemsSource="{Binding UbicacionesDisponibles}"
                                              SelectedItem="{Binding UbicacionDirecta}"
                                              Height="32"
                                              FontSize="13"
                                              Padding="8"
                                              IsEditable="True"
                                              BorderBrush="#2196F3"
                                              Background="White"
                                              Foreground="#1976D2"/>
                                </StackPanel>
                            </Border>

                            <!-- Filtro por artículo -->
                            <StackPanel Grid.Row="4" Grid.ColumnSpan="4" Margin="0,0,0,10"
                                       Visibility="{Binding MostrarConteoArticulo, Converter={StaticResource BoolToVis}}">
                                <TextBlock Text="Buscar Artículo" FontWeight="Bold" Margin="0,0,0,5"/>
                                <TextBlock Text="ℹ️ Se buscará el artículo en todos los almacenes donde tenga stock" 
                                           FontSize="12" 
                                           Foreground="#6C757D" 
                                           FontStyle="Italic" 
                                           Margin="0,0,0,10"/>
                                
                                <!-- Campo de búsqueda con botón -->
                                <Grid Margin="0,0,0,10">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    
                                    <TextBox Grid.Column="0"
                                             Text="{Binding ArticuloBuscado, UpdateSourceTrigger=PropertyChanged}"
                                             Height="35"
                                             FontSize="14"
                                             Padding="8"
                                             Margin="0,0,10,0"/>
                                    
                                    <Button Grid.Column="1"
                                            Content="🔍 Buscar"
                                            Command="{Binding BuscarArticuloCommand}"
                                            Style="{StaticResource EstiloBotonPrincipal}"
                                            Width="100"
                                            Height="35"
                                            FontSize="12"/>
                                </Grid>

                                <!-- Lista desplegable para múltiples resultados -->
                                <StackPanel Visibility="{Binding MostrarListaArticulos, Converter={StaticResource BoolToVis}}"
                                           Margin="0,0,0,10">
                                    <TextBlock Text="Selecciona el artículo:" FontWeight="Bold" Margin="0,0,0,5" FontSize="12"/>
                                    <ComboBox ItemsSource="{Binding ArticulosEncontrados}"
                                              SelectedItem="{Binding ArticuloSeleccionado}"
                                              Height="35"
                                              FontSize="12">
                                        <ComboBox.ItemTemplate>
                                            <DataTemplate>
                                                <StackPanel Orientation="Horizontal">
                                                    <TextBlock Text="{Binding CodigoArticulo}" FontWeight="Bold" Margin="0,0,10,0"/>
                                                    <TextBlock Text="-" Margin="0,0,5,0"/>
                                                    <TextBlock Text="{Binding DescripcionArticulo}" TextTrimming="CharacterEllipsis"/>
                                                </StackPanel>
                                            </DataTemplate>
                                        </ComboBox.ItemTemplate>
                                    </ComboBox>
                                </StackPanel>

                                <!-- Información del artículo seleccionado -->
                                <Border Visibility="{Binding MostrarInfoArticulo, Converter={StaticResource BoolToVis}}"
                                        Background="#F8F9FA"
                                        BorderBrush="#DEE2E6"
                                        BorderThickness="1"
                                        CornerRadius="4"
                                        Padding="10">
                                    <StackPanel>
                                        <TextBlock Text="✅ Artículo seleccionado:" FontWeight="Bold" Foreground="#198754" Margin="0,0,0,5"/>
                                        <StackPanel Orientation="Horizontal" Margin="0,0,0,3">
                                            <TextBlock Text="Código: " FontWeight="Bold"/>
                                            <TextBlock Text="{Binding ArticuloSeleccionado.CodigoArticulo}" FontFamily="Consolas"/>
                                        </StackPanel>
                                        <StackPanel Orientation="Horizontal">
                                            <TextBlock Text="Descripción: " FontWeight="Bold"/>
                                            <TextBlock Text="{Binding ArticuloSeleccionado.DescripcionArticulo}" TextWrapping="Wrap"/>
                                        </StackPanel>
                                    </StackPanel>
                                </Border>
                            </StackPanel>

                            <!-- Comentario -->
                            <StackPanel Grid.Row="5" Grid.ColumnSpan="4" Margin="0,0,0,0">
                                <TextBlock Text="Comentarios" FontWeight="Bold" Margin="0,0,0,5"/>
                                <TextBox Text="{Binding Comentario, UpdateSourceTrigger=PropertyChanged}"
                                         Height="60"
                                         FontSize="14"
                                         Padding="8"
                                         TextWrapping="Wrap"
                                         AcceptsReturn="True"
                                         VerticalScrollBarVisibility="Auto"/>
                            </StackPanel>
                        </Grid>
                    </GroupBox>

                    <!-- Información de estado -->
                    <StackPanel Visibility="{Binding IsCargando, Converter={StaticResource BoolToVis}}"
                               Orientation="Horizontal"
                               Margin="0,10,0,0">
                        <ProgressBar Width="20" Height="20" 
                                     IsIndeterminate="True" 
                                     Margin="0,0,10,0"/>
                        <TextBlock Text="{Binding MensajeEstado}" 
                                   VerticalAlignment="Center"
                                   Foreground="{StaticResource BrushSecundario}"
                                   FontStyle="Italic"/>
                    </StackPanel>
                </StackPanel>
            </ScrollViewer>

            <!-- Botones de acción -->
            <Border Grid.Row="2" BorderThickness="0,1,0,0" BorderBrush="{StaticResource BrushSecundario}">
                <StackPanel Orientation="Horizontal" 
                           HorizontalAlignment="Right" 
                           VerticalAlignment="Center"
                           Margin="20,10">
                    <Button Content="Cancelar"
                            Command="{Binding CancelarCommand}"
                            Style="{StaticResource EstiloBotonSecundario}"
                            Width="100"
                            Height="35"
                            Margin="0,0,10,0"/>
                    <Button Content="Actualizar Orden"
                            Command="{Binding ActualizarOrdenCommand}"
                            Style="{StaticResource EstiloBotonPrincipal}"
                            Width="140"
                            Height="35"
                            IsEnabled="{Binding PuedeActualizarOrden}"/>
                </StackPanel>
            </Border>
        </Grid>
    </Border>
</Window>
