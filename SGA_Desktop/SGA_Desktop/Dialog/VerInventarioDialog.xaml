<Window x:Class="SGA_Desktop.Dialog.VerInventarioDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="clr-namespace:SGA_Desktop.ViewModels"
        xmlns:helpers="clr-namespace:SGA_Desktop.Helpers"
        xmlns:sys="clr-namespace:System;assembly=mscorlib"
        Title="DETALLES DEL INVENTARIO"
        Width="1400"
        Height="900"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent">

    <!-- 1) DataContext -->
    <Window.DataContext>
        <vm:VerInventarioDialogViewModel />
    </Window.DataContext>

    <!-- 2) Recursos y Estilos -->
    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="pack://application:,,,/SGA_Desktop;component/Resources/Estilos.xaml"/>
            </ResourceDictionary.MergedDictionaries>

            <!-- Converters -->
            <BooleanToVisibilityConverter x:Key="BoolToVisibilityConverter"/>
            <helpers:EstadoToBrushConverter x:Key="EstadoToBrushConverter"/>
            <helpers:AjusteFinalColorConverter x:Key="AjusteFinalColorConverter"/>
            <helpers:AjusteFinalTextConverter x:Key="AjusteFinalTextConverter"/>
            <helpers:BoolToBrushConverter x:Key="BoolToBrushConverter"/>
            
            <!-- Proxy para acceder al ViewModel desde los DataTemplates -->
            <helpers:BindingProxy x:Key="VmProxy" Data="{Binding}" />
        </ResourceDictionary>
    </Window.Resources>

    <!-- 3) Marco redondeado con fondo y bordes -->
    <Border CornerRadius="8"
            Background="{StaticResource BrushFondo}"
            BorderBrush="{StaticResource BrushPrincipal}"
            BorderThickness="2">

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="60"/>
                <RowDefinition/>
                <RowDefinition Height="60"/>
            </Grid.RowDefinitions>

            <!-- Header -->
            <Border Grid.Row="0" 
                    Background="{StaticResource BrushPrincipal}" 
                    CornerRadius="6,6,0,0">
                <TextBlock Text="DETALLES DEL INVENTARIO" 
                           FontSize="16" 
                           FontWeight="Bold" 
                           Foreground="White"
                           HorizontalAlignment="Center"
                           VerticalAlignment="Center"/>
            </Border>

            <!-- Contenido principal -->
            <Grid Grid.Row="1" Margin="25,25,25,25">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Panel de información del inventario -->
                <Border Grid.Row="0" 
                        BorderBrush="{StaticResource BrushSecundario}" 
                        BorderThickness="1" 
                        CornerRadius="4"
                        Margin="0,0,0,15">
                    <Grid Margin="15">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <!-- ID Inventario -->
                        <StackPanel Grid.Column="0" Margin="0,0,15,0">
                            <TextBlock Text="ID Inventario:" 
                                       FontWeight="Bold" 
                                       Foreground="{StaticResource BrushPrincipal}"
                                       Margin="0,0,0,5"/>
                            <TextBlock Text="{Binding Inventario.IdInventarioCorto}" 
                                       FontFamily="Consolas" 
                                       FontWeight="Bold" 
                                       FontSize="14" 
                                       Foreground="{StaticResource BrushPrincipal}"/>
                        </StackPanel>

                        <!-- Almacén -->
                        <StackPanel Grid.Column="1" Margin="0,0,15,0">
                            <TextBlock Text="Almacén:" 
                                       FontWeight="Bold" 
                                       Foreground="{StaticResource BrushPrincipal}"
                                       Margin="0,0,0,5"/>
                            <TextBlock Text="{Binding Inventario.CodigoAlmacen}" 
                                       FontWeight="Bold" 
                                       FontSize="14" 
                                       Foreground="{StaticResource BrushPrincipal}"/>
                        </StackPanel>

                        <!-- Tipo -->
                        <StackPanel Grid.Column="2" Margin="0,0,15,0">
                            <TextBlock Text="Tipo:" 
                                       FontWeight="Bold" 
                                       Foreground="{StaticResource BrushPrincipal}"
                                       Margin="0,0,0,5"/>
                            <TextBlock Text="{Binding Inventario.TipoInventarioFormateado}" 
                                       FontWeight="Bold" 
                                       FontSize="14" 
                                       Foreground="{StaticResource BrushPrincipal}"/>
                        </StackPanel>

                        <!-- Estado -->
                        <StackPanel Grid.Column="3">
                            <TextBlock Text="Estado:" 
                                       FontWeight="Bold" 
                                       Foreground="{StaticResource BrushPrincipal}"
                                       Margin="0,0,0,5"/>
                            <Border Background="#F8F9FA" 
                                    BorderBrush="#DEE2E6" 
                                    BorderThickness="1" 
                                    CornerRadius="3" 
                                    Padding="6,3">
                                <TextBlock Text="{Binding Inventario.EstadoFormateado}" 
                                           FontWeight="SemiBold" 
                                           FontSize="12" 
                                           HorizontalAlignment="Center">
                                    <TextBlock.Style>
                                        <Style TargetType="TextBlock">
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding Inventario.Estado}" Value="ABIERTO">
                                                    <Setter Property="Foreground" Value="#198754"/>
                                                </DataTrigger>
                                                <DataTrigger Binding="{Binding Inventario.Estado}" Value="EN_CONTEO">
                                                    <Setter Property="Foreground" Value="#0D6EFD"/>
                                                </DataTrigger>
                                                <DataTrigger Binding="{Binding Inventario.Estado}" Value="CONSOLIDADO">
                                                    <Setter Property="Foreground" Value="#FD7E14"/>
                                                </DataTrigger>
                                                <DataTrigger Binding="{Binding Inventario.Estado}" Value="CERRADO">
                                                    <Setter Property="Foreground" Value="#6C757D"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </TextBlock.Style>
                                </TextBlock>
                            </Border>
                        </StackPanel>
                    </Grid>
                </Border>

                <!-- Lista de líneas del inventario -->
                <Border Grid.Row="1" 
                        BorderBrush="{StaticResource BrushSecundario}" 
                        BorderThickness="1" 
                        CornerRadius="4">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <!-- Título y estado de carga -->
                        <Grid Grid.Row="0" Margin="20,20,20,15">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <TextBlock Grid.Column="0"
                                       Text="📋 Líneas del Inventario" 
                                       FontWeight="Bold" 
                                       Foreground="{StaticResource BrushPrincipal}"/>

                            <!-- Estado de carga -->
                            <StackPanel Grid.Column="1" 
                                        Orientation="Horizontal" 
                                        Visibility="{Binding IsCargando, Converter={StaticResource BoolToVisibilityConverter}}">
                                <ProgressBar Width="20" Height="20" 
                                             IsIndeterminate="True" 
                                             Margin="0,0,10,0"/>
                                <TextBlock Text="{Binding MensajeEstado}" 
                                           VerticalAlignment="Center"
                                           Foreground="{StaticResource BrushSecundario}"
                                           FontStyle="Italic"/>
                            </StackPanel>
                        </Grid>

                        <!-- Cards de líneas -->
                        <ScrollViewer Grid.Row="1" 
                                      VerticalScrollBarVisibility="Auto" 
                                      HorizontalScrollBarVisibility="Disabled"
                                      Margin="20,0,20,20">
                            <StackPanel>
                                <!-- Header de columnas -->
                                <Border Background="{StaticResource BrushSecundario}" 
                                        BorderBrush="{StaticResource BrushIntermedio}" 
                                        BorderThickness="0,0,0,1"
                                        Padding="12,8"
                                        Margin="0,0,0,8">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="120"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="120"/>
                                            <ColumnDefinition Width="100"/>
                                            <ColumnDefinition Width="100"/>
                                            <ColumnDefinition Width="100"/>
                                            <ColumnDefinition Width="100"/>
                                            <ColumnDefinition Width="100"/>
                                            <ColumnDefinition Width="100"/>
                                            <ColumnDefinition Width="120"/>
                                        </Grid.ColumnDefinitions>
                                        
                                        <TextBlock Grid.Column="0" Text="Artículo" FontWeight="Bold" FontSize="11" Foreground="{StaticResource BrushPrincipal}"/>
                                        <TextBlock Grid.Column="1" Text="Descripción" FontWeight="Bold" FontSize="11" Foreground="{StaticResource BrushPrincipal}" Margin="8,0"/>
                                        <TextBlock Grid.Column="2" Text="Ubicación" FontWeight="Bold" FontSize="11" Foreground="{StaticResource BrushPrincipal}" HorizontalAlignment="Center"/>
                                        <TextBlock Grid.Column="3" Text="Partida" FontWeight="Bold" FontSize="11" Foreground="{StaticResource BrushPrincipal}" HorizontalAlignment="Center"/>
                                        <TextBlock Grid.Column="4" Text="Caducidad" FontWeight="Bold" FontSize="11" Foreground="{StaticResource BrushPrincipal}" HorizontalAlignment="Center"/>
                                        <TextBlock Grid.Column="5" Text="Stock Teórico" FontWeight="Bold" FontSize="11" Foreground="{StaticResource BrushPrincipal}" HorizontalAlignment="Center"/>
                                        <TextBlock Grid.Column="6" Text="Stock Actual" FontWeight="Bold" FontSize="11" Foreground="{StaticResource BrushPrincipal}" HorizontalAlignment="Center"/>
                                        <TextBlock Grid.Column="7" Text="Stock Inventariado" FontWeight="Bold" FontSize="11" Foreground="{StaticResource BrushPrincipal}" HorizontalAlignment="Center"/>
                                        <TextBlock Grid.Column="8" Text="Ajuste Final" FontWeight="Bold" FontSize="11" Foreground="{StaticResource BrushPrincipal}" HorizontalAlignment="Center"/>
                                        <TextBlock Grid.Column="9" Text="Palets" FontWeight="Bold" FontSize="11" Foreground="{StaticResource BrushPrincipal}" HorizontalAlignment="Center"/>
                                    </Grid>
                                </Border>

                                <!-- Lista de líneas -->
                                <ItemsControl ItemsSource="{Binding LineasInventario}">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Border Background="White"
                                                CornerRadius="6" 
                                                Padding="12" 
                                                Margin="0,0,0,8" 
                                                BorderThickness="1" 
                                                BorderBrush="{StaticResource BrushIntermedio}">
                                            <Border.Effect>
                                                <DropShadowEffect BlurRadius="4" ShadowDepth="1" Opacity="0.1"/>
                                            </Border.Effect>
                                            
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="120"/>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="120"/>
                                                    <ColumnDefinition Width="100"/>
                                                    <ColumnDefinition Width="100"/>
                                                    <ColumnDefinition Width="100"/>
                                                    <ColumnDefinition Width="100"/>
                                                    <ColumnDefinition Width="100"/>
                                                    <ColumnDefinition Width="100"/>
                                                    <ColumnDefinition Width="120"/>
                                                </Grid.ColumnDefinitions>
                                                
                                                <!-- Artículo -->
                                                <TextBlock Grid.Column="0" 
                                                           Text="{Binding CodigoArticulo}" 
                                                           FontWeight="Bold" 
                                                           FontSize="13" 
                                                           Foreground="{StaticResource BrushPrincipal}"
                                                           VerticalAlignment="Center"/>
                                                
                                                <!-- Descripción -->
                                                <TextBlock Grid.Column="1" 
                                                           Text="{Binding DescripcionArticulo}" 
                                                           FontSize="12" 
                                                           Foreground="Black"
                                                           TextWrapping="Wrap"
                                                           VerticalAlignment="Center"
                                                           Margin="8,0"/>
                                                
                                                <!-- Ubicación -->
                                                <TextBlock Grid.Column="2" 
                                                           Text="{Binding CodigoUbicacion}" 
                                                           FontSize="12" 
                                                           Foreground="Black"
                                                           VerticalAlignment="Center"
                                                           HorizontalAlignment="Center"/>
                                                
                                                <!-- Partida -->
                                                <TextBlock Grid.Column="3" 
                                                           Text="{Binding Partida}" 
                                                           FontSize="12" 
                                                           Foreground="Black"
                                                           VerticalAlignment="Center"
                                                           HorizontalAlignment="Center"/>
                                                
                                                <!-- Caducidad -->
                                                <TextBlock Grid.Column="4" 
                                                           Text="{Binding FechaCaducidad, StringFormat=dd/MM/yyyy}" 
                                                           FontSize="12" 
                                                           Foreground="Black"
                                                           VerticalAlignment="Center"
                                                           HorizontalAlignment="Center"/>
                                                
                                                <!-- Stock Teórico -->
                                                <TextBlock Grid.Column="5" 
                                                           Text="{Binding StockTeorico, StringFormat=F4}" 
                                                           FontSize="12" 
                                                           FontWeight="Bold"
                                                           Foreground="Red"
                                                           VerticalAlignment="Center"
                                                           HorizontalAlignment="Center"/>
                                                
                                                <!-- Stock Actual -->
                                                <TextBlock Grid.Column="6" 
                                                           Text="{Binding StockActual, StringFormat=F4}" 
                                                           FontSize="12" 
                                                           FontWeight="Bold"
                                                           Foreground="Green"
                                                           VerticalAlignment="Center"
                                                           HorizontalAlignment="Center"/>
                                                
                                                <!-- Stock Contado -->
                                                <TextBlock Grid.Column="7" 
                                                           Text="{Binding StockContado, StringFormat=F4}" 
                                                           FontSize="12" 
                                                           FontWeight="Bold"
                                                           Foreground="Blue"
                                                           VerticalAlignment="Center"
                                                           HorizontalAlignment="Center"/>
                                                
                                                <!-- Ajuste Final -->
                                                <TextBlock Grid.Column="8" 
                                                           Text="{Binding AjusteFinal, Converter={StaticResource AjusteFinalTextConverter}}" 
                                                           FontSize="12" 
                                                           FontWeight="Bold"
                                                           VerticalAlignment="Center"
                                                           HorizontalAlignment="Center">
                                                    <TextBlock.Style>
                                                        <Style TargetType="TextBlock">
                                                            <Style.Triggers>
                                                                <!-- Sin ajuste (0 o null) -->
                                                                <DataTrigger Binding="{Binding AjusteFinal}" Value="0">
                                                                    <Setter Property="Foreground" Value="Gray"/>
                                                                </DataTrigger>
                                                                <DataTrigger Binding="{Binding AjusteFinal}" Value="{x:Null}">
                                                                    <Setter Property="Foreground" Value="Gray"/>
                                                                </DataTrigger>
                                                                <!-- Ajuste positivo (sobrestock) -->
                                                                <DataTrigger Binding="{Binding AjusteFinal}" Value="{x:Static sys:Decimal.MaxValue}">
                                                                    <Setter Property="Foreground" Value="Green"/>
                                                                </DataTrigger>
                                                                <!-- Ajuste negativo (faltante) -->
                                                                <DataTrigger Binding="{Binding AjusteFinal}" Value="{x:Static sys:Decimal.MinValue}">
                                                                    <Setter Property="Foreground" Value="Red"/>
                                                                </DataTrigger>
                                                            </Style.Triggers>
                                                            <!-- Color por defecto basado en el valor -->
                                                            <Setter Property="Foreground" Value="{Binding AjusteFinal, Converter={StaticResource AjusteFinalColorConverter}}"/>
                                                        </Style>
                                                    </TextBlock.Style>
                                                </TextBlock>
                                                
                                                <!-- Palets -->
                                                <TextBlock Grid.Column="9" 
                                                           Text="{Binding PaletsResumen}" 
                                                           FontSize="10" 
                                                           Foreground="{Binding TienePalets, Converter={StaticResource BoolToBrushConverter}, ConverterParameter='DarkBlue|Gray'}"
                                                           TextWrapping="Wrap"
                                                           HorizontalAlignment="Center"
                                                           VerticalAlignment="Center"
                                                           MaxWidth="110"/>
                                            </Grid>
                                        </Border>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                            </StackPanel>
                        </ScrollViewer>
                    </Grid>
                </Border>
            </Grid>

            <!-- Footer con botones -->
            <Border Grid.Row="2" 
                    Background="{StaticResource BrushSecundario}" 
                    CornerRadius="0,0,6,6"
                    BorderThickness="0,1,0,0"
                    BorderBrush="{StaticResource BrushIntermedio}">
                <Grid Margin="15,8">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <!-- Información -->
                    <StackPanel Grid.Column="0" 
                                Orientation="Horizontal" 
                                VerticalAlignment="Center">
                        <TextBlock Text="{Binding TotalLineas}" 
                                   FontWeight="Bold" 
                                   VerticalAlignment="Center"
                                   Foreground="{StaticResource BrushPrincipal}"/>
                    </StackPanel>

                    <!-- Botón Exportar a Excel -->
                    <Button Grid.Column="1"
                            Content="📊 EXPORTAR A EXCEL"
                            Command="{Binding ExportarAExcelCommand}"
                            Style="{StaticResource EstiloBotonPrincipal}"
                            Width="160" Height="35"
                            Margin="0,0,10,0"/>

                    <!-- Botón Cerrar -->
                    <Button Grid.Column="2"
                            Content="❌ CERRAR"
                            Command="{Binding CerrarCommand}"
                            Style="{StaticResource EstiloBotonSecundario}"
                            Width="120" Height="35"/>
                </Grid>
            </Border>
        </Grid>
    </Border>
</Window> 