<Window x:Class="SGA_Desktop.Dialog.ConfirmationDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Confirmar"
        WindowStartupLocation="CenterScreen"
        SizeToContent="WidthAndHeight"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        ShowInTaskbar="False"
        ResizeMode="NoResize">


    <!-- Contenedor principal con esquinas redondeadas -->
    <Border CornerRadius="8"
          Background="{StaticResource BrushFondo}"
          BorderBrush="{StaticResource BrushPrincipal}"
          BorderThickness="2"
          Padding="20"
          SnapsToDevicePixels="True">

        <StackPanel>

            <!-- Icono de advertencia -->
            <TextBlock x:Name="IconText" FontFamily="Segoe MDL2 Assets"
                 Text="{Binding IconGlyph, RelativeSource={RelativeSource AncestorType=Window}}"
                 FontSize="48"
                 Foreground="{StaticResource BrushPrincipal}"
                 HorizontalAlignment="Center"
                 Margin="0,0,0,16"/>

            <!-- Título dinámico -->
            <TextBlock x:Name="TitleText"
                 FontFamily="{StaticResource FuentePrincipal}"
                 FontSize="24"
                 FontWeight="Bold"
                 Foreground="{StaticResource BrushPrincipal}"
                 TextAlignment="Center"
                 Margin="0,0,0,12"/>

            <!-- Mensaje dinámico -->
            <TextBlock x:Name="MessageText"
                 FontFamily="{StaticResource FuentePrincipal}"
                 FontSize="16"
                 Foreground="Black"
                 TextWrapping="Wrap"
                 Margin="0,0,0,20"/>

            <!-- Botones -->
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <!-- El “No” pisa el margin del estilo y pone sólo margen a la derecha -->
                <Button x:Name="NoButton"
          Content="No"
          Width="80"
          Margin="0,0,40,0"             
                    Style="{StaticResource EstiloBotonPrincipal}"
          Click="NoButton_Click"/>

                <Button x:Name="YesButton"
          Content="Sí"
          Width="80"
          Margin="0"                 
                        Style="{StaticResource EstiloBotonPrincipal}"
          Click="YesButton_Click"/>
            </StackPanel>
        </StackPanel>
    </Border>
</Window>
