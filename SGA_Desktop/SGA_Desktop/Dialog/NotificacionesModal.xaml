<Window x:Class="SGA_Desktop.Dialog.NotificacionesModal"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Notificaciones"
        Width="600" Height="650"
        WindowStartupLocation="CenterOwner"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        ShowInTaskbar="False"
        ResizeMode="CanResize">

    <Border CornerRadius="8"
            Background="{StaticResource BrushFondo}"
            BorderBrush="{StaticResource BrushPrincipal}"
            BorderThickness="2"
            SnapsToDevicePixels="True">

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            
            <!-- Header -->
            <Border Grid.Row="0" 
                    Background="{StaticResource BrushPrincipal}" 
                    Padding="20,15"
                    CornerRadius="6,6,0,0">
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="ðŸ””"
                               FontSize="24"
                               Foreground="White"
                               VerticalAlignment="Center"
                               Margin="0,0,10,0"/>
                    <TextBlock Text="Notificaciones" 
                               Foreground="White" 
                               FontSize="20" 
                               FontWeight="Bold"
                               FontFamily="{StaticResource FuentePrincipal}"
                               VerticalAlignment="Center"/>
                    <!-- Contador de notificaciones con diseÃ±o compacto -->
                    <Border Background="White" 
                            CornerRadius="16"
                            Padding="12,6"
                            Margin="15,0,0,0"
                            VerticalAlignment="Center"
                            Visibility="{Binding TieneNotificaciones, Converter={StaticResource BooleanToVisibilityConverter}}">
                        <StackPanel Orientation="Horizontal">
                            <!-- Contador verde -->
                            <StackPanel Orientation="Horizontal" Margin="0,0,8,0"
                                        Visibility="{Binding ContadorNotificacionesPositivas, Converter={StaticResource IntToVisibilityConverter}}">
                                <TextBlock Text="âœ“" 
                                           Foreground="#4CAF50" 
                                           FontSize="12" 
                                           FontWeight="Bold"
                                           Margin="0,0,4,0"
                                           VerticalAlignment="Center"/>
                                <TextBlock Text="{Binding ContadorNotificacionesPositivas}" 
                                           Foreground="#4CAF50" 
                                           FontSize="12"
                                           FontWeight="Bold"
                                           FontFamily="{StaticResource FuentePrincipal}"
                                           VerticalAlignment="Center"/>
                            </StackPanel>
                            
                            <!-- Separador -->
                            <TextBlock Text="â€¢" 
                                       Foreground="White" 
                                       FontSize="14" 
                                       Margin="0,0,8,0"
                                       VerticalAlignment="Center"
                                       Visibility="{Binding SeparadorVisible, Converter={StaticResource BooleanToVisibilityConverter}}"/>
                            
                            <!-- Contador rojo -->
                            <StackPanel Orientation="Horizontal" Margin="0,0,8,0"
                                        Visibility="{Binding ContadorNotificacionesNegativas, Converter={StaticResource IntToVisibilityConverter}}">
                                <TextBlock Text="âš " 
                                           Foreground="#F44336" 
                                           FontSize="12" 
                                           FontWeight="Bold"
                                           Margin="0,0,4,0"
                                           VerticalAlignment="Center"/>
                                <TextBlock Text="{Binding ContadorNotificacionesNegativas}" 
                                           Foreground="#F44336" 
                                           FontSize="12"
                                           FontWeight="Bold"
                                           FontFamily="{StaticResource FuentePrincipal}"
                                           VerticalAlignment="Center"/>
                            </StackPanel>
                            
                            <!-- Separador -->
                            <TextBlock Text="â€¢" 
                                       Foreground="White" 
                                       FontSize="14" 
                                       Margin="0,0,8,0"
                                       VerticalAlignment="Center"
                                       Visibility="{Binding SeparadorInfoVisible, Converter={StaticResource BooleanToVisibilityConverter}}"/>
                            
                            <!-- Contador azul (info) -->
                            <StackPanel Orientation="Horizontal"
                                        Visibility="{Binding ContadorNotificacionesInfo, Converter={StaticResource IntToVisibilityConverter}}">
                                <TextBlock Text="â„¹" 
                                           Foreground="#2196F3" 
                                           FontSize="12" 
                                           FontWeight="Bold"
                                           Margin="0,0,4,0"
                                           VerticalAlignment="Center"/>
                                <TextBlock Text="{Binding ContadorNotificacionesInfo}" 
                                           Foreground="#2196F3" 
                                           FontSize="12"
                                           FontWeight="Bold"
                                           FontFamily="{StaticResource FuentePrincipal}"
                                           VerticalAlignment="Center"/>
                            </StackPanel>
                        </StackPanel>
                    </Border>
                </StackPanel>
            </Border>
            
            <!-- Lista de notificaciones -->
            <ScrollViewer Grid.Row="1" 
                          VerticalScrollBarVisibility="Auto"
                          HorizontalScrollBarVisibility="Disabled"
                          Padding="20,15">
                <ItemsControl ItemsSource="{Binding Notificaciones}">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border Background="{Binding ColorFondo}" 
                                    Margin="0,0,0,10" 
                                    Padding="15" 
                                    CornerRadius="8"
                                    BorderBrush="{Binding Color, Converter={StaticResource ColorToBrushConverter}}"
                                    BorderThickness="1">
                                <StackPanel>
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>
                                        
                                        <TextBlock Grid.Column="0"
                                                   Text="{Binding Titulo}" 
                                                   FontWeight="Bold" 
                                                   FontSize="15"
                                                   FontFamily="{StaticResource FuentePrincipal}"
                                                   Foreground="{Binding Color, Converter={StaticResource ColorToBrushConverter}}"/>
                                        
                                        <Button Grid.Column="1"
                                                Content="âœ“"
                                                Command="{Binding DataContext.MarcarComoLeidaCommand, RelativeSource={RelativeSource AncestorType=ItemsControl}}"
                                                CommandParameter="{Binding}"
                                                Style="{StaticResource EstiloBotonSecundario}"
                                                Width="30" Height="30"
                                                FontSize="14"
                                                Margin="5,0"
                                                ToolTip="Marcar como leÃ­da"
                                                IsEnabled="{Binding Leida, Converter={StaticResource InverseBooleanConverter}}"/>
                                        
                                        <TextBlock Grid.Column="2"
                                                   Text="{Binding FechaCreacion, StringFormat='{}{0:HH:mm}'}" 
                                                   Foreground="Gray" 
                                                   FontSize="12" 
                                                   FontFamily="{StaticResource FuentePrincipal}"
                                                   HorizontalAlignment="Right"/>
                                    </Grid>
                                    <TextBlock Text="{Binding Mensaje}" 
                                               FontSize="13" 
                                               TextWrapping="Wrap" 
                                               Margin="0,5,0,0"
                                               FontFamily="{StaticResource FuentePrincipal}"
                                               Foreground="Black"/>
                                    
                                    <!-- QUITADO: InformaciÃ³n adicional del traspaso -->
                                    
                                </StackPanel>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                    
                    <!-- Mensaje cuando no hay notificaciones -->
                    <ItemsControl.Style>
                        <Style TargetType="ItemsControl">
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding Notificaciones.Count}" Value="0">
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="ItemsControl">
                                                <StackPanel HorizontalAlignment="Center" 
                                                            VerticalAlignment="Center"
                                                            Margin="40">
                                                    <TextBlock Text="ðŸ””"
                                                               FontSize="48"
                                                               Foreground="{StaticResource BrushSecundario1}"
                                                               HorizontalAlignment="Center"
                                                               Margin="0,0,0,15"/>
                                                    <TextBlock Text="No hay notificaciones pendientes"
                                                               FontFamily="{StaticResource FuentePrincipal}"
                                                               FontSize="16"
                                                               Foreground="{StaticResource BrushSecundario1}"
                                                               HorizontalAlignment="Center"
                                                               FontWeight="SemiBold"/>
                                                </StackPanel>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </ItemsControl.Style>
                </ItemsControl>
            </ScrollViewer>
            
            <!-- Footer con botones -->
            <Border Grid.Row="2" 
                    Background="White" 
                    Padding="20,15"
                    CornerRadius="0,0,6,6"
                    BorderBrush="#E0E0E0"
                    BorderThickness="0,1,0,0">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    
                    <!-- Indicador de estado -->
                    <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                        <TextBlock Text="ðŸ”„" 
                                   Visibility="{Binding EstaCargando, Converter={StaticResource BooleanToVisibilityConverter}}"
                                   FontSize="16" Margin="0,0,5,0"/>
                        <TextBlock Text="{Binding MensajeError}" 
                                   Foreground="Red" 
                                   FontSize="12"
                                   FontFamily="{StaticResource FuentePrincipal}"
                                   Visibility="{Binding HayErrorConexion, Converter={StaticResource BooleanToVisibilityConverter}}"/>
                    </StackPanel>
                    
                    <!-- Botones -->
                    <StackPanel Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Right">
                        <Button Content="ðŸ”„" 
                                Command="{Binding RecargarNotificacionesCommand}"
                                Style="{StaticResource EstiloBotonSecundario}"
                                Width="35" Height="35"
                                FontSize="14"
                                Margin="0,0,10,0"
                                ToolTip="Recargar notificaciones"/>
                        <Button Content="Marcar todas como leÃ­das" 
                                Command="{Binding MarcarTodasLeidasCommand}"
                                Style="{StaticResource EstiloBotonSecundario}"
                                Margin="0,0,10,0"
                                IsEnabled="{Binding TieneNotificaciones}"/>
                        <Button Content="Cerrar" 
                                Command="{Binding CerrarCommand}"
                                Style="{StaticResource EstiloBotonPrincipal}"
                                Width="80"/>
                    </StackPanel>
                </Grid>
            </Border>
        </Grid>
    </Border>
</Window>
