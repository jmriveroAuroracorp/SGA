<Window x:Class="SGA_Desktop.Dialog.NotificacionesModal"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Notificaciones"
        Width="600" Height="650"
        WindowStartupLocation="CenterOwner"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        ShowInTaskbar="False"
        ResizeMode="CanResize">

    <Border CornerRadius="8"
            Background="{StaticResource BrushFondo}"
            BorderBrush="{StaticResource BrushPrincipal}"
            BorderThickness="2"
            SnapsToDevicePixels="True">

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            
            <!-- Header -->
            <Border Grid.Row="0" 
                    Background="{StaticResource BrushPrincipal}" 
                    Padding="20,15"
                    CornerRadius="6,6,0,0">
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="ðŸ””"
                               FontSize="24"
                               Foreground="White"
                               VerticalAlignment="Center"
                               Margin="0,0,10,0"/>
                    <TextBlock Text="Notificaciones" 
                               Foreground="White" 
                               FontSize="20" 
                               FontWeight="Bold"
                               FontFamily="{StaticResource FuentePrincipal}"
                               VerticalAlignment="Center"/>
                    <StackPanel Orientation="Horizontal" 
                                Margin="15,0,0,0"
                                VerticalAlignment="Center">
                        
                        <!-- Contador de notificaciones positivas (verde) con etiqueta -->
                        <Border Background="#4CAF50"
                                CornerRadius="12"
                                Padding="8,4"
                                Margin="0,0,8,0"
                                Visibility="{Binding ContadorNotificacionesPositivas, Converter={StaticResource IntToVisibilityConverter}}">
                            <TextBlock Text="{Binding ContadorNotificacionesPositivas}" 
                                       Foreground="White" 
                                       FontSize="14"
                                       FontWeight="Bold"
                                       FontFamily="{StaticResource FuentePrincipal}"/>
                        </Border>
                        
                        <!-- Contador de notificaciones negativas (rojo) con etiqueta -->
                        <Border Background="#F44336"
                                CornerRadius="12"
                                Padding="8,4"
                                Visibility="{Binding ContadorNotificacionesNegativas, Converter={StaticResource IntToVisibilityConverter}}">
                            <TextBlock Text="{Binding ContadorNotificacionesNegativas}" 
                                       Foreground="White" 
                                       FontSize="14"
                                       FontWeight="Bold"
                                       FontFamily="{StaticResource FuentePrincipal}"/>
                        </Border>
                    </StackPanel>
                </StackPanel>
            </Border>
            
            <!-- Lista de notificaciones -->
            <ScrollViewer Grid.Row="1" 
                          VerticalScrollBarVisibility="Auto"
                          HorizontalScrollBarVisibility="Disabled"
                          Padding="20,15">
                <ItemsControl ItemsSource="{Binding Notificaciones}">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border Background="{Binding ColorFondo}" 
                                    Margin="0,0,0,10" 
                                    Padding="15" 
                                    CornerRadius="8"
                                    BorderBrush="{Binding Color, Converter={StaticResource ColorToBrushConverter}}"
                                    BorderThickness="1">
                                <StackPanel>
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>
                                        
                                        <TextBlock Grid.Column="0"
                                                   Text="{Binding Titulo}" 
                                                   FontWeight="Bold" 
                                                   FontSize="15"
                                                   FontFamily="{StaticResource FuentePrincipal}"
                                                   Foreground="{Binding Color, Converter={StaticResource ColorToBrushConverter}}"/>
                                        
                                        <TextBlock Grid.Column="1"
                                                   Text="{Binding FechaCreacion, StringFormat='{}{0:HH:mm}'}" 
                                                   Foreground="Gray" 
                                                   FontSize="12" 
                                                   FontFamily="{StaticResource FuentePrincipal}"
                                                   HorizontalAlignment="Right"/>
                                    </Grid>
                                    <TextBlock Text="{Binding Mensaje}" 
                                               FontSize="13" 
                                               TextWrapping="Wrap" 
                                               Margin="0,5,0,0"
                                               FontFamily="{StaticResource FuentePrincipal}"
                                               Foreground="Black"/>
                                    
                                    <!-- QUITADO: InformaciÃ³n adicional del traspaso -->
                                    
                                    <!-- Tipo de traspaso -->
                                    <StackPanel Orientation="Horizontal" Margin="0,6,0,0">
                                        <TextBlock Text="Tipo: " 
                                                   FontSize="11"
                                                   FontWeight="SemiBold"
                                                   Foreground="#95A5A6"
                                                   FontFamily="{StaticResource FuentePrincipal}"/>
                                        <TextBlock Text="{Binding TipoTraspasoTexto, StringFormat='Traspaso de {0}'}" 
                                                   FontSize="11"
                                                   Foreground="#95A5A6"
                                                   FontFamily="{StaticResource FuentePrincipal}"/>
                                        <TextBlock Text="{Binding IdentificadorPrincipal, StringFormat=' - {0}'}" 
                                                   FontSize="11"
                                                   Foreground="#95A5A6"
                                                   FontFamily="{StaticResource FuentePrincipal}"/>
                                    </StackPanel>
                                </StackPanel>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                    
                    <!-- Mensaje cuando no hay notificaciones -->
                    <ItemsControl.Style>
                        <Style TargetType="ItemsControl">
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding Notificaciones.Count}" Value="0">
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="ItemsControl">
                                                <StackPanel HorizontalAlignment="Center" 
                                                            VerticalAlignment="Center"
                                                            Margin="40">
                                                    <TextBlock Text="ðŸ””"
                                                               FontSize="48"
                                                               Foreground="{StaticResource BrushSecundario1}"
                                                               HorizontalAlignment="Center"
                                                               Margin="0,0,0,15"/>
                                                    <TextBlock Text="No hay notificaciones pendientes"
                                                               FontFamily="{StaticResource FuentePrincipal}"
                                                               FontSize="16"
                                                               Foreground="{StaticResource BrushSecundario1}"
                                                               HorizontalAlignment="Center"
                                                               FontWeight="SemiBold"/>
                                                </StackPanel>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </ItemsControl.Style>
                </ItemsControl>
            </ScrollViewer>
            
            <!-- Footer con botones -->
            <Border Grid.Row="2" 
                    Background="White" 
                    Padding="20,15"
                    CornerRadius="0,0,6,6"
                    BorderBrush="#E0E0E0"
                    BorderThickness="0,1,0,0">
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                    <Button Content="Marcar todas como leÃ­das" 
                            Command="{Binding MarcarTodasLeidasCommand}"
                            Style="{StaticResource EstiloBotonSecundario}"
                            Margin="0,0,10,0"
                            IsEnabled="{Binding TieneNotificaciones}"/>
                    <Button Content="Cerrar" 
                            Command="{Binding CerrarCommand}"
                            Style="{StaticResource EstiloBotonPrincipal}"
                            Width="80"/>
                </StackPanel>
            </Border>
        </Grid>
    </Border>
</Window>
