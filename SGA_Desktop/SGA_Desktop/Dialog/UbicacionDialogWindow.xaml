<Window x:Class="SGA_Desktop.Dialog.UbicacionDialogWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="{Binding DialogTitle}"
        SizeToContent="WidthAndHeight"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent">

    <!-- Carga global de estilos -->
    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="pack://application:,,,/SGA_Desktop;component/Resources/Estilos.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Window.Resources>

    <!-- Contenedor con borde redondeado y fondo -->
    <Border CornerRadius="8"
          Background="{StaticResource BrushFondo}"
          BorderBrush="{StaticResource BrushPrincipal}"
          BorderThickness="2"
          Padding="20"
          SnapsToDevicePixels="True">

        <Grid Margin="0" Cursor="">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <!-- Código -->
                <RowDefinition Height="Auto"/>
                <!-- Descripción -->
                <RowDefinition Height="Auto"/>
                <!-- Pasillo / Estantería -->
                <RowDefinition Height="Auto"/>
                <!-- Altura / Posición -->
                <RowDefinition Height="Auto"/>
                <!-- Temp Min / Temp Max -->
                <RowDefinition Height="Auto"/>
                <!-- Tipo Palet / Habilitada -->
                <RowDefinition Height="Auto"/>
                <!-- Tipo Ubicación -->
                <RowDefinition Height="Auto"/>
                <!-- Botones -->
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="200"/>
                <ColumnDefinition Width="20"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="200"/>
            </Grid.ColumnDefinitions>

            <!-- Código de Ubicación -->
            <TextBlock Grid.Row="0" Grid.Column="0" Text="Código:" 
                 VerticalAlignment="Center" Margin="0,0,8,8"/>
            <TextBox  Grid.Row="0" Grid.Column="1" 
                Text="{Binding CodigoUbicacion, UpdateSourceTrigger=PropertyChanged}" 
                Style="{StaticResource EstiloCajaTexto}"
                Margin="0,0,0,8"/>

            <!-- Descripción -->
            <TextBlock Grid.Row="1" Grid.Column="0" Text="Descripción:" 
                 VerticalAlignment="Center" Margin="0,0,8,8"/>
            <TextBox  Grid.Row="1" Grid.Column="1" 
                Text="{Binding DescripcionUbicacion, UpdateSourceTrigger=PropertyChanged}" 
                Style="{StaticResource EstiloCajaTexto}"
                Margin="0,0,0,8"/>

            <!-- Pasillo y Estantería -->
            <TextBlock Grid.Row="2" Grid.Column="0" Text="Pasillo:" 
                 VerticalAlignment="Center" Margin="0,0,8,8"/>
            <TextBox  Grid.Row="2" Grid.Column="1" Text="{Binding Pasillo}" 
                Style="{StaticResource EstiloCajaTexto}"
                Margin="0,0,8,8"/>
            <TextBlock Grid.Row="2" Grid.Column="3" Text="Estantería:" 
                 VerticalAlignment="Center" Margin="0,0,8,8"/>
            <TextBox  Grid.Row="2" Grid.Column="4" Text="{Binding Estanteria}" 
                Style="{StaticResource EstiloCajaTexto}"
                Margin="0,0,0,8"/>

            <!-- Altura y Posición -->
            <TextBlock Grid.Row="3" Grid.Column="0" Text="Altura:" 
                 VerticalAlignment="Center" Margin="0,0,8,8"/>
            <TextBox  Grid.Row="3" Grid.Column="1" Text="{Binding Altura}" 
                Style="{StaticResource EstiloCajaTexto}"
                Margin="0,0,8,8"/>
            <TextBlock Grid.Row="3" Grid.Column="3" Text="Posición:" 
                 VerticalAlignment="Center" Margin="0,0,8,8"/>
            <TextBox  Grid.Row="3" Grid.Column="4" Text="{Binding Posicion}" 
                Style="{StaticResource EstiloCajaTexto}"
                Margin="0,0,0,8"/>

            <!-- Temperaturas -->
            <TextBlock Grid.Row="4" Grid.Column="0" Text="Temp. Mín (°C):" 
                 VerticalAlignment="Center" Margin="0,0,8,8"/>
            <TextBox  Grid.Row="4" Grid.Column="1" Text="{Binding TemperaturaMin}" 
                Style="{StaticResource EstiloCajaTexto}"
                Margin="0,0,8,8"/>
            <TextBlock Grid.Row="4" Grid.Column="3" Text="Temp. Máx (°C):" 
                 VerticalAlignment="Center" Margin="0,0,8,8"/>
            <TextBox  Grid.Row="4" Grid.Column="4" Text="{Binding TemperaturaMax}" 
                Style="{StaticResource EstiloCajaTexto}"
                Margin="0,0,0,8"/>

            <!-- Tipo de Palet y Habilitada -->
            <TextBlock Grid.Row="5" Grid.Column="0" Text="Tipo Palet:" 
                 VerticalAlignment="Center" Margin="0,0,8,8"/>
            <TextBox  Grid.Row="5" Grid.Column="1" Text="{Binding TipoPaletPermitido}" 
                Style="{StaticResource EstiloCajaTexto}"
                Margin="0,0,8,8"/>
            <CheckBox Grid.Row="5" Grid.Column="3" Content="Activo" 
                IsChecked="{Binding Habilitada}"
                VerticalAlignment="Center" Margin="0,0,0,8"/>

            <!-- Tipo de Ubicación (ComboBox) -->
            <TextBlock Grid.Row="6" Grid.Column="0" Text="Tipo Ubic.:" 
                 VerticalAlignment="Center" Margin="0,0,8,8"/>
            <ComboBox Grid.Row="6" Grid.Column="1"
          ItemsSource="{Binding TiposDisponibles}"
          SelectedValue="{Binding TipoUbicacionId, Mode=TwoWay}"
          SelectedValuePath="TipoUbicacionId"
          DisplayMemberPath="Descripcion"
          Style="{StaticResource EstiloComboBox}"
          Margin="0,0,0,8"/>
            <!-- Botones Guardar/Cancelar -->
            <StackPanel Grid.Row="7" Grid.ColumnSpan="5" 
                  Orientation="Horizontal" 
                  HorizontalAlignment="Right" 
                  Margin="0,20,0,0">
                <Button Content="Cancelar"
                Width="90"
                Margin="0,0,8,0"
                Command="{Binding CancelCommand}"
                Style="{StaticResource EstiloBotonPrincipal}" />
                <Button Content="{Binding SaveButtonText}"
                Width="90"
                Command="{Binding SaveCommand}"
                Style="{StaticResource EstiloBotonPrincipal}" />
            </StackPanel>
        </Grid>
    </Border>
</Window>
