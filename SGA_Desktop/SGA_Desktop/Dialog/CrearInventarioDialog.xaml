<Window x:Class="SGA_Desktop.Dialog.CrearInventarioDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="clr-namespace:SGA_Desktop.ViewModels"
        xmlns:helpers="clr-namespace:SGA_Desktop.Helpers"
        Title="CREACIÓN DE INVENTARIO"
        Width="900"
        Height="600"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent">

    <!-- 1) DataContext -->
    <Window.DataContext>
        <vm:CrearInventarioDialogViewModel />
    </Window.DataContext>

    <!-- 2) Carga de Estilos generales -->
    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="pack://application:,,,/SGA_Desktop;component/Resources/Estilos.xaml"/>
            </ResourceDictionary.MergedDictionaries>
            
            <!-- Converters -->
            <helpers:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter"/>
            <helpers:InverseBoolToVisibilityConverter x:Key="InvertedBoolToVisibilityConverter"/>
            
            <!-- Estilo para items de almacén -->
            <Style x:Key="AlmacenItemStyle" TargetType="Border">
                <Setter Property="Background" Value="Transparent"/>
                <Setter Property="BorderBrush" Value="LightGray"/>
                <Style.Triggers>
                    <DataTrigger Binding="{Binding IsSelected}" Value="True">
                        <Setter Property="Background" Value="LightBlue"/>
                        <Setter Property="BorderBrush" Value="Blue"/>
                    </DataTrigger>
                </Style.Triggers>
            </Style>
        </ResourceDictionary>
    </Window.Resources>

    <!-- 2) Marco redondeado con fondo y bordes -->
    <Border CornerRadius="8"
            Background="{StaticResource BrushFondo}"
            BorderBrush="{StaticResource BrushPrincipal}"
            BorderThickness="2">

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="50"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="60"/>
            </Grid.RowDefinitions>

            <!-- Header -->
            <Border Grid.Row="0" 
                    Background="{StaticResource BrushPrincipal}" 
                    CornerRadius="6,6,0,0">
                <TextBlock Text="CREACIÓN DE INVENTARIO" 
                           FontSize="16" 
                           FontWeight="Bold" 
                           Foreground="White"
                           HorizontalAlignment="Center"
                           VerticalAlignment="Center"/>
            </Border>

            <!-- Contenido principal -->
            <Grid Grid.Row="1" Margin="20">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="350"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Panel izquierdo: Lista de almacenes -->
                <Border Grid.Column="0" 
                        BorderBrush="{StaticResource BrushSecundario}" 
                        BorderThickness="1" 
                        CornerRadius="4"
                        Margin="0,0,10,0">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <!-- Header almacenes con switch -->
                        <StackPanel Grid.Row="0" Margin="10,10,10,5">
                            <TextBlock Text="Almacenes" 
                                       FontWeight="Bold" 
                                       Foreground="{StaticResource BrushPrincipal}"
                                       Margin="0,0,0,5"/>
                            
                                                         <!-- Switch modo multialmacén -->
                             <CheckBox Content="Inventario multialmacén" 
                                       IsChecked="{Binding ModoMultialmacen}"
                                       FontSize="12"
                                       Foreground="Gray"/>
                        </StackPanel>

                        <!-- ComboBox tradicional (modo único) -->
                        <StackPanel Grid.Row="1" 
                                    Margin="10,5,10,10"
                                    Visibility="{Binding ModoMultialmacen, Converter={StaticResource InvertedBoolToVisibilityConverter}}">
                            <ComboBox ItemsSource="{Binding AlmacenesDisponibles}"
                                      SelectedItem="{Binding AlmacenSeleccionado}"
                                      DisplayMemberPath="DescripcionCombo"
                                      Height="35"/>
                                                         <TextBlock Text="{Binding AlmacenSeleccionado.DescripcionCombo, StringFormat='Seleccionado: {0}'}"
                                        FontSize="11"
                                        Foreground="Gray"
                                        Margin="5,5,5,0"/>
                        </StackPanel>

                        <!-- Panel modo múltiple -->
                        <Grid Grid.Row="1" 
                              Margin="5"
                              Visibility="{Binding ModoMultialmacen, Converter={StaticResource BoolToVisibilityConverter}}">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>
                            
                                                         <!-- Resumen de selección -->
                             <TextBlock Grid.Row="0"
                                        Text="{Binding DescripcionAlmacenesSeleccionados}"
                                        FontSize="11"
                                        Foreground="Gray"
                                        Margin="5,0,5,10"
                                        TextWrapping="Wrap"/>
                            
                            <!-- Lista de almacenes -->
                            <ScrollViewer Grid.Row="1"
                                          VerticalScrollBarVisibility="Auto" 
                                          HorizontalScrollBarVisibility="Disabled">
                            <ItemsControl ItemsSource="{Binding AlmacenesDisponibles}">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Border Margin="2" 
                                                Padding="8,6" 
                                                Style="{StaticResource AlmacenItemStyle}"
                                                BorderThickness="2"
                                                CornerRadius="3"
                                                Cursor="Hand"
                                                MouseLeftButtonDown="AlmacenItem_MouseLeftButtonDown">
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="Auto"/>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="Auto"/>
                                                </Grid.ColumnDefinitions>

                                                <!-- Icono almacén -->
                                                <Ellipse Grid.Column="0" 
                                                         Width="16" 
                                                         Height="16" 
                                                         Fill="Green" 
                                                         Margin="0,0,8,0"/>

                                                <!-- Código y descripción -->
                                                <StackPanel Grid.Column="1" 
                                                            Orientation="Horizontal" 
                                                            VerticalAlignment="Center">
                                                    <TextBlock Text="{Binding CodigoAlmacen}" 
                                                               FontWeight="Bold" 
                                                               Margin="0,0,5,0"/>
                                                    <TextBlock Text="{Binding Descripcion}" 
                                                               TextWrapping="Wrap"/>
                                                </StackPanel>

                                                <!-- Indicador seleccionado -->
                                                <TextBlock Grid.Column="2" 
                                                           Text="✓" 
                                                           FontSize="16"
                                                           FontWeight="Bold"
                                                           Foreground="Green"
                                                           VerticalAlignment="Center"
                                                           Visibility="{Binding IsSelected, Converter={StaticResource BoolToVisibilityConverter}}"/>
                                            </Grid>
                                        </Border>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                            </ScrollViewer>
                        </Grid>

                        <!-- Botón marcar/desmarcar todo -->
                        <Button Grid.Row="2" 
                                Content="MARCAR/DESMARCAR TODO" 
                                Style="{StaticResource EstiloBotonSecundario}"
                                Margin="10,5,10,10"
                                Command="{Binding MarcarTodosCommand}"
                                Visibility="{Binding ModoMultialmacen, Converter={StaticResource BoolToVisibilityConverter}}"/>
                    </Grid>
                </Border>

                <!-- Panel derecho: Datos del inventario -->
                <Border Grid.Column="1" 
                        BorderBrush="{StaticResource BrushSecundario}" 
                        BorderThickness="1" 
                        CornerRadius="4"
                        Margin="10,0,0,0">
                    <ScrollViewer VerticalScrollBarVisibility="Auto">
                        <StackPanel Margin="15">
                            <!-- Título datos -->
                            <TextBlock Text="Datos del inventario" 
                                       FontWeight="Bold" 
                                       Foreground="{StaticResource BrushPrincipal}"
                                       Margin="0,0,0,15"/>

                            <!-- Código de inventario -->
                            <StackPanel Margin="0,0,0,10">
                                <TextBlock Text="Código de inventario:" FontWeight="SemiBold" Margin="0,0,0,5"/>
                                <TextBox Text="{Binding CodigoInventario, UpdateSourceTrigger=PropertyChanged}" 
                                         Style="{StaticResource EstiloCajaTexto}" 
                                         Height="35"
                                         MinWidth="200"
                                         MaxLength="30"
                                         HorizontalAlignment="Stretch"/>
                            </StackPanel>

                            <!-- Fecha de inventario -->
                            <StackPanel Margin="0,0,0,10">
                                <TextBlock Text="Fecha de inventario:" FontWeight="SemiBold" Margin="0,0,0,5"/>
                                <DatePicker SelectedDate="{Binding FechaInventario, StringFormat=dd/MM/yyyy}" 
                                            Style="{StaticResource EstiloDatePicker}"
                                            IsEnabled="False"/>
                            </StackPanel>

                            <!-- Incluir artículos -->
                            <StackPanel Margin="0,0,0,10">
                                <TextBlock Text="Incluir artículos:" FontWeight="SemiBold" Margin="0,0,0,5"/>
                                <ComboBox ItemsSource="{Binding OpcionesArticulos}" 
                                          SelectedItem="{Binding ArticulosSeleccionados}"
                                          Style="{StaticResource EstiloComboBox}" 
                                          Height="30"/>
                            </StackPanel>

                            <!-- Valoración -->
                            <StackPanel Margin="0,0,0,10">
                                <TextBlock Text="Valoración:" FontWeight="SemiBold" Margin="0,0,0,5"/>
                                <ComboBox ItemsSource="{Binding OpcionesValoracion}" 
                                          SelectedItem="{Binding ValoracionSeleccionada}"
                                          Style="{StaticResource EstiloComboBox}" 
                                          Height="30"
                                          IsEnabled="False"/>
                            </StackPanel>

                            <!-- Artículos (filtro específico) -->
                            <GroupBox Header="Artículos" Margin="0,0,0,10">
                                <StackPanel Margin="10">
                                    <!-- Checkbox para habilitar filtro de artículo -->
                                    <CheckBox Content="Filtrar por artículo específico" 
                                              IsChecked="{Binding UsarFiltroArticulo}"
                                              FontWeight="SemiBold"
                                              Margin="0,0,0,10"/>

                                    <!-- Panel de búsqueda (visible cuando se activa el filtro) -->
                                    <Grid Visibility="{Binding UsarFiltroArticulo, Converter={StaticResource BoolToVisibilityConverter}}">
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                        </Grid.RowDefinitions>

                                        <!-- Campo de búsqueda -->
                                        <Grid Grid.Row="0" Margin="0,0,0,10">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="Auto"/>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>

                                            <TextBlock Grid.Column="0" 
                                                       Text="Buscar:" 
                                                       VerticalAlignment="Center" 
                                                       Margin="0,0,10,0" 
                                                       FontWeight="SemiBold"/>
                                            <TextBox Grid.Column="1" 
                                                     Text="{Binding ArticuloBuscado, UpdateSourceTrigger=PropertyChanged}" 
                                                     Style="{StaticResource EstiloCajaTexto}" 
                                                     Height="35"
                                                     Margin="0,0,10,0"
                                                     ToolTip="Introduce código (ej: 10000) o descripción (ej: azúcar) del artículo"
                                                     Tag="Código o descripción..."/>
                                            <Button Grid.Column="2" 
                                                    Content="🔍" 
                                                    Height="30" 
                                                    Width="30"
                                                    Command="{Binding BuscarArticuloCommand}"/>
                                        </Grid>

                                        <!-- Lista de resultados -->
                                        <ComboBox Grid.Row="1" 
                                                  ItemsSource="{Binding ArticulosEncontrados}" 
                                                  SelectedItem="{Binding ArticuloSeleccionado}"
                                                  Style="{StaticResource EstiloComboBox}" 
                                                  Height="30"
                                                  Margin="0,0,0,10"
                                                  Visibility="{Binding MostrarListaArticulos, Converter={StaticResource BoolToVisibilityConverter}}">
                                            <ComboBox.ItemTemplate>
                                                <DataTemplate>
                                                    <StackPanel Orientation="Horizontal">
                                                        <TextBlock Text="{Binding CodigoArticulo}" FontWeight="Bold" Margin="0,0,5,0"/>
                                                        <TextBlock Text="-" Margin="0,0,5,0"/>
                                                        <TextBlock Text="{Binding DescripcionArticulo}"/>
                                                    </StackPanel>
                                                </DataTemplate>
                                            </ComboBox.ItemTemplate>
                                        </ComboBox>

                                        <!-- Info del artículo seleccionado -->
                                        <TextBlock Grid.Row="2" 
                                                   Foreground="#2E8B57" 
                                                   FontStyle="Italic"
                                                   Visibility="{Binding MostrarInfoArticulo, Converter={StaticResource BoolToVisibilityConverter}}">
                                            <Run Text="✓ Artículo seleccionado:"/>
                                            <Run Text="{Binding ArticuloSeleccionado.CodigoArticulo}" FontWeight="Bold"/>
                                            <Run Text="-"/>
                                            <Run Text="{Binding ArticuloSeleccionado.DescripcionArticulo}"/>
                                        </TextBlock>
                                    </Grid>

                                    <!-- Separador -->
                                    <Border Height="1" Background="#E0E0E0" Margin="0,10,0,10"/>

                                    <!-- Checkbox para habilitar rango de artículos -->
                                    <CheckBox Content="Usar rango de artículos" 
                                              IsChecked="{Binding UsarRangoArticulos}"
                                              FontWeight="SemiBold"
                                              Margin="0,0,0,10"/>

                                    <!-- Panel de rango de artículos -->
                                    <Grid Visibility="{Binding UsarRangoArticulos, Converter={StaticResource BoolToVisibilityConverter}}">
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                        </Grid.RowDefinitions>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>

                                        <!-- Desde -->
                                        <TextBlock Grid.Row="0" Grid.Column="0" 
                                                   Text="Desde:" 
                                                   VerticalAlignment="Center" 
                                                   Margin="0,0,10,0" 
                                                   FontWeight="SemiBold"/>
                                        <TextBox Grid.Row="0" Grid.Column="1" 
                                                 Text="{Binding ArticuloDesde, UpdateSourceTrigger=PropertyChanged}" 
                                                 Style="{StaticResource EstiloCajaTexto}" 
                                                 Height="35"
                                                 Margin="0,0,15,0"
                                                 ToolTip="Código del artículo inicial del rango (ej: 10000)"/>

                                        <!-- Hasta -->
                                        <TextBlock Grid.Row="0" Grid.Column="2" 
                                                   Text="Hasta:" 
                                                   VerticalAlignment="Center" 
                                                   Margin="0,0,10,0" 
                                                   FontWeight="SemiBold"/>
                                        <TextBox Grid.Row="0" Grid.Column="3" 
                                                 Text="{Binding ArticuloHasta, UpdateSourceTrigger=PropertyChanged}" 
                                                 Style="{StaticResource EstiloCajaTexto}" 
                                                 Height="35"
                                                 ToolTip="Código del artículo final del rango (ej: 10999)"/>

                                        <!-- Info del rango -->
                                        <TextBlock Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="4"
                                                   Foreground="#2E8B57" 
                                                   FontStyle="Italic"
                                                   Margin="0,10,0,0"
                                                   Visibility="{Binding MostrarInfoRango, Converter={StaticResource BoolToVisibilityConverter}}">
                                            <Run Text="📋 Rango seleccionado:"/>
                                            <Run Text="{Binding ArticuloDesde}" FontWeight="Bold"/>
                                            <Run Text="→"/>
                                            <Run Text="{Binding ArticuloHasta}" FontWeight="Bold"/>
                                        </TextBlock>
                                    </Grid>
                                </StackPanel>
                            </GroupBox>

                            <!-- Ubicaciones (rango) -->
                            <GroupBox Header="Ubicaciones" Margin="0,0,0,10">
                                <StackPanel Margin="10">
                                    <!-- Checkbox para habilitar rangos -->
                                    <CheckBox Content="Especificar rango de ubicaciones" 
                                              FontWeight="SemiBold"
                                              Margin="0,0,0,10">
                                        <CheckBox.Style>
                                            <Style TargetType="CheckBox">
                                                <Setter Property="IsChecked" Value="{Binding UsarRangoUbicaciones}"/>
                                                <Setter Property="IsEnabled" Value="True"/>
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding ModoMultialmacen}" Value="True">
                                                        <Setter Property="IsEnabled" Value="False"/>
                                                        <Setter Property="IsChecked" Value="False"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </CheckBox.Style>
                                    </CheckBox>
                                    
                                    <!-- Información para multialmacén -->
                                    <Border Background="#E3F2FD" 
                                            BorderBrush="#2196F3" 
                                            BorderThickness="1" 
                                            CornerRadius="4" 
                                            Padding="8"
                                            Margin="0,0,0,10"
                                            Visibility="{Binding ModoMultialmacen, Converter={StaticResource BoolToVisibilityConverter}}">
                                        <StackPanel Orientation="Horizontal">
                                            <TextBlock Text="ℹ️" 
                                                       FontSize="14" 
                                                       VerticalAlignment="Top"
                                                       Margin="0,0,8,0"/>
                                            <TextBlock TextWrapping="Wrap" 
                                                       FontSize="12" 
                                                       Foreground="#1976D2">
                                                <Run Text="Inventario multialmacén:"/>
                                                <Run Text="Los rangos de ubicaciones no están disponibles. El inventario incluirá todas las ubicaciones con stock de los almacenes seleccionados."/>
                                            </TextBlock>
                                        </StackPanel>
                                    </Border>

                                    <!-- Rangos por dimensiones -->
                                    <Grid Visibility="{Binding UsarRangoUbicaciones, Converter={StaticResource BoolToVisibilityConverter}}">
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                        </Grid.RowDefinitions>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>

                                        <!-- Pasillo -->
                                        <TextBlock Grid.Row="0" Grid.Column="0" Text="Pasillo:" FontWeight="SemiBold" VerticalAlignment="Center" Margin="0,0,15,0"/>
                                        <ComboBox Grid.Row="0" Grid.Column="1" 
                                                  ItemsSource="{Binding PasillosDisponibles}" 
                                                  SelectedItem="{Binding PasilloDesde}"
                                                  Style="{StaticResource EstiloComboBox}" 
                                                  Height="24"
                                                  VerticalAlignment="Center"/>
                                        <TextBlock Grid.Row="0" Grid.Column="2" Text="a" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="10,0"/>
                                        <ComboBox Grid.Row="0" Grid.Column="3" 
                                                  ItemsSource="{Binding PasillosDisponibles}" 
                                                  SelectedItem="{Binding PasilloHasta}"
                                                  Style="{StaticResource EstiloComboBox}" 
                                                  Height="24"
                                                  VerticalAlignment="Center"/>

                                        <!-- Estantería -->
                                        <CheckBox Grid.Row="1" Grid.Column="0" 
                                                  Content="Estantería:" 
                                                  IsChecked="{Binding UsarEstanteria}"
                                                  FontWeight="SemiBold" 
                                                  VerticalAlignment="Center" 
                                                  Margin="0,10,15,0"
                                                  HorizontalAlignment="Left"/>
                                        <ComboBox Grid.Row="1" Grid.Column="1" 
                                                  ItemsSource="{Binding EstanteriasDisponibles}" 
                                                  SelectedItem="{Binding EstanteriaDesde}"
                                                  Style="{StaticResource EstiloComboBox}" 
                                                  Height="24"
                                                  VerticalAlignment="Center"
                                                  IsEnabled="{Binding EstanteriaHabilitada}"/>
                                        <TextBlock Grid.Row="1" Grid.Column="2" Text="a" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="10,10,10,0"/>
                                        <ComboBox Grid.Row="1" Grid.Column="3" 
                                                  ItemsSource="{Binding EstanteriasDisponibles}" 
                                                  SelectedItem="{Binding EstanteriaHasta}"
                                                  Style="{StaticResource EstiloComboBox}" 
                                                  Height="24"
                                                  VerticalAlignment="Center"
                                                  IsEnabled="{Binding EstanteriaHabilitada}"/>

                                        <!-- Altura -->
                                        <CheckBox Grid.Row="2" Grid.Column="0" 
                                                  Content="Altura:" 
                                                  IsChecked="{Binding UsarAltura}"
                                                  FontWeight="SemiBold" 
                                                  VerticalAlignment="Center" 
                                                  Margin="0,10,15,0"
                                                  HorizontalAlignment="Left"/>
                                        <ComboBox Grid.Row="2" Grid.Column="1" 
                                                  ItemsSource="{Binding AlturasDisponibles}" 
                                                  SelectedItem="{Binding AlturaDesde}"
                                                  Style="{StaticResource EstiloComboBox}" 
                                                  Height="24"
                                                  VerticalAlignment="Center"
                                                  IsEnabled="{Binding AlturaHabilitada}"/>
                                        <TextBlock Grid.Row="2" Grid.Column="2" Text="a" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="10,10,10,0"/>
                                        <ComboBox Grid.Row="2" Grid.Column="3" 
                                                  ItemsSource="{Binding AlturasDisponibles}" 
                                                  SelectedItem="{Binding AlturaHasta}"
                                                  Style="{StaticResource EstiloComboBox}" 
                                                  Height="24"
                                                  VerticalAlignment="Center"
                                                  IsEnabled="{Binding AlturaHabilitada}"/>

                                        <!-- Posición -->
                                        <CheckBox Grid.Row="3" Grid.Column="0" 
                                                  Content="Posición:" 
                                                  IsChecked="{Binding UsarPosicion}"
                                                  FontWeight="SemiBold" 
                                                  VerticalAlignment="Center" 
                                                  Margin="0,10,15,0"
                                                  HorizontalAlignment="Left"/>
                                        <ComboBox Grid.Row="3" Grid.Column="1" 
                                                  ItemsSource="{Binding PosicionesDisponibles}" 
                                                  SelectedItem="{Binding PosicionDesde}"
                                                  Style="{StaticResource EstiloComboBox}" 
                                                  Height="24"
                                                  VerticalAlignment="Center"
                                                  IsEnabled="{Binding PosicionHabilitada}"/>
                                        <TextBlock Grid.Row="3" Grid.Column="2" Text="a" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="10,10,10,0"/>
                                        <ComboBox Grid.Row="3" Grid.Column="3" 
                                                  ItemsSource="{Binding PosicionesDisponibles}" 
                                                  SelectedItem="{Binding PosicionHasta}"
                                                  Style="{StaticResource EstiloComboBox}" 
                                                  Height="24"
                                                  VerticalAlignment="Center"
                                                  IsEnabled="{Binding PosicionHabilitada}"/>

                                        <!-- Ubicaciones especiales -->
                                        <CheckBox Grid.Row="4" Grid.Column="0" Grid.ColumnSpan="5"
                                                  Content="Incluir ubicaciones especiales (sin ubicar, ND, etc.)" 
                                                  IsChecked="{Binding IncluirUbicacionesEspeciales}"
                                                  FontWeight="SemiBold" 
                                                  VerticalAlignment="Center" 
                                                  Margin="0,10,0,0"
                                                  HorizontalAlignment="Left"/>

                                    </Grid>
                                </StackPanel>
                            </GroupBox>

                            <!-- Unidades a 0 -->
                            <CheckBox Content="Unidades a 0" 
                                      IsChecked="{Binding IncluirUnidadesCero}"
                                      Margin="0,0,0,10"/>



                            <!-- Comentarios -->
                            <StackPanel Margin="0,0,0,10">
                                <TextBlock Text="Comentarios:" FontWeight="SemiBold" Margin="0,0,0,5"/>
                                <TextBox Text="{Binding Comentarios, UpdateSourceTrigger=PropertyChanged}" 
                                         Style="{StaticResource EstiloCajaTexto}" 
                                         Height="60" 
                                         TextWrapping="Wrap" 
                                         AcceptsReturn="True" 
                                         VerticalScrollBarVisibility="Auto"/>
                            </StackPanel>
                        </StackPanel>
                    </ScrollViewer>
                </Border>
            </Grid>

            <!-- Botones -->
            <Border Grid.Row="2" 
                    Background="#F5F5F5" 
                    CornerRadius="0,0,6,6">
                <StackPanel Orientation="Horizontal" 
                            HorizontalAlignment="Right" 
                            VerticalAlignment="Center" 
                            Margin="20,0">
                    <Button Content="CANCELAR" 
                            Width="100" 
                            Height="35" 
                            Margin="0,0,10,0" 
                            IsCancel="True" 
                            Style="{StaticResource EstiloBotonSecundario}"/>
                    <Button Content="ACEPTAR" 
                            Width="100" 
                            Height="35" 
                            IsDefault="True" 
                            Command="{Binding CrearCommand}" 
                            Style="{StaticResource EstiloBotonPrincipal}" 
                            IsEnabled="{Binding PuedeCrear}"/>
                </StackPanel>
            </Border>
        </Grid>
    </Border>
</Window> 